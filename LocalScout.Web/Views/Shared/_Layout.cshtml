@using Microsoft.AspNetCore.Identity
@using LocalScout.Domain.Entities
@using LocalScout.Infrastructure.Constants
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LocalScout</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <script src="~/tailwind.config.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/custom-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)

    <style>
        /* Ensure the search input transition works smoothly */
        .search-input-transition {
            transition: all 0.3s ease;
        }
        .search-input-transition:focus {
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.15);
            border-color: #3b82f6;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100 bg-gray-50">

    <nav class="navbar navbar-expand-lg navbar-light bg-white/95 backdrop-blur-sm border-bottom shadow-sm sticky-top z-50">
        <div class="container-fluid px-4">

            <a class="navbar-brand d-flex align-items-center group" asp-area="" asp-controller="Home" asp-action="Index">
                <div class="relative">
                    <img src="~/images/LocalScoutLogo.png" alt="LocalScout Logo"
                         class="relative z-10 transition-transform group-hover:scale-105 duration-300"
                         style="height: 42px; width: auto;" />
                </div>
                <div class="ml-3 d-flex flex-column justify-content-center">
                    <span class="text-2xl font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-blue-700 to-cyan-500 localscout-logo leading-none">
                        LocalScout
                    </span>
                </div>
            </a>

            <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">

                @if (!User.IsInRole(RoleNames.Admin))
                {
                    <div class="mx-auto my-2 my-lg-0 w-100" style="max-width: 500px;">
                        <form class="w-100" role="search" asp-controller="Home" asp-action="Search" method="get">
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-search text-gray-400"></i>
                                </div>
                                <input type="search" name="query" 
                                       class="block w-full pl-10 pr-12 py-2.5 text-gray-700 bg-gray-50 border border-gray-200 rounded-full focus:bg-white outline-none search-input-transition" 
                                       placeholder="Search services (e.g. Plumber)..." aria-label="Search">
                                <button type="submit" class="absolute inset-y-0 right-0 flex items-center pr-2">
                                    <div class="bg-blue-600 hover:bg-blue-700 text-white rounded-full p-1.5 w-8 h-8 d-flex align-items-center justify-content-center transition-colors shadow-sm">
                                        <i class="fas fa-arrow-right text-xs"></i>
                                    </div>
                                </button>
                            </div>
                        </form>
                    </div>
                }
                else
                {
                    <div class="mr-auto"></div>
                }

                <ul class="navbar-nav ml-auto align-items-center gap-2"
                    style="visibility: visible !important; display: flex !important;">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <partial name="_NotificationPartial" />
                    }
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    <main class="flex-shrink-0">
        @RenderBody()
    </main>

    <footer class="bg-white border-top mt-auto py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <img src="~/images/LocalScoutLogo.png" style="height: 30px; width: auto;" class="mr-2 opacity-75" />
                        <h5 class="text-primary font-weight-bold mb-0">LocalScout</h5>
                    </div>
                    <p class="text-muted small leading-relaxed">
                        Connecting you with trusted local service providers in your area. Find the help you need, when you need it.
                    </p>
                </div>
                <div class="col-md-4 mb-4">
                    <h6 class="font-weight-bold text-dark mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted hover:text-primary transition-colors">About Us</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted hover:text-primary transition-colors">Services</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted hover:text-primary transition-colors">Contact</a></li>
                        <li class="mb-2">
                            <a asp-area="" asp-controller="Home" asp-action="Privacy"
                               class="text-decoration-none text-muted hover:text-primary transition-colors">Privacy Policy</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h6 class="font-weight-bold text-dark mb-3">Connect With Us</h6>
                    <div class="d-flex gap-2">
                        <a href="#" class="btn btn-outline-secondary btn-sm rounded-circle w-9 h-9 d-flex align-items-center justify-content-center"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="btn btn-outline-secondary btn-sm rounded-circle w-9 h-9 d-flex align-items-center justify-content-center"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="btn btn-outline-secondary btn-sm rounded-circle w-9 h-9 d-flex align-items-center justify-content-center"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="btn btn-outline-secondary btn-sm rounded-circle w-9 h-9 d-flex align-items-center justify-content-center"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-4 opacity-25">
            <div class="text-center text-muted small">
                <p class="mb-0">&copy; @DateTime.Now.Year - LocalScout - All Rights Reserved</p>
            </div>
        </div>
    </footer>

    @if (SignInManager.IsSignedIn(User))
    {
        <partial name="_NotificationModals" />
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @if (SignInManager.IsSignedIn(User))
    {
        <script src="~/js/notification.js" asp-append-version="true"></script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>