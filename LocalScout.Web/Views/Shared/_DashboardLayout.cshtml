@using LocalScout.Infrastructure.Constants
@using Microsoft.AspNetCore.Identity
@using LocalScout.Domain.Entities
@inject UserManager<ApplicationUser> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LocalScout Dashboard</title>

    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/adminlte/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/adminlte/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/adminlte/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">

    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css" />

    <link rel="stylesheet" href="~/css/custom-theme.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed">
    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav align-items-center">
                <li class="nav-item">
                    <a class="nav-link text-primary" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto align-items-center">
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-bell"></i>
                        <span class="badge badge-warning navbar-badge">15</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <span class="dropdown-item dropdown-header">15 Notifications</span>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-envelope mr-2"></i> 4 new messages
                            <span class="float-right text-muted text-sm">3 mins</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>
                    </div>
                </li>

                <partial name="_LoginPartial" />
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a asp-controller="Home" asp-action="Index" class="brand-link">
                <img src="~/images/LocalScoutLogo.png" alt="LocalScout Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">LocalScout</span>
            </a>

            <div class="sidebar">

                <div class="user-panel mt-2 pb-3 mb-3 d-flex">
                    <div class="image">
                        @if (!string.IsNullOrEmpty(currentUser?.ProfilePictureUrl))
                        {
                            <img src="@currentUser.ProfilePictureUrl" class="img-circle elevation-2" alt="User Image"
                                 style="width: 2.1rem; height: 2.1rem; object-fit: cover;">
                        }
                        else
                        {
                            <img src="~/adminlte/dist/img/user2-160x160.jpg" class="img-circle elevation-2"
                                 alt="User Image">
                        }
                    </div>
                    <div class="info">
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="d-block">
                            @(currentUser?.FullName ?? User.Identity?.Name ?? "Guest")
                        </a>
                    </div>
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false">

                        @{
                            var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
                            var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();

                            var isUserMenuOpen = currentController == "Admin" && (currentAction == "ActiveUsers" ||
                            currentAction == "BlockedUsers");
                            var isProviderMenuOpen = currentController == "Admin" && (currentAction == "ActiveProviders" ||
                            currentAction == "BlockedProviders" || currentAction == "VerificationRequests");
                            var isCategoryMenuOpen = currentController == "ServiceCategory" && (currentAction == "ActiveCategories" ||
                            currentAction == "InactiveCategories" || currentAction == "CategoryRequests");
                        }

                        <li class="nav-item">
                            <a asp-controller="Admin" asp-action="Index"
                               class="nav-link @(currentAction == "Index" && currentController == "Admin" ? "active" : "")">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Admin Dashboard</p>
                            </a>
                        </li>

                        <li class="nav-item @(isUserMenuOpen ? "menu-open" : "")">
                            <a href="#" class="nav-link @(isUserMenuOpen ? "active" : "")">
                                <i class="nav-icon fas fa-users"></i>
                                <p>
                                    User Management
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="ActiveUsers"
                                       class="nav-link @(currentAction == "ActiveUsers" ? "active" : "")">
                                        <i class="far fa-circle nav-icon text-success"></i>
                                        <p>Active Users</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="BlockedUsers"
                                       class="nav-link @(currentAction == "BlockedUsers" ? "active" : "")">
                                        <i class="far fa-circle nav-icon text-danger"></i>
                                        <p>Blocked Users</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item @(isProviderMenuOpen ? "menu-open" : "")">
                            <a href="#" class="nav-link @(isProviderMenuOpen ? "active" : "")">
                                <i class="nav-icon fas fa-user-tie"></i>
                                <p>
                                    Provider Management
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="ActiveProviders"
                                       class="nav-link @(currentAction == "ActiveProviders" ? "active" : "")">
                                        <i class="far fa-circle nav-icon text-success"></i>
                                        <p>Active Providers</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="BlockedProviders"
                                       class="nav-link @(currentAction == "BlockedProviders" ? "active" : "")">
                                        <i class="far fa-circle nav-icon text-danger"></i>
                                        <p>Blocked Providers</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="VerificationRequests"
                                       class="nav-link @(currentAction == "VerificationRequests" ? "active" : "")">
                                        <i class="far fa-circle nav-icon text-info"></i>
                                        <p>Verification Requests</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item @(isCategoryMenuOpen ? "menu-open" : "")">
                            <a href="#" class="nav-link @(isCategoryMenuOpen ? "active" : "")">
                                <i class="nav-icon fas fa-sitemap"></i>
                                <p>
                                    Service Categories
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="ServiceCategory" asp-action="ActiveCategories"
                                       class="nav-link @(currentAction == "ActiveCategories" ? "active" : "")">
                                        <i class="far fa-circle nav-icon text-success"></i>
                                        <p>Active Categories</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="ServiceCategory" asp-action="InactiveCategories"
                                       class="nav-link @(currentAction == "InactiveCategories" ? "active" : "")">
                                        <i class="far fa-circle nav-icon text-warning"></i>
                                        <p>Inactive Categories</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="ServiceCategory" asp-action="CategoryRequests"
                                       class="nav-link @(currentAction == "CategoryRequests" ? "active" : "")">
                                        <i class="far fa-circle nav-icon text-info"></i>
                                        <p>Category Requests</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <section class="content p-3">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <footer class="main-footer">
            <strong>Copyright &copy; 2025 <a href="#">LocalScout</a>.</strong>
            All rights reserved.
        </footer>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminlte/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="~/adminlte/dist/js/adminlte.min.js"></script>

    <!-- DataTables & Plugins -->
    <script src="~/adminlte/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminlte/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/adminlte/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/adminlte/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="~/adminlte/plugins/sweetalert2/sweetalert2.min.js"></script>

    <!-- Ajax Helper -->
    <script src="~/js/ajax-client.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>