@using LocalScout.Infrastructure.Constants
@using Microsoft.AspNetCore.Identity
@using LocalScout.Domain.Entities
@inject UserManager<ApplicationUser> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Neighbourly Dashboard</title>

    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <script src="~/tailwind.config.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/adminlte/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/adminlte/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/adminlte/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">

    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css" />

    <link rel="stylesheet" href="~/css/custom-theme.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)

    <style>
        .search-input-transition {
            transition: all 0.3s ease;
        }

            .search-input-transition:focus {
                box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.15);
                border-color: #3b82f6;
            }
    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed">
    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav align-items-center">
                <li class="nav-item">
                    <a class="nav-link text-primary" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
            </ul>

            <!-- Center: Search Bar -->
            @if (!User.IsInRole(RoleNames.Admin))
            {
                <div class="mx-auto my-0" style="max-width: 500px; flex-grow: 0; flex-shrink: 0;">
                    <form class="w-100" role="search" asp-controller="Home" asp-action="Search" method="get">
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-search text-gray-400"></i>
                            </div>
                            <input type="search" name="query"
                                   class="block w-full pl-10 pr-12 py-2.5 text-gray-700 bg-gray-50 border border-gray-200 rounded-full focus:bg-white outline-none search-input-transition"
                                   placeholder="Search services (e.g. Plumber)..." aria-label="Search">
                            <button type="submit" class="absolute inset-y-0 right-0 flex items-center pr-2">
                                <div class="bg-blue-600 hover:bg-blue-700 text-white rounded-full p-1.5 w-8 h-8 d-flex align-items-center justify-content-center transition-colors shadow-sm">
                                    <i class="fas fa-search text-xs"></i>
                                </div>
                            </button>
                        </div>
                    </form>
                </div>
            }

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto align-items-center">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <partial name="_NotificationPartial" />
                }
                <partial name="_LoginPartial" />
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">

            <a asp-controller="Home" asp-action="Index" class="brand-link px-1 d-flex align-items-center group" style="background-color: #112D4E !important;">
                <div class="relative">
                    <img src="~/images/LocalScoutLogo.png" alt="LocalScout Logo"
                         class="brand-image elevation-3 opacity-80"
                         style="height: 30px; width: auto; object-fit: contain;" />
                </div>
                <div class="ml-1 d-flex flex-column justify-content-center">
                    <span class="text-xl font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-blue-700 to-cyan-500 localscout-logo leading-9">
                        Neighbourly
                    </span>
                </div>
            </a>
            <div class="sidebar">

                <div class="user-panel mt-1 pb-1 d-flex align-items-center">
                    <div class="image position-relative">
                        @if (!string.IsNullOrEmpty(currentUser?.ProfilePictureUrl))
                        {
                            <img src="@currentUser.ProfilePictureUrl" class="img-circle elevation-2" alt="User Image"
                                 style="width: 2.5rem; height: 2.5rem; object-fit: cover;">
                        }
                        else
                        {
                            <img src="~/adminlte/dist/img/user2-160x160.jpg" class="img-circle elevation-2"
                                 alt="User Image" style="width: 2.5rem; height: 2.5rem; object-fit: cover;">
                        }
                        <span class="user-status-indicator online"></span>
                    </div>
                    <div class="info d-flex flex-column">
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="d-block user-name mb-1">
                            @(currentUser?.FullName ?? User.Identity?.Name ?? "Guest")
                        </a>
                        @if (User.IsInRole(RoleNames.Admin))
                        {
                            <span class="role-badge role-admin"><i class="fas fa-shield-alt mr-1"></i>Administrator</span>
                        }
                        else if (User.IsInRole(RoleNames.ServiceProvider))
                        {
                            <span class="role-badge role-provider"><i class="fas fa-briefcase mr-1"></i>Service Provider</span>
                        }
                        else if (User.IsInRole(RoleNames.User))
                        {
                            <span class="role-badge role-user"><i class="fas fa-user mr-1"></i>User</span>
                        }
                    </div>
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false">

                        @{
                            var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
                            var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();

                            var isUserMenuOpen = currentController == "Admin" && (currentAction == "ActiveUsers" ||
                            currentAction == "BlockedUsers");
                            var isProviderMenuOpen = currentController == "Admin" && (currentAction == "ActiveProviders" ||
                            currentAction == "BlockedProviders" || currentAction == "VerificationRequests");
                            var isCategoryMenuOpen = (currentController == "ServiceCategory" && (currentAction == "ActiveCategories" ||
                            currentAction == "InactiveCategories")) || (currentController == "CategoryRequest" && currentAction == "PendingRequests");
                            
                            // Service Provider - Services menu
                            var isServiceMenuOpen = currentController == "Service" && (currentAction == "ActiveServices" ||
                            currentAction == "InactiveServices" || currentAction == "MyServices");
                        }

                        @* =============== ADMIN MENU =============== *@
                        @if (User.IsInRole(RoleNames.Admin))
                        {
                            <li class="nav-header">MAIN</li>
                            <li class="nav-item">
                                <a asp-controller="Admin" asp-action="Index"
                                   class="nav-link @(currentAction == "Index" && currentController == "Admin" ? "active" : "")">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>Dashboard</p>
                                </a>
                            </li>
                            
                            <li class="nav-header">MANAGEMENT</li>

                            <li class="nav-item @(isUserMenuOpen ? "menu-open" : "")">
                                <a href="#" class="nav-link @(isUserMenuOpen ? "active" : "")">
                                    <i class="nav-icon fas fa-users"></i>
                                    <p>
                                        User Management
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="Admin" asp-action="ActiveUsers"
                                           class="nav-link @(currentAction == "ActiveUsers" ? "active" : "")">
                                            <i class="far fa-circle nav-icon text-success"></i>
                                            <p>Active Users</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Admin" asp-action="BlockedUsers"
                                           class="nav-link @(currentAction == "BlockedUsers" ? "active" : "")">
                                            <i class="far fa-circle nav-icon text-danger"></i>
                                            <p>Blocked Users</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item @(isProviderMenuOpen ? "menu-open" : "")">
                                <a href="#" class="nav-link @(isProviderMenuOpen ? "active" : "")">
                                    <i class="nav-icon fas fa-user-tie"></i>
                                    <p>
                                        Provider Management
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="Admin" asp-action="ActiveProviders"
                                           class="nav-link @(currentAction == "ActiveProviders" ? "active" : "")">
                                            <i class="far fa-circle nav-icon text-success"></i>
                                            <p>Active Providers</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Admin" asp-action="BlockedProviders"
                                           class="nav-link @(currentAction == "BlockedProviders" ? "active" : "")">
                                            <i class="far fa-circle nav-icon text-danger"></i>
                                            <p>Blocked Providers</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Admin" asp-action="VerificationRequests"
                                           class="nav-link @(currentAction == "VerificationRequests" ? "active" : "")">
                                            <i class="far fa-circle nav-icon text-info"></i>
                                            <p>Verification Requests</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item @(isCategoryMenuOpen ? "menu-open" : "")">
                                <a href="#" class="nav-link @(isCategoryMenuOpen ? "active" : "")">
                                    <i class="nav-icon fas fa-sitemap"></i>
                                    <p>
                                        Service Categories
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="ServiceCategory" asp-action="ActiveCategories"
                                           class="nav-link @(currentAction == "ActiveCategories" ? "active" : "")">
                                            <i class="far fa-circle nav-icon text-success"></i>
                                            <p>Active Categories</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="ServiceCategory" asp-action="InactiveCategories"
                                           class="nav-link @(currentAction == "InactiveCategories" ? "active" : "")">
                                            <i class="far fa-circle nav-icon text-warning"></i>
                                            <p>Inactive Categories</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="CategoryRequest" asp-action="PendingRequests"
                                           class="nav-link @(currentController == "CategoryRequest" && currentAction == "PendingRequests" ? "active" : "")">
                                            <i class="far fa-circle nav-icon text-info"></i>
                                            <p>Category Requests</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        @* =============== SERVICE PROVIDER MENU =============== *@
                        @if (User.IsInRole(RoleNames.ServiceProvider))
                        {
                            <li class="nav-header">MAIN</li>
                            <li class="nav-item">
                                <a asp-controller="Provider" asp-action="Index"
                                   class="nav-link @(currentController == "Provider" && currentAction == "Index" ? "active" : "")">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>Dashboard</p>
                                </a>
                            </li>
                            
                            <li class="nav-header">SERVICES</li>

                            <li class="nav-item @(isServiceMenuOpen ? "menu-open" : "")">
                                <a href="#" class="nav-link @(isServiceMenuOpen ? "active" : "")">
                                    <i class="nav-icon fas fa-briefcase"></i>
                                    <p>
                                        Manage Services
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="Service" asp-action="ActiveServices"
                                           class="nav-link @(currentAction == "ActiveServices" ? "active" : "")">
                                            <i class="far fa-circle nav-icon text-success"></i>
                                            <p>Active Services</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Service" asp-action="InactiveServices"
                                           class="nav-link @(currentAction == "InactiveServices" ? "active" : "")">
                                            <i class="far fa-circle nav-icon text-warning"></i>
                                            <p>Inactive Services</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-header">ACTIVITY</li>
                            <li class="nav-item">
                                <a asp-controller="Booking" asp-action="ProviderBookings"
                                   class="nav-link @(currentController == "Booking" && currentAction == "ProviderBookings" ? "active" : "")">
                                    <i class="nav-icon fas fa-calendar-check"></i>
                                    <p>Bookings</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="Payment" asp-action="History"
                                   class="nav-link @(currentController == "Payment" && currentAction == "History" ? "active" : "")">
                                    <i class="nav-icon fas fa-wallet"></i>
                                    <p>Payment History</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="Review" asp-action="ProviderReviews"
                                   class="nav-link @(currentController == "Review" && currentAction == "ProviderReviews" ? "active" : "")">
                                    <i class="nav-icon fas fa-star"></i>
                                    <p>My Reviews</p>
                                </a>
                            </li>
                        }

                        @* =============== REGULAR USER MENU =============== *@
                        @if (User.IsInRole(RoleNames.User))
                        {
                            <li class="nav-header">MAIN</li>
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="Dashboard"
                                   class="nav-link @(currentController == "User" && currentAction == "Dashboard" ? "active" : "")">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>Dashboard</p>
                                </a>
                            </li>
                            
                            <li class="nav-header">MY ACTIVITY</li>

                            <li class="nav-item">
                                <a asp-controller="Booking" asp-action="MyBookings"
                                   class="nav-link @(currentController == "Booking" && currentAction == "MyBookings" ? "active" : "")">
                                    <i class="nav-icon fas fa-calendar-alt"></i>
                                    <p>My Bookings</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="Review" asp-action="MyReviews"
                                   class="nav-link @(currentController == "Review" && currentAction == "MyReviews" ? "active" : "")">
                                    <i class="nav-icon fas fa-star"></i>
                                    <p>My Reviews</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="Payment" asp-action="UserHistory"
                                   class="nav-link @(currentController == "Payment" && currentAction == "UserHistory" ? "active" : "")">
                                    <i class="nav-icon fas fa-receipt"></i>
                                    <p>Payment History</p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
                
                @* =============== SIDEBAR FOOTER =============== *@
                <div class="sidebar-footer">
                    <a asp-controller="Home" asp-action="Index" class="sidebar-footer-btn" title="Home">
                        <i class="fas fa-home"></i>
                    </a>
                    @if (User.IsInRole(RoleNames.Admin))
                    {
                        <a asp-controller="Report" asp-action="AdminReports" class="sidebar-footer-btn" title="Reports">
                            <i class="fas fa-chart-bar"></i>
                        </a>
                    }
                    else if (User.IsInRole(RoleNames.ServiceProvider))
                    {
                        <a asp-controller="Report" asp-action="ProviderReports" class="sidebar-footer-btn" title="Reports">
                            <i class="fas fa-chart-bar"></i>
                        </a>
                    }
                    else if (User.IsInRole(RoleNames.User))
                    {
                        <a asp-controller="Report" asp-action="UserReports" class="sidebar-footer-btn" title="Reports">
                            <i class="fas fa-chart-bar"></i>
                        </a>
                    }
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="sidebar-footer-btn" title="Settings">
                        <i class="fas fa-cog"></i>
                    </a>
                </div>
            </div>
        </aside>

        <div class="content-wrapper">
            <section class="content p-3">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <footer class="main-footer">
            <strong>Copyright &copy; 2025 <a href="#">Neighbourly</a>.</strong>
            All rights reserved.
        </footer>
    </div>

    @* Notification modals removed - now using dropdown approach *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminlte/dist/js/adminlte.min.js"></script>
    <script src="~/adminlte/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <script src="~/adminlte/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminlte/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/adminlte/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/adminlte/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/adminlte/plugins/sweetalert2/sweetalert2.min.js"></script>

    <script src="~/js/ajax-client.js"></script>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <script src="~/js/notification.js" asp-append-version="true"></script>
    }

    <script>
        $(document).ready(function() {
            // Custom file input
            bsCustomFileInput.init();

            // Reinitialize AdminLTE components
            if (typeof $.fn.AdminLTE !== 'undefined') {
                $.fn.AdminLTE = $.fn.AdminLTE || {};
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>