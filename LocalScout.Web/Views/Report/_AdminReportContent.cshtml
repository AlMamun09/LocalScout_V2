@model LocalScout.Application.DTOs.ReportDTOs.AdminReportDto

<!-- Report Period Info -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card bg-gradient-light border-0 shadow-sm">
            <div class="card-body py-3 d-flex align-items-center justify-content-between">
                <div>
                    <h5 class="mb-0 font-weight-bold text-dark"><i class="fas fa-chart-line text-primary mr-2"></i>Executive Summary</h5>
                    <p class="mb-0 text-muted small">Comprehensive platform performance overview</p>
                </div>
                <div class="bg-white rounded-pill px-4 py-2 shadow-sm border">
                    <i class="fas fa-calendar-alt text-primary mr-2"></i>
                    <span class="font-weight-bold">@Model.StartDate.ToString("MMM dd, yyyy")</span> 
                    <span class="text-muted mx-2">&mdash;</span> 
                    <span class="font-weight-bold">@Model.EndDate.ToString("MMM dd, yyyy")</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 1. Platform Overview (Gradient Cards) -->
<h5 class="text-secondary font-weight-bold mb-3 pl-1">Platform Overview</h5>
<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-gradient-info elevation-2">
            <div class="inner">
                <h3>@Model.TotalUsers</h3>
                <p>Total Users</p>
            </div>
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-gradient-success elevation-2">
            <div class="inner">
                <h3>@Model.ActiveUsers</h3>
                <p>Active Users</p>
            </div>
            <div class="icon">
                <i class="fas fa-user-check"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-gradient-primary elevation-2">
            <div class="inner">
                <h3>@Model.TotalProviders</h3>
                <p>Total Providers</p>
            </div>
            <div class="icon">
                <i class="fas fa-user-tie"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-gradient-warning elevation-2">
            <div class="inner">
                <h3>@Model.ActiveProviders</h3>
                <p>Verified Providers</p>
            </div>
            <div class="icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>

<!-- 2. Financial & Service Health -->
<div class="row mt-2">
    <!-- Revenue & Bookings -->
    <div class="col-lg-8">
        <h5 class="text-secondary font-weight-bold mb-3 pl-1">Revenue & Performance (Selected Period)</h5>
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 border-right">
                        <div class="description-block">
                            <span class="description-percentage text-success"><i class="fas fa-caret-up"></i> Total Revenue</span>
                            <h5 class="description-header text-success display-4 font-weight-bold" style="font-size: 2rem;">৳@Model.TotalRevenue.ToString("N0")</h5>
                            <span class="description-text text-muted">GROSS EARNINGS</span>
                        </div>
                    </div>
                    <div class="col-md-4 border-right">
                        <div class="description-block">
                            <span class="description-percentage text-primary"><i class="fas fa-caret-up"></i> Traffic</span>
                            <h5 class="description-header text-primary display-4 font-weight-bold" style="font-size: 2rem;">@Model.TotalBookings</h5>
                            <span class="description-text text-muted">TOTAL BOOKINGS</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="description-block">
                            <span class="description-percentage text-warning"><i class="fas fa-star"></i> Reputation</span>
                            <h5 class="description-header text-warning display-4 font-weight-bold" style="font-size: 2rem;">@Model.AverageRating <small class="text-muted" style="font-size: 1rem;">/ 5</small></h5>
                            <span class="description-text text-muted">AVG RATING (@Model.TotalReviews reviews)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Booking Breakdown (Mini Info Blocks) -->
        <div class="row mt-3">
            <div class="col-12 col-sm-6 col-md-6">
                <div class="info-box mb-3 shadow-sm">
                    <span class="info-box-icon bg-success elevation-1"><i class="fas fa-check"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Completed</span>
                        <span class="info-box-number">@Model.CompletedBookings</span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-6">
                <div class="info-box mb-3 shadow-sm">
                    <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-times"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Cancelled</span>
                        <span class="info-box-number">@Model.CancelledBookings</span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-6">
                <div class="info-box mb-3 shadow-sm">
                    <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-clock"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Pending</span>
                        <span class="info-box-number">@Model.PendingBookings</span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-6">
                <div class="info-box mb-3 shadow-sm">
                    <span class="info-box-icon bg-info elevation-1"><i class="fas fa-spinner"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">In Progress</span>
                        <span class="info-box-number">@Model.InProgressBookings</span>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

    <!-- 3. Account Status & Growth -->
    <div class="col-lg-4">
        <h5 class="text-secondary font-weight-bold mb-3 pl-1">Atten. Required</h5>
        
        <!-- Blocked / Pending List -->
        <div class="card shadow-sm border-0 mb-3">
            <div class="card-body p-0">
                <ul class="products-list product-list-in-card px-3">
                    <li class="item">
                        <div class="product-img">
                            <div class="bg-danger rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 50px; height: 50px;">
                                <i class="fas fa-user-slash"></i>
                            </div>
                        </div>
                        <div class="product-info ml-3">
                            <a href="javascript:void(0)" class="product-title text-dark">Blocked Accounts
                                <span class="badge badge-danger float-right">@Model.BlockedUsers</span>
                            </a>
                            <span class="product-description">
                                Users restricted from platform
                            </span>
                        </div>
                    </li>
                    <li class="item">
                         <div class="product-img">
                            <div class="bg-danger rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 50px; height: 50px;">
                                <i class="fas fa-ban"></i>
                            </div>
                        </div>
                        <div class="product-info ml-3">
                             <a href="javascript:void(0)" class="product-title text-dark">Blocked Providers
                                <span class="badge badge-danger float-right">@Model.BlockedProviders</span>
                            </a>
                            <span class="product-description">
                                Providers restricted from platform
                            </span>
                        </div>
                    </li>
                    <li class="item">
                        <div class="product-img">
                            <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 50px; height: 50px;">
                                <i class="fas fa-file-contract"></i>
                            </div>
                        </div>
                        <div class="product-info ml-3">
                            <a href="javascript:void(0)" class="product-title text-dark">Pending Verifications
                                <span class="badge badge-warning float-right">@Model.PendingVerifications</span>
                            </a>
                            <span class="product-description">
                                Providers awaiting approval
                            </span>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        
        <!-- Services Summary -->
         <div class="info-box mb-3 bg-purple elevation-2">
            <span class="info-box-icon"><i class="fas fa-layer-group"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Total Services</span>
                <span class="info-box-number">@Model.TotalServices</span>
                <div class="progress">
                    @{ 
                        var activeServicePercent = Model.TotalServices > 0 ? (Model.ActiveServices * 100.0 / Model.TotalServices) : 0; 
                    }
                    <div class="progress-bar" style="width: @activeServicePercent%"></div>
                </div>
                <span class="progress-description">
                    @Model.ActiveServices Active (@activeServicePercent.ToString("F0")%)
                </span>
            </div>
        </div>
    </div>
</div>

<!-- 4. Growth & Summary Table -->
<div class="row mt-4">
     <div class="col-lg-4">
         <div class="card bg-gradient-navy border-0 shadow-lg h-100">
             <div class="card-header border-0">
                 <h3 class="card-title">
                     <i class="fas fa-chart-pie mr-1"></i>
                     Growth in Period
                 </h3>
             </div>
             <div class="card-body">
                 <div class="mb-4">
                     <div class="d-flex justify-content-between text-white mb-1">
                        <span>New Users</span>
                        <span class="font-weight-bold">+@Model.NewUsersInPeriod</span>
                     </div>
                     <div class="progress" style="height: 6px;">
                        @{ var userGrowth = Model.TotalUsers > 0 ? (Model.NewUsersInPeriod * 100.0 / Model.TotalUsers) : 0; }
                        <div class="progress-bar bg-info" style="width: @userGrowth%"></div>
                     </div>
                     <small class="text-white-50">@userGrowth.ToString("F1")% of total user base</small>
                 </div>
                 
                 <div class="mb-4">
                     <div class="d-flex justify-content-between text-white mb-1">
                        <span>New Providers</span>
                        <span class="font-weight-bold">+@Model.NewProvidersInPeriod</span>
                     </div>
                     <div class="progress" style="height: 6px;">
                         @{ var providerGrowth = Model.TotalProviders > 0 ? (Model.NewProvidersInPeriod * 100.0 / Model.TotalProviders) : 0; }
                        <div class="progress-bar bg-success" style="width: @providerGrowth%"></div>
                     </div>
                     <small class="text-white-50">@providerGrowth.ToString("F1")% of total provider base</small>
                 </div>
                 
                 <div class="mb-0">
                     <div class="d-flex justify-content-between text-white mb-1">
                        <span>New Services</span>
                        <span class="font-weight-bold">+@Model.NewServicesInPeriod</span>
                     </div>
                     <div class="progress" style="height: 6px;">
                         @{ var serviceGrowth = Model.TotalServices > 0 ? (Model.NewServicesInPeriod * 100.0 / Model.TotalServices) : 0; }
                        <div class="progress-bar bg-purple" style="width: @serviceGrowth%"></div>
                     </div>
                 </div>
             </div>
         </div>
     </div>
     
     <div class="col-lg-8">
        <div class="card shadow-sm h-100">
            <div class="card-header border-0 bg-white py-3">
                <h3 class="card-title font-weight-bold text-secondary">
                    <i class="fas fa-table mr-2"></i>Detailed Statistics Summary
                </h3>
            </div>
            <div class="card-body p-0 table-responsive">
                <table class="table table-striped table-valign-middle mb-0">
                    <thead class="bg-light">
                    <tr>
                        <th class="border-top-0 border-bottom-0 pl-4 text-muted small text-uppercase font-weight-bold">Metric</th>
                        <th class="border-top-0 border-bottom-0 text-center text-muted small text-uppercase font-weight-bold">Total (All Time)</th>
                        <th class="border-top-0 border-bottom-0 text-center text-muted small text-uppercase font-weight-bold text-primary">Changes (Period)</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="pl-4 font-weight-bold"><i class="fas fa-users text-muted mr-2" style="width:20px;"></i> Users</td>
                        <td class="text-center">@Model.TotalUsers</td>
                        <td class="text-center text-success"><i class="fas fa-arrow-up text-xs mr-1"></i> @Model.NewUsersInPeriod</td>
                    </tr>
                    <tr>
                        <td class="pl-4 font-weight-bold"><i class="fas fa-user-tie text-muted mr-2" style="width:20px;"></i> Providers</td>
                        <td class="text-center">@Model.TotalProviders</td>
                        <td class="text-center text-success"><i class="fas fa-arrow-up text-xs mr-1"></i> @Model.NewProvidersInPeriod</td>
                    </tr>
                    <tr>
                        <td class="pl-4 font-weight-bold"><i class="fas fa-concierge-bell text-muted mr-2" style="width:20px;"></i> Services</td>
                        <td class="text-center">@Model.TotalServices</td>
                        <td class="text-center text-success"><i class="fas fa-arrow-up text-xs mr-1"></i> @Model.NewServicesInPeriod</td>
                    </tr>
                    <tr>
                        <td class="pl-4 font-weight-bold"><i class="fas fa-check-circle text-muted mr-2" style="width:20px;"></i> Completed Jobs</td>
                        <td class="text-center">&mdash;</td>
                        <td class="text-center font-weight-bold">@Model.CompletedBookings</td>
                    </tr>
                    <tr>
                         <td class="pl-4 font-weight-bold"><i class="fas fa-money-bill-wave text-muted mr-2" style="width:20px;"></i> Revenue</td>
                        <td class="text-center">&mdash;</td>
                        <td class="text-center text-success font-weight-bold">৳@Model.TotalRevenue.ToString("N0")</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
     </div>
</div>

<style>
    .small-box .icon {
        color: rgba(0,0,0,0.15);
        z-index: 0;
    }
    .small-box:hover .icon {
        font-size: 75px;
    }
    .description-block > .description-header {
        margin: 0;
        padding: 0;
        font-weight: 600;
    }
    .text-lg {
        font-size: 1.25rem;
    }
</style>
