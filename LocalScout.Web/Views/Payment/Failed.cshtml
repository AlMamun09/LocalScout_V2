@model LocalScout.Application.DTOs.PaymentDTOs.PaymentResultDto

@{
    ViewData["Title"] = "Payment Failed";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12 text-center">
                <div class="card">
                    <div class="card-body py-5">
                        <div class="mb-4">
                            <div class="bg-danger rounded-circle d-inline-flex align-items-center justify-content-center" 
                                 style="width: 100px; height: 100px;">
                                <i class="fas fa-times fa-3x text-white"></i>
                            </div>
                        </div>
                        
                        <h2 class="text-danger mb-3">Payment Failed</h2>
                        <p class="text-muted mb-4">@(Model?.Message ?? "Your payment could not be processed.")</p>
                        
                        @if (!string.IsNullOrEmpty(Model?.TransactionId))
                        {
                            <p class="text-muted small">
                                <strong>Reference:</strong> @Model.TransactionId
                            </p>
                        }

                        <div class="alert alert-warning d-inline-block mb-4">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            Don't worry! Your booking is still active. You can try again.
                        </div>
                        
                        <div class="mt-4">
                            <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-primary btn-lg">
                                <i class="fas fa-redo mr-2"></i>Try Again
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg ml-2">
                                <i class="fas fa-home mr-2"></i>Go to Home
                            </a>
                        </div>
                        
                        <div class="mt-4">
                            <p class="text-muted small">
                                <i class="fas fa-question-circle mr-1"></i>
                                If you continue to experience issues, please contact support.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
