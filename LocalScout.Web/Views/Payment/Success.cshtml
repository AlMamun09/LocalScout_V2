@model LocalScout.Application.DTOs.PaymentDTOs.PaymentResultDto

@{
    ViewData["Title"] = "Payment Successful";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12 text-center">
                <div class="card">
                    <div class="card-body py-5">
                        <div class="mb-4">
                            <div class="bg-success rounded-circle d-inline-flex align-items-center justify-content-center" 
                                 style="width: 100px; height: 100px;">
                                <i class="fas fa-check fa-3x text-white"></i>
                            </div>
                        </div>
                        
                        <h2 class="text-success mb-3">Payment Successful!</h2>
                        <p class="text-muted mb-4">@Model?.Message</p>
                        
                        @if (Model != null && Model.Amount > 0)
                        {
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="bg-light p-4 rounded mb-4">
                                        <h4 class="mb-3">Transaction Details</h4>
                                        <table class="table table-borderless mb-0">
                                            @if (!string.IsNullOrEmpty(Model.TransactionId))
                                            {
                                                <tr>
                                                    <td class="text-muted">Transaction ID:</td>
                                                    <td class="font-weight-bold">@Model.TransactionId</td>
                                                </tr>
                                            }
                                            <tr>
                                                <td class="text-muted">Amount Paid:</td>
                                                <td class="font-weight-bold text-success">à§³ @Model.Amount.ToString("N2")</td>
                                            </tr>
                                            @if (!string.IsNullOrEmpty(Model.PaymentMethod))
                                            {
                                                <tr>
                                                    <td class="text-muted">Payment Method:</td>
                                                    <td class="font-weight-bold">@Model.PaymentMethod</td>
                                                </tr>
                                            }
                                            @if (!string.IsNullOrEmpty(Model.ServiceName))
                                            {
                                                <tr>
                                                    <td class="text-muted">Service:</td>
                                                    <td class="font-weight-bold">@Model.ServiceName</td>
                                                </tr>
                                            }
                                            @if (!string.IsNullOrEmpty(Model.ProviderName))
                                            {
                                                <tr>
                                                    <td class="text-muted">Provider:</td>
                                                    <td class="font-weight-bold">@Model.ProviderName</td>
                                                </tr>
                                            }
                                            @if (Model.TransactionDate.HasValue)
                                            {
                                                <tr>
                                                    <td class="text-muted">Date:</td>
                                                    <td class="font-weight-bold">@Model.TransactionDate.Value.ToString("MMM dd, yyyy hh:mm tt")</td>
                                                </tr>
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="alert alert-info d-inline-block">
                            <i class="fas fa-info-circle mr-2"></i>
                            The service provider has been notified and will proceed with your booking.
                        </div>
                        
                        <div class="mt-4">
                            @if (Model != null && Model.BookingId != Guid.Empty)
                            {
                                <a asp-controller="Payment" asp-action="DownloadReceipt" asp-route-bookingId="@Model.BookingId" 
                                   class="btn btn-success btn-lg">
                                    <i class="fas fa-download mr-2"></i>Download Receipt
                                </a>
                            }
                            <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-primary btn-lg ml-2">
                                <i class="fas fa-list mr-2"></i>View My Bookings
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg ml-2">
                                <i class="fas fa-home mr-2"></i>Go to Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
