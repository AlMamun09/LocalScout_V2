@model List<LocalScout.Application.DTOs.PaymentDTOs.PaymentHistoryDto>

@{
    ViewData["Title"] = "Payment History";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Payment History</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Provider" asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Payments</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-outline card-primary">
            <div class="card-header border-0">
                <h3 class="card-title">Received Payments</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Service</th>
                            <th>Transaction ID</th>
                            <th>Amount</th>
                            <th>Method</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FormattedDate</td>
                                    <td>
                                        <div class="user-block">
                                            <img class="img-circle img-bordered-sm" src="@(item.OtherPartyImage ?? "/images/default-avatar.png")" alt="User Image">
                                            <span class="username">@item.OtherPartyName</span>
                                        </div>
                                    </td>
                                    <td>@item.ServiceName</td>
                                    <td><small class="badge badge-light">@item.TransactionId</small></td>
                                    <td class="font-weight-bold text-success">@item.FormattedAmount</td>
                                    <td>@item.PaymentMethod</td>
                                    <td>
                                        <span class="badge badge-success">@item.Status</span>
                                    </td>
                                    <td>
                                        <a asp-controller="Booking" asp-action="ProviderDetails" asp-route-id="@item.BookingId" 
                                           class="btn btn-sm btn-info">
                                            <i class="fas fa-eye mr-1"></i> Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4">No payment records found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
