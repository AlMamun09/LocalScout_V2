@model LocalScout.Application.DTOs.CategoryRequestDto

<div class="modal-header bg-primary">
    <h5 class="modal-title text-white"><i class="fas fa-plus-circle mr-2"></i>Request New Category</h5>
    <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
</div>

<form id="categoryRequestForm">
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-group">
            <label>Category Name <span class="text-danger">*</span></label>
            <input type="text" name="RequestedCategoryName" class="form-control" required
                   placeholder="e.g., Smart Home Installation" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea name="Description" class="form-control" rows="3"
                      placeholder="Describe the category and what services it would include..."></textarea>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane mr-1"></i> Submit Request
        </button>
    </div>
</form>

<script>
    $('#categoryRequestForm').on('submit', function (e) {
        e.preventDefault();
        var form = $(this);
        var submitBtn = form.find('button[type="submit"]');
        var originalText = submitBtn.html();

        submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-1"></i> Submitting...');

        $.ajax({
            url: '@Url.Action("SubmitRequest", "CategoryRequest")',
            type: 'POST',
            data: form.serialize(),
            success: function (response) {
                $('#modal-category-request').modal('hide');
                Swal.fire({
                    title: 'Success!',
                    text: response.message,
                    icon: 'success',
                    confirmButtonColor: '#28a745'
                });
            },
            error: function (xhr) {
                submitBtn.prop('disabled', false).html(originalText);
                Swal.fire({
                    title: 'Error',
                    text: xhr.responseJSON?.message || 'Failed to submit request.',
                    icon: 'error',
                    confirmButtonColor: '#d33'
                });
            }
        });
    });
</script>
