@* Reschedule Booking Modal (User) *@
<div class="modal fade" id="rescheduleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title"><i class="fas fa-calendar-alt mr-2"></i>Reschedule Booking</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="rescheduleForm">
                <div class="modal-body">
                    <input type="hidden" id="rescheduleBookingId" name="BookingId" />
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle mr-2"></i>
                        <strong>Service:</strong> <span id="rescheduleServiceName"></span>
                        <p class="mb-0 mt-2 small">Your original time was not available. Please select a new preferred time slot.</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="rescheduleDate">New Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="rescheduleDate" name="RequestedDate" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="rescheduleStartTime">Preferred Time <span class="text-danger">*</span></label>
                                <input type="time" class="form-control" id="rescheduleStartTime" name="RequestedStartTime" required>
                                <small class="form-text text-muted">Provider will confirm the exact schedule</small>
                            </div>
                        </div>
                    </div>
                    
                    <p class="text-muted small">
                        <i class="fas fa-clock mr-1"></i> Bookings must be made at least 2 hours in advance.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-calendar-check mr-1"></i> Submit New Time
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
