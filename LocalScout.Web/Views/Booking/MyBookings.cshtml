@using LocalScout.Domain.Enums

@{
    ViewData["Title"] = "My Bookings";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">My Bookings</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="User" asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">My Bookings</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Filter Tabs -->
<div class="row mb-3">
    <div class="col-12">
        <div class="card card-primary card-outline card-tabs">
            <div class="card-header p-0 pt-1 border-bottom-0">
                <ul class="nav nav-tabs" id="bookingTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#tab-all" role="tab" data-status="">
                            <i class="fas fa-list mr-1"></i> All
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-pending" role="tab" data-status="@((int)BookingStatus.PendingProviderReview)">
                            <i class="fas fa-clock mr-1"></i> Pending
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-accepted" role="tab" data-status="@((int)BookingStatus.AcceptedByProvider)">
                            <i class="fas fa-check mr-1"></i> Accepted
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-paid" role="tab" data-status="@((int)BookingStatus.PaymentReceived)">
                            <i class="fas fa-money-bill mr-1"></i> Paid
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-completed" role="tab" data-status="@((int)BookingStatus.Completed)">
                            <i class="fas fa-check-circle mr-1"></i> Completed
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-cancelled" role="tab" data-status="@((int)BookingStatus.Cancelled)">
                            <i class="fas fa-times-circle mr-1"></i> Cancelled
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Tab Content Container -->
<div class="tab-content" id="bookingTabContent">
    <div class="tab-pane fade show active" id="tab-all" role="tabpanel">
        <div id="content-all" class="bookings-container">
            <div class="text-center py-5">
                <i class="fas fa-spinner fa-spin fa-2x"></i>
                <p class="mt-2 text-muted">Loading bookings...</p>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="tab-pending" role="tabpanel">
        <div id="content-pending" class="bookings-container"></div>
    </div>
    <div class="tab-pane fade" id="tab-accepted" role="tabpanel">
        <div id="content-accepted" class="bookings-container"></div>
    </div>
    <div class="tab-pane fade" id="tab-paid" role="tabpanel">
        <div id="content-paid" class="bookings-container"></div>
    </div>
    <div class="tab-pane fade" id="tab-completed" role="tabpanel">
        <div id="content-completed" class="bookings-container"></div>
    </div>
    <div class="tab-pane fade" id="tab-cancelled" role="tabpanel">
        <div id="content-cancelled" class="bookings-container"></div>
    </div>
</div>

<!-- Review Modal -->
@await Html.PartialAsync("_ReviewModal")

<!-- Cancel Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-times-circle mr-2"></i>Cancel Booking</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="cancelForm">
                <div class="modal-body">
                    <input type="hidden" id="cancelBookingId" name="BookingId" />
                    <p>Are you sure you want to cancel this booking?</p>
                    <div class="form-group">
                        <label for="cancelReason">Reason (Optional)</label>
                        <textarea class="form-control" id="cancelReason" name="Reason" rows="3" placeholder="Please provide a reason for cancellation..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times mr-1"></i> Cancel Booking
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var loadedTabs = {};
            
            // Load tab content via AJAX
            function loadTabContent(tabId, status) {
                var contentContainer = $('#content-' + tabId);
                
                // Show loading indicator
                contentContainer.html(`
                    <div class="text-center py-5">
                        <i class="fas fa-spinner fa-spin fa-2x"></i>
                        <p class="mt-2 text-muted">Loading bookings...</p>
                    </div>
                `);
                
                var url = '@Url.Action("GetUserBookingsTab", "Booking")';
                if (status !== '') {
                    url += '?status=' + status;
                }
                
                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function(html) {
                        contentContainer.html(html);
                        loadedTabs[tabId] = true;
                        bindEventHandlers(contentContainer);
                    },
                    error: function(xhr) {
                        contentContainer.html(`
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle mr-2"></i>
                                Failed to load bookings. Please try again.
                            </div>
                        `);
                    }
                });
            }
            
            // Bind event handlers for dynamically loaded content
            function bindEventHandlers(container) {
                // Pay button click - redirect to SSLCommerz
                container.find('.btn-pay').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    var price = $(this).data('price');
                    
                    Swal.fire({
                        title: 'Proceed to Payment',
                        html: `<p>You are about to pay <strong>Tk ${formatNumber(price)}</strong> for this service.</p><p class="text-muted small">You will be redirected to our secure payment gateway (SSLCommerz).</p>`,
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#28a745',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: '<i class="fas fa-credit-card mr-1"></i> Pay Now',
                        showLoaderOnConfirm: true,
                        allowOutsideClick: () => !Swal.isLoading()
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Show loading
                            Swal.fire({
                                title: 'Redirecting to Payment Gateway...',
                                html: '<p>Please wait while we redirect you to the secure payment page.</p>',
                                allowOutsideClick: false,
                                allowEscapeKey: false,
                                didOpen: () => {
                                    Swal.showLoading();
                                }
                            });
                            
                            // Create and submit form to initiate payment
                            var form = $('<form>', {
                                method: 'POST',
                                action: '@Url.Action("Initiate", "Payment")'
                            });
                            form.append($('<input>', {
                                type: 'hidden',
                                name: 'bookingId',
                                value: bookingId
                            }));
                            form.append($('<input>', {
                                type: 'hidden',
                                name: '__RequestVerificationToken',
                                value: $('input[name="__RequestVerificationToken"]').val()
                            }));
                            form.appendTo('body').submit();
                        }
                    });
                });

                // Confirm completion button click - open review modal
                container.find('.btn-confirm-completion').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    console.log('Confirm completion button clicked for booking:', bookingId);
                    
                    // Check if function exists
                    if (typeof window.openReviewModal === 'function') {
                        console.log('Calling openReviewModal function');
                        window.openReviewModal(bookingId);
                    } else {
                        console.error('openReviewModal function not found!');
                        Swal.fire('Error', 'Review modal not available. Please refresh the page.', 'error');
                    }
                });

                // Cancel button click - show modal
                container.find('.btn-cancel').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    $('#cancelBookingId').val(bookingId);
                    $('#cancelReason').val('');
                    $('#cancelModal').modal('show');
                });
            }
            
            // Refresh current active tab
            function refreshCurrentTab() {
                var activeTab = $('#bookingTabs .nav-link.active');
                var tabId = activeTab.attr('href').replace('#tab-', '');
                var status = activeTab.data('status');
                loadedTabs[tabId] = false;
                loadTabContent(tabId, status);
            }
            
            // Format number with commas
            function formatNumber(num) {
                return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            }
            
            // Tab change event
            $('#bookingTabs a[data-toggle="tab"]').on('shown.bs.tab', function(e) {
                var tabId = $(e.target).attr('href').replace('#tab-', '');
                var status = $(e.target).data('status');
                
                // Only load if not already loaded
                if (!loadedTabs[tabId]) {
                    loadTabContent(tabId, status);
                }
            });
            
            // Cancel form submit
            $('#cancelForm').on('submit', function(e) {
                e.preventDefault();
                
                var data = {
                    BookingId: $('#cancelBookingId').val(),
                    Reason: $('#cancelReason').val()
                };

                $.ajax({
                    url: '@Url.Action("UserCancel", "Booking")',
                    type: 'POST',
                    data: data,
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                    success: function(response) {
                        $('#cancelModal').modal('hide');
                        if (response.success) {
                            Swal.fire('Cancelled', response.message, 'success').then(() => {
                                refreshCurrentTab();
                            });
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function(xhr) {
                        $('#cancelModal').modal('hide');
                        Swal.fire('Error', xhr.responseJSON?.message || 'An error occurred', 'error');
                    }
                });
            });
            
            // Load initial tab (All)
            loadTabContent('all', '');
        });
    </script>
    @Html.AntiForgeryToken()
}
