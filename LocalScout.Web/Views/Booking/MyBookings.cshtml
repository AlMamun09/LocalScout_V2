@using LocalScout.Domain.Enums

@{
    ViewData["Title"] = "My Bookings";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">My Bookings</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="User" asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">My Bookings</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Filter Tabs -->
<div class="row mb-3">
    <div class="col-12">
        <div class="card card-primary card-outline card-tabs">
            <div class="card-header p-0 pt-1 border-bottom-0">
                <ul class="nav nav-tabs" id="bookingTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#tab-all" role="tab" data-status="">
                            <i class="fas fa-list mr-1"></i> All
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-action" role="tab" data-status="action">
                            <i class="fas fa-exclamation-circle mr-1 text-primary"></i> Action Required
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-upcoming" role="tab" data-status="upcoming">
                            <i class="fas fa-calendar-check mr-1 text-info"></i> Upcoming
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-pending" role="tab" data-status="pending">
                            <i class="fas fa-clock mr-1 text-warning"></i> Pending
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-completed" role="tab" data-status="@((int)BookingStatus.Completed)">
                            <i class="fas fa-check-circle mr-1 text-success"></i> Completed
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-cancelled" role="tab" data-status="cancelled">
                            <i class="fas fa-times-circle mr-1 text-secondary"></i> Cancelled
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Tab Content Container -->
<div class="tab-content" id="bookingTabContent">
    <div class="tab-pane fade show active" id="tab-all" role="tabpanel">
        <div id="content-all" class="bookings-container">
            <div class="text-center py-5">
                <i class="fas fa-spinner fa-spin fa-2x"></i>
                <p class="mt-2 text-muted">Loading bookings...</p>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="tab-action" role="tabpanel">
        <div id="content-action" class="bookings-container"></div>
    </div>
    <div class="tab-pane fade" id="tab-upcoming" role="tabpanel">
        <div id="content-upcoming" class="bookings-container"></div>
    </div>
    <div class="tab-pane fade" id="tab-pending" role="tabpanel">
        <div id="content-pending" class="bookings-container"></div>
    </div>
    <div class="tab-pane fade" id="tab-completed" role="tabpanel">
        <div id="content-completed" class="bookings-container"></div>
    </div>
    <div class="tab-pane fade" id="tab-cancelled" role="tabpanel">
        <div id="content-cancelled" class="bookings-container"></div>
    </div>
</div>

<!-- Review Modal -->
@await Html.PartialAsync("_ReviewModal")

<!-- Cancel Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-times-circle mr-2"></i>Cancel Booking</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="cancelForm">
                <div class="modal-body">
                    <input type="hidden" id="cancelBookingId" name="BookingId" />
                    <p>Are you sure you want to cancel this booking?</p>
                    <div class="form-group">
                        <label for="cancelReason">Reason (Optional)</label>
                        <textarea class="form-control" id="cancelReason" name="Reason" rows="3" placeholder="Please provide a reason for cancellation..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times mr-1"></i> Cancel Booking
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reschedule Modal -->
<div class="modal fade" id="rescheduleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title"><i class="fas fa-calendar-alt mr-2"></i>Reschedule Booking</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="rescheduleForm">
                <div class="modal-body">
                    <input type="hidden" id="rescheduleBookingId" name="BookingId" />
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle mr-2"></i>
                        <strong>Service:</strong> <span id="rescheduleServiceName"></span>
                        <p class="mb-0 mt-2 small">Your original time was not available. Please select a new preferred time slot.</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="rescheduleDate">New Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="rescheduleDate" name="RequestedDate" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="rescheduleStartTime">Preferred Time <span class="text-danger">*</span></label>
                                <input type="time" class="form-control" id="rescheduleStartTime" name="RequestedStartTime" required>
                                <small class="form-text text-muted">Provider will confirm the exact schedule</small>
                            </div>
                        </div>
                    </div>
                    
                    <p class="text-muted small">
                        <i class="fas fa-clock mr-1"></i> Bookings must be made at least 2 hours in advance.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-calendar-check mr-1"></i> Submit New Time
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function() {
            var loadedTabs = {};
            
            // Load tab content via AJAX
            function loadTabContent(tabId, status) {
                var contentContainer = $('#content-' + tabId);
                
                // Show loading indicator
                contentContainer.html(`
                    <div class="text-center py-5">
                        <i class="fas fa-spinner fa-spin fa-2x"></i>
                        <p class="mt-2 text-muted">Loading bookings...</p>
                    </div>
                `);
                
                var url = '@Url.Action("GetUserBookingsTab", "Booking")';
                if (status !== '') {
                    url += '?statusFilter=' + status;
                }
                
                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function(html) {
                        contentContainer.html(html);
                        loadedTabs[tabId] = true;
                        bindEventHandlers(contentContainer);
                    },
                    error: function(xhr) {
                        contentContainer.html(`
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle mr-2"></i>
                                Failed to load bookings. Please try again.
                            </div>
                        `);
                    }
                });
            }
            
            // Bind event handlers for dynamically loaded content
            function bindEventHandlers(container) {
                // Pay button click - redirect to SSLCommerz
                container.find('.btn-pay').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    var price = $(this).data('price');
                    
                    Swal.fire({
                        title: 'Proceed to Payment',
                        html: `<p>You are about to pay <strong>Tk ${formatNumber(price)}</strong> for this service.</p><p class="text-muted small">You will be redirected to our secure payment gateway (SSLCommerz).</p>`,
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#28a745',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: '<i class="fas fa-credit-card mr-1"></i> Pay Now',
                        showLoaderOnConfirm: true,
                        allowOutsideClick: () => !Swal.isLoading()
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Show loading
                            Swal.fire({
                                title: 'Redirecting to Payment Gateway...',
                                html: '<p>Please wait while we redirect you to the secure payment page.</p>',
                                allowOutsideClick: false,
                                allowEscapeKey: false,
                                didOpen: () => {
                                    Swal.showLoading();
                                }
                            });
                            
                            // Create and submit form to initiate payment
                            var form = $('<form>', {
                                method: 'POST',
                                action: '@Url.Action("Initiate", "Payment")'
                            });
                            form.append($('<input>', {
                                type: 'hidden',
                                name: 'bookingId',
                                value: bookingId
                            }));
                            form.append($('<input>', {
                                type: 'hidden',
                                name: '__RequestVerificationToken',
                                value: $('input[name="__RequestVerificationToken"]').val()
                            }));
                            form.appendTo('body').submit();
                        }
                    });
                });

                // Confirm completion button click - open review modal
                container.find('.btn-confirm-completion').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    console.log('Confirm completion button clicked for booking:', bookingId);
                    
                    // Check if function exists
                    if (typeof window.openReviewModal === 'function') {
                        console.log('Calling openReviewModal function');
                        window.openReviewModal(bookingId);
                    } else {
                        console.error('openReviewModal function not found!');
                        Swal.fire('Error', 'Review modal not available. Please refresh the page.', 'error');
                    }
                });

                // Cancel button click - show modal
                container.find('.btn-cancel').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    $('#cancelBookingId').val(bookingId);
                    $('#cancelReason').val('');
                    $('#cancelModal').modal('show');
                });
                
                // Reschedule button click - show modal
                container.find('.btn-reschedule').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    var serviceName = $(this).data('service-name');
                    
                    $('#rescheduleBookingId').val(bookingId);
                    $('#rescheduleServiceName').text(serviceName);
                    
                    // Set minimum date to tomorrow
                    var tomorrow = new Date();
                    tomorrow.setDate(tomorrow.getDate() + 1);
                    $('#rescheduleDate').attr('min', tomorrow.toISOString().split('T')[0]);
                    $('#rescheduleDate').val(tomorrow.toISOString().split('T')[0]);
                    $('#rescheduleStartTime').val('');
                    
                    $('#rescheduleModal').modal('show');
                });
                
                // Accept Proposal button click
                container.find('.btn-accept-proposal').off('click').on('click', function() {
                    var btn = $(this);
                    var bookingId = btn.data('booking-id');
                    var proposedSchedule = btn.data('proposed-schedule');
                    var proposedPrice = btn.data('proposed-price');
                    
                    Swal.fire({
                        title: 'Accept Proposal?',
                        html: `<p>The provider has proposed:</p>
                               <p class="text-primary font-weight-bold">${proposedSchedule}</p>
                               ${proposedPrice ? `<p class="text-success">Price: Tk ${Number(proposedPrice).toLocaleString()}</p>` : ''}
                               <p>Do you want to accept this time slot?</p>`,
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#28a745',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: '<i class="fas fa-check mr-1"></i> Accept',
                        cancelButtonText: 'Cancel'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: '@Url.Action("UserAcceptProposal", "Booking")',
                                type: 'POST',
                                data: { bookingId: bookingId },
                                headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                                success: function(response) {
                                    if (response.success) {
                                        Swal.fire('Accepted!', response.message, 'success').then(() => {
                                            refreshCurrentTab();
                                        });
                                    } else {
                                        Swal.fire('Error', response.message, 'error');
                                    }
                                },
                                error: function() {
                                    Swal.fire('Error', 'Failed to accept proposal.', 'error');
                                }
                            });
                        }
                    });
                });
                
                // Reject Proposal button click
                container.find('.btn-reject-proposal').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    
                    Swal.fire({
                        title: 'Decline Proposal?',
                        text: 'Would you like to decline this time proposal? The provider can propose a new time.',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#dc3545',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: '<i class="fas fa-times mr-1"></i> Decline',
                        cancelButtonText: 'Keep'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: '@Url.Action("UserRejectProposal", "Booking")',
                                type: 'POST',
                                data: { bookingId: bookingId },
                                headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                                success: function(response) {
                                    if (response.success) {
                                        Swal.fire('Declined', response.message, 'info').then(() => {
                                            refreshCurrentTab();
                                        });
                                    } else {
                                        Swal.fire('Error', response.message, 'error');
                                    }
                                },
                                error: function() {
                                    Swal.fire('Error', 'Failed to decline proposal.', 'error');
                                }
                            });
                        }
                    });
                });
            }
            
            // Refresh current active tab
            function refreshCurrentTab() {
                var activeTab = $('#bookingTabs .nav-link.active');
                var tabId = activeTab.attr('href').replace('#tab-', '');
                var status = activeTab.data('status');
                loadedTabs[tabId] = false;
                loadTabContent(tabId, status);
            }
            
            // Format number with commas
            function formatNumber(num) {
                return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            }
            
            // Tab change event
            $('#bookingTabs a[data-toggle="tab"]').on('shown.bs.tab', function(e) {
                var tabId = $(e.target).attr('href').replace('#tab-', '');
                var status = $(e.target).data('status');
                
                // Only load if not already loaded
                if (!loadedTabs[tabId]) {
                    loadTabContent(tabId, status);
                }
            });
            
            // Cancel form submit
            $('#cancelForm').on('submit', function(e) {
                e.preventDefault();
                
                var data = {
                    BookingId: $('#cancelBookingId').val(),
                    Reason: $('#cancelReason').val()
                };

                $.ajax({
                    url: '@Url.Action("UserCancel", "Booking")',
                    type: 'POST',
                    data: data,
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                    success: function(response) {
                        $('#cancelModal').modal('hide');
                        if (response.success) {
                            Swal.fire('Cancelled', response.message, 'success').then(() => {
                                refreshCurrentTab();
                            });
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function(xhr) {
                        $('#cancelModal').modal('hide');
                        Swal.fire('Error', xhr.responseJSON?.message || 'An error occurred', 'error');
                    }
                });
            });
            
            // Reschedule form submit
            $('#rescheduleForm').on('submit', function(e) {
                e.preventDefault();
                
                var startTime = $('#rescheduleStartTime').val();
                
                if (!startTime) {
                    Swal.fire('Error', 'Please select a preferred time', 'error');
                    return;
                }
                
                var data = {
                    BookingId: $('#rescheduleBookingId').val(),
                    RequestedDate: $('#rescheduleDate').val(),
                    RequestedStartTime: startTime + ':00'
                };

                var submitBtn = $('#rescheduleForm button[type="submit"]');
                submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-1"></i> Submitting...');

                $.ajax({
                    url: '@Url.Action("UserReschedule", "Booking")',
                    type: 'POST',
                    data: data,
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                    success: function(response) {
                        $('#rescheduleModal').modal('hide');
                        submitBtn.prop('disabled', false).html('<i class="fas fa-calendar-check mr-1"></i> Submit New Time');
                        if (response.success) {
                            Swal.fire('Rescheduled!', response.message, 'success').then(() => {
                                refreshCurrentTab();
                            });
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function(xhr) {
                        $('#rescheduleModal').modal('hide');
                        submitBtn.prop('disabled', false).html('<i class="fas fa-calendar-check mr-1"></i> Submit New Time');
                        Swal.fire('Error', xhr.responseJSON?.message || 'An error occurred', 'error');
                    }
                });
            });
            
            // Reset reschedule modal on close
            $('#rescheduleModal').on('hidden.bs.modal', function() {
                $('#rescheduleStartTime').val('');
            });
            
            // Load initial tab (All)
            loadTabContent('all', '');
        });
    </script>
    @Html.AntiForgeryToken()
}
