@using LocalScout.Domain.Enums

@{
    ViewData["Title"] = "My Booking Requests";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Booking Requests</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Provider" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Bookings</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Filter Tabs -->
<div class="row mb-3">
    <div class="col-12">
        <div class="card card-primary card-outline card-tabs">
            <div class="card-header p-0 pt-1 border-bottom-0">
                <ul class="nav nav-tabs" id="providerBookingTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#tab-all" role="tab" data-status="">
                            <i class="fas fa-list mr-1"></i> All
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-action" role="tab" data-status="action">
                            <i class="fas fa-exclamation-circle mr-1 text-primary"></i> Action Required
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-upcoming" role="tab" data-status="upcoming">
                            <i class="fas fa-calendar-check mr-1 text-info"></i> Upcoming
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-jobdone" role="tab" data-status="@((int)BookingStatus.JobDone)">
                            <i class="fas fa-money-bill mr-1 text-warning"></i> Awaiting Payment
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-completed" role="tab" data-status="@((int)BookingStatus.Completed)">
                            <i class="fas fa-check-circle mr-1 text-success"></i> Completed
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-cancelled" role="tab" data-status="cancelled">
                            <i class="fas fa-times-circle mr-1 text-secondary"></i> Cancelled
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Tab Content Container -->
<div class="tab-content" id="providerBookingTabContent">
    <div class="tab-pane fade show active" id="tab-all" role="tabpanel">
        <div id="content-all" class="bookings-container">
            <div class="text-center py-5">
                <i class="fas fa-spinner fa-spin fa-2x"></i>
                <p class="mt-2 text-muted">Loading bookings...</p>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="tab-action" role="tabpanel">
        <div id="content-action" class="bookings-container"></div>
    </div>
    <div class="tab-pane fade" id="tab-upcoming" role="tabpanel">
        <div id="content-upcoming" class="bookings-container"></div>
    </div>
    <div class="tab-pane fade" id="tab-jobdone" role="tabpanel">
        <div id="content-jobdone" class="bookings-container"></div>
    </div>
    <div class="tab-pane fade" id="tab-completed" role="tabpanel">
        <div id="content-completed" class="bookings-container"></div>
    </div>
    <div class="tab-pane fade" id="tab-cancelled" role="tabpanel">
        <div id="content-cancelled" class="bookings-container"></div>
    </div>
</div>

<!-- Accept & Set Price Modal with Time Confirmation -->
<div class="modal fade" id="acceptModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="fas fa-check-circle mr-2"></i>Accept Booking</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="acceptForm">
                <div class="modal-body">
                    <input type="hidden" id="acceptBookingId" name="BookingId" />
                    
                    <div class="alert alert-info">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Service:</strong> <span id="acceptServiceName"></span><br>
                                <strong>Customer:</strong> <span id="acceptCustomerName"></span>
                            </div>
                            <div class="col-md-6">
                                <strong>Base Price:</strong> Tk <span id="acceptBasePrice"></span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Customer's Preferred Time Display -->
                    <div id="preferredTimeBox" class="alert alert-warning mb-3">
                        <i class="fas fa-clock mr-2"></i>
                        <strong>Customer's Preferred Time:</strong>
                        <span id="displayPreferredTime"></span>
                        <div id="noEndTimeNote" class="mt-1" style="display: none;">
                            <small class="text-dark"><i class="fas fa-info-circle mr-1"></i>Customer did not specify end time. Please set the schedule below.</small>
                        </div>
                    </div>
                    
                    <!-- Confirm/Adjust Time Section -->
                    <div class="card card-outline card-success mb-3">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="fas fa-calendar-alt mr-2"></i>Confirm Schedule <span class="text-danger">*</span></h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted small mb-3">
                                <i class="fas fa-info-circle mr-1"></i>
                                You can adjust the customer's preferred time or set the exact schedule. For multi-day services, set different start and end dates.
                            </p>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-2">
                                        <label for="confirmedDate">Start Date <span class="text-danger">*</span></label>
                                        <input type="date" class="form-control" id="confirmedDate" name="ConfirmedDate" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-2">
                                        <label for="confirmedStartTime">Start Time <span class="text-danger">*</span></label>
                                        <input type="time" class="form-control" id="confirmedStartTime" name="ConfirmedStartTime" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-2">
                                        <label for="confirmedEndDate">End Date <span class="text-danger">*</span></label>
                                        <input type="date" class="form-control" id="confirmedEndDate" name="ConfirmedEndDate" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-2">
                                        <label for="confirmedEndTime">End Time <span class="text-danger">*</span></label>
                                        <input type="time" class="form-control" id="confirmedEndTime" name="ConfirmedEndTime" required>
                                    </div>
                                </div>
                            </div>
                            <div id="timeValidationMsg" class="mt-2" style="display: none;"></div>
                        </div>
                    </div>
                    
                    <!-- Price Section -->
                    <div class="form-group">
                        <label for="negotiatedPrice">Final Price (Tk) <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Tk</span>
                            </div>
                            <input type="number" class="form-control form-control-lg" id="negotiatedPrice" name="NegotiatedPrice" min="1" step="1" required placeholder="Enter final price">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="providerNotes">Notes for Customer (Optional)</label>
                        <textarea class="form-control" id="providerNotes" name="ProviderNotes" rows="2" placeholder="Any details about the price, what's included, etc."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" id="acceptSubmitBtn">
                        <i class="fas fa-check mr-1"></i> Accept & Send to Customer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Decline Modal -->
<div class="modal fade" id="declineModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-times-circle mr-2"></i>Decline Booking</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="declineForm">
                <div class="modal-body">
                    <input type="hidden" id="declineBookingId" name="BookingId" />
                    <p>Are you sure you want to decline this booking request?</p>
                    <div class="form-group">
                        <label for="declineReason">Reason (Optional but recommended)</label>
                        <textarea class="form-control" id="declineReason" name="Reason" rows="3" placeholder="Let the customer know why you can't accept this request..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times mr-1"></i> Decline Request
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Propose New Time Modal (for NeedRescheduling bookings) -->
<div class="modal fade" id="proposeTimeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title"><i class="fas fa-calendar-alt mr-2"></i>Propose New Time</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="proposeTimeForm">
                <div class="modal-body">
                    <input type="hidden" id="proposeBookingId" name="BookingId" />
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle mr-2"></i>
                        <strong>Service:</strong> <span id="proposeServiceName"></span><br>
                        <strong>Customer:</strong> <span id="proposeCustomerName"></span>
                        <p class="mb-0 mt-2 small">The customer's requested time doesn't work for you. Propose a new schedule and price below.</p>
                    </div>
                    
                    <!-- Schedule Section -->
                    <div class="card card-outline card-warning mb-3">
                        <div class="card-header py-2">
                            <h6 class="mb-0"><i class="fas fa-clock mr-2"></i>Proposed Schedule <span class="text-danger">*</span></h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-2">
                                        <label for="proposeDate">Start Date <span class="text-danger">*</span></label>
                                        <input type="date" class="form-control" id="proposeDate" name="ConfirmedDate" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-2">
                                        <label for="proposeStartTime">Start Time <span class="text-danger">*</span></label>
                                        <input type="time" class="form-control" id="proposeStartTime" name="ConfirmedStartTime" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-2">
                                        <label for="proposeEndDate">End Date <span class="text-danger">*</span></label>
                                        <input type="date" class="form-control" id="proposeEndDate" name="ConfirmedEndDate" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-2">
                                        <label for="proposeEndTime">End Time <span class="text-danger">*</span></label>
                                        <input type="time" class="form-control" id="proposeEndTime" name="ConfirmedEndTime" required>
                                    </div>
                                </div>
                            </div>
                            <div id="proposeTimeValidationMsg" class="mt-2" style="display: none;"></div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="proposePrice">Your Price (Tk) <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Tk</span>
                            </div>
                            <input type="number" class="form-control form-control-lg" id="proposePrice" name="NegotiatedPrice" min="1" step="1" required placeholder="Enter your price">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="proposeNotes">Message to Customer (Optional)</label>
                        <textarea class="form-control" id="proposeNotes" name="ProviderNotes" rows="2" placeholder="Explain why you're suggesting this new time..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning" id="proposeSubmitBtn">
                        <i class="fas fa-paper-plane mr-1"></i> Send Proposal to Customer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var loadedTabs = {};
            
            // Load tab content via AJAX
            function loadTabContent(tabId, status) {
                var contentContainer = $('#content-' + tabId);
                
                // Show loading indicator
                contentContainer.html(`
                    <div class="text-center py-5">
                        <i class="fas fa-spinner fa-spin fa-2x"></i>
                        <p class="mt-2 text-muted">Loading bookings...</p>
                    </div>
                `);
                
                var url = '@Url.Action("GetProviderBookingsTab", "Booking")';
                if (status !== '') {
                    url += '?statusFilter=' + status;
                }
                
                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function(html) {
                        contentContainer.html(html);
                        loadedTabs[tabId] = true;
                        bindEventHandlers(contentContainer);
                    },
                    error: function(xhr) {
                        contentContainer.html(`
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle mr-2"></i>
                                Failed to load bookings. Please try again.
                            </div>
                        `);
                    }
                });
            }
            
            // Bind event handlers for dynamically loaded content
            function bindEventHandlers(container) {
                // Accept button - show modal with time data
                container.find('.btn-accept').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    var serviceName = $(this).data('service-name');
                    var customerName = $(this).data('customer-name');
                    var basePrice = $(this).data('base-price');
                    var requestedDate = $(this).data('requested-date');
                    var requestedStart = $(this).data('requested-start');
                    var requestedEnd = $(this).data('requested-end');
                    var hasEndTime = $(this).data('has-end-time') === true || $(this).data('has-end-time') === 'true';
                    
                    // Clear user proposal flag for normal accept
                    $('#acceptForm').data('is-user-proposal', false);
                    
                    $('#acceptBookingId').val(bookingId);
                    $('#acceptServiceName').text(serviceName);
                    $('#acceptCustomerName').text(customerName);
                    $('#acceptBasePrice').text(formatNumber(basePrice));
                    $('#negotiatedPrice').val(basePrice);
                    $('#providerNotes').val('');
                    $('#timeValidationMsg').hide();
                    $('#acceptSubmitBtn').prop('disabled', false);
                    
                    // Display preferred time
                    if (requestedDate && requestedStart) {
                        var formattedDate = new Date(requestedDate + 'T00:00:00').toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                        var formattedStart = formatTime12h(requestedStart);
                        
                        if (hasEndTime && requestedEnd) {
                            var formattedEnd = formatTime12h(requestedEnd);
                            $('#displayPreferredTime').text(formattedDate + ' at ' + formattedStart + ' - ' + formattedEnd);
                            $('#noEndTimeNote').hide();
                        } else {
                            $('#displayPreferredTime').text(formattedDate + ' at ' + formattedStart);
                            $('#noEndTimeNote').show();
                        }
                        $('#preferredTimeBox').show();
                        
                        // Pre-fill confirmed time with requested time
                        $('#confirmedDate').val(requestedDate);
                        $('#confirmedEndDate').val(requestedDate); // Default end date same as start
                        $('#confirmedStartTime').val(requestedStart);
                        
                        // Set end time - if customer provided it, use it; otherwise leave empty
                        if (hasEndTime && requestedEnd) {
                            $('#confirmedEndTime').val(requestedEnd);
                        } else {
                            $('#confirmedEndTime').val('');
                        }
                    } else {
                        $('#preferredTimeBox').hide();
                        // Set default to tomorrow if no requested date
                        var tomorrow = new Date();
                        tomorrow.setDate(tomorrow.getDate() + 1);
                        var tomorrowStr = tomorrow.toISOString().split('T')[0];
                        $('#confirmedDate').val(tomorrowStr);
                        $('#confirmedEndDate').val(tomorrowStr); // Default end date same as start
                        $('#confirmedStartTime').val('');
                        $('#confirmedEndTime').val('');
                    }
                    
                    $('#acceptModal').modal('show');
                });

                // Decline button - show modal
                container.find('.btn-decline').off('click').on('click', function() {
                    $('#declineBookingId').val($(this).data('booking-id'));
                    $('#declineReason').val('');
                    $('#declineModal').modal('show');
                });

                // Propose Time button (for NeedRescheduling bookings) - show propose modal
                container.find('.btn-propose-time').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    var serviceName = $(this).data('service-name');
                    var customerName = $(this).data('customer-name');
                    var basePrice = $(this).data('base-price');
                    
                    // Set defaults
                    var tomorrow = new Date();
                    tomorrow.setDate(tomorrow.getDate() + 1);
                    var tomorrowStr = tomorrow.toISOString().split('T')[0];
                    
                    $('#proposeBookingId').val(bookingId);
                    $('#proposeServiceName').text(serviceName);
                    $('#proposeCustomerName').text(customerName);
                    $('#proposePrice').val(basePrice);
                    $('#proposeNotes').val('');
                    
                    // Set default dates and clear times
                    $('#proposeDate').val(tomorrowStr);
                    $('#proposeEndDate').val(tomorrowStr);
                    $('#proposeStartTime').val('');
                    $('#proposeEndTime').val('');
                    $('#proposeTimeValidationMsg').hide();
                    $('#proposeSubmitBtn').prop('disabled', false);
                    
                    $('#proposeTimeModal').modal('show');
                });

                // Accept User Proposal button - show accept modal with proposed schedule pre-filled
                container.find('.btn-accept-user-proposal').off('click').on('click', function() {
                    var btn = $(this);
                    var bookingId = btn.data('booking-id');
                    var serviceName = btn.data('service-name');
                    var basePrice = btn.data('base-price');
                    var proposedStart = btn.data('proposed-start');
                    var proposedEnd = btn.data('proposed-end');
                    var proposedSchedule = btn.data('proposed-schedule');
                    
                    // Set modal values
                    $('#acceptBookingId').val(bookingId);
                    $('#acceptServiceName').text(serviceName || 'Service');
                    $('#negotiatedPrice').val(basePrice);
                    
                    // Parse proposed datetime and fill fields
                    if (proposedStart) {
                        var startDate = proposedStart.split('T')[0];
                        var startTime = proposedStart.split('T')[1];
                        $('#confirmedDate').val(startDate);
                        $('#confirmedStartTime').val(startTime);
                    }
                    
                    if (proposedEnd) {
                        var endDate = proposedEnd.split('T')[0];
                        var endTime = proposedEnd.split('T')[1];
                        $('#confirmedEndDate').val(endDate);
                        $('#confirmedEndTime').val(endTime);
                    } else if (proposedStart) {
                        // Default end date to start date if not provided
                        $('#confirmedEndDate').val(proposedStart.split('T')[0]);
                        $('#confirmedEndTime').val('');
                    }
                    
                    // Show customer's proposed time in the modal
                    if (proposedSchedule) {
                        $('#displayPreferredTime').text('Customer Proposal: ' + proposedSchedule);
                        $('#preferredTimeBox').show();
                        $('#noEndTimeNote').hide();
                    } else {
                        $('#preferredTimeBox').hide();
                    }
                    
                    // Set user proposal mode flag
                    $('#acceptForm').data('is-user-proposal', true);
                    
                    $('#acceptModal').modal('show');
                });

                // Reject User Proposal button
                container.find('.btn-reject-user-proposal').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    
                    Swal.fire({
                        title: 'Decline Customer Proposal?',
                        text: 'Would you like to decline this time proposal? The customer can propose again or you can propose a different time.',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#dc3545',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: '<i class="fas fa-times mr-1"></i> Decline',
                        cancelButtonText: 'Keep'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: '@Url.Action("ProviderRejectUserProposal", "Booking")',
                                type: 'POST',
                                data: { bookingId: bookingId },
                                headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                                success: function(response) {
                                    if (response.success) {
                                        Swal.fire('Declined', response.message, 'info').then(() => {
                                            refreshCurrentTab();
                                        });
                                    } else {
                                        Swal.fire('Error', response.message, 'error');
                                    }
                                },
                                error: function() {
                                    Swal.fire('Error', 'Failed to decline proposal.', 'error');
                                }
                            });
                        }
                    });
                });

                // Start Job button
                container.find('.btn-start-job').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    
                    Swal.fire({
                        title: 'Start Job',
                        text: 'Are you ready to start this job? The customer will be notified that the service is in progress.',
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#17a2b8',
                        confirmButtonText: '<i class="fas fa-play mr-1"></i> Yes, Start Job'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: '@Url.Action("StartJob", "Booking")',
                                type: 'POST',
                                data: { bookingId: bookingId },
                                headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                                success: function(response) {
                                    if (response.success) {
                                        Swal.fire('Started!', response.message, 'success').then(() => {
                                            refreshCurrentTab();
                                        });
                                    } else {
                                        Swal.fire('Error', response.message, 'error');
                                    }
                                },
                                error: function(xhr) {
                                    Swal.fire('Error', xhr.responseJSON?.message || 'An error occurred', 'error');
                                }
                            });
                        }
                    });
                });

                // Complete button
                container.find('.btn-complete').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    
                    Swal.fire({
                        title: 'Complete Job',
                        text: 'Have you finished this job? The customer will be notified to make the payment.',
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#28a745',
                        confirmButtonText: '<i class="fas fa-check-double mr-1"></i> Yes, Complete Job'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: '@Url.Action("ProviderComplete", "Booking")',
                                type: 'POST',
                                data: { bookingId: bookingId },
                                headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                                success: function(response) {
                                    if (response.success) {
                                        Swal.fire('Completed!', response.message, 'success').then(() => {
                                            refreshCurrentTab();
                                        });
                                    } else {
                                        Swal.fire('Error', response.message, 'error');
                                    }
                                },
                                error: function(xhr) {
                                    Swal.fire('Error', xhr.responseJSON?.message || 'An error occurred', 'error');
                                }
                            });
                        }
                    });
                });

                // Mark job done
                container.find('.btn-mark-done').off('click').on('click', function() {
                    var bookingId = $(this).data('booking-id');
                    
                    Swal.fire({
                        title: 'Mark Job as Done',
                        text: 'Are you sure the job has been completed? The customer will be notified to confirm.',
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#007bff',
                        confirmButtonText: '<i class="fas fa-check-circle mr-1"></i> Yes, Mark as Done'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: '@Url.Action("MarkJobDone", "Booking")',
                                type: 'POST',
                                data: { bookingId: bookingId },
                                headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                                success: function(response) {
                                    if (response.success) {
                                        Swal.fire('Done!', response.message, 'success').then(() => {
                                            refreshCurrentTab();
                                        });
                                    } else {
                                        Swal.fire('Error', response.message, 'error');
                                    }
                                },
                                error: function(xhr) {
                                    Swal.fire('Error', xhr.responseJSON?.message || 'An error occurred', 'error');
                                }
                            });
                        }
                    });
                });
            }
            
            // Refresh current active tab
            function refreshCurrentTab() {
                var activeTab = $('#providerBookingTabs .nav-link.active');
                var tabId = activeTab.attr('href').replace('#tab-', '');
                var status = activeTab.data('status');
                loadedTabs[tabId] = false;
                loadTabContent(tabId, status);
            }
            
            // Format number with commas
            function formatNumber(num) {
                return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            }
            
            // Format time to 12-hour format
            function formatTime12h(time) {
                if (!time) return '';
                var parts = time.split(':');
                var hours = parseInt(parts[0], 10);
                var minutes = parts[1] || '00';
                var ampm = hours >= 12 ? 'PM' : 'AM';
                hours = hours % 12;
                hours = hours ? hours : 12;
                return hours + ':' + minutes + ' ' + ampm;
            }
            
            // Real-time validation for date/time fields
            $('#confirmedDate, #confirmedEndDate, #confirmedStartTime, #confirmedEndTime').on('change', function() {
                var startDate = $('#confirmedDate').val();
                var endDate = $('#confirmedEndDate').val();
                var startTime = $('#confirmedStartTime').val();
                var endTime = $('#confirmedEndTime').val();
                
                if (startDate && endDate && startTime && endTime) {
                    // Check if end date is before start date
                    if (endDate < startDate) {
                        $('#timeValidationMsg')
                            .removeClass('alert-success')
                            .addClass('alert alert-danger')
                            .html('<i class="fas fa-exclamation-circle mr-1"></i> End date cannot be before start date')
                            .show();
                        $('#acceptSubmitBtn').prop('disabled', true);
                    } 
                    // For same-day bookings, check if end time is after start time
                    else if (endDate === startDate && endTime <= startTime) {
                        $('#timeValidationMsg')
                            .removeClass('alert-success')
                            .addClass('alert alert-danger')
                            .html('<i class="fas fa-exclamation-circle mr-1"></i> End time must be after start time')
                            .show();
                        $('#acceptSubmitBtn').prop('disabled', true);
                    } else {
                        var msg = startDate === endDate 
                            ? '<i class="fas fa-check-circle mr-1"></i> Schedule looks good!'
                            : '<i class="fas fa-check-circle mr-1"></i> Multi-day service schedule set!';
                        $('#timeValidationMsg')
                            .removeClass('alert-danger')
                            .addClass('alert alert-success')
                            .html(msg)
                            .show();
                        $('#acceptSubmitBtn').prop('disabled', false);
                    }
                } else {
                    $('#timeValidationMsg').hide();
                    $('#acceptSubmitBtn').prop('disabled', false);
                }
            });
            
            // Sync end date with start date when start date changes (if end date is empty or before new start)
            $('#confirmedDate').on('change', function() {
                var startDate = $(this).val();
                var endDate = $('#confirmedEndDate').val();
                if (!endDate || endDate < startDate) {
                    $('#confirmedEndDate').val(startDate);
                }
            });
            
            // Tab change event
            $('#providerBookingTabs a[data-toggle="tab"]').on('shown.bs.tab', function(e) {
                var tabId = $(e.target).attr('href').replace('#tab-', '');
                var status = $(e.target).data('status');
                
                // Only load if not already loaded
                if (!loadedTabs[tabId]) {
                    loadTabContent(tabId, status);
                }
            });
            
            // Accept form submit
            $('#acceptForm').on('submit', function(e) {
                e.preventDefault();
                submitAcceptForm(false);
            });
            
            // Function to submit accept form (can be called with confirmation flag)
            function submitAcceptForm(confirmOutsideWorkingHours) {
                var price = parseFloat($('#negotiatedPrice').val());
                if (!price || price <= 0) {
                    Swal.fire('Error', 'Please enter a valid price', 'error');
                    return;
                }
                
                var confirmedDate = $('#confirmedDate').val();
                var confirmedEndDate = $('#confirmedEndDate').val();
                var confirmedStartTime = $('#confirmedStartTime').val();
                var confirmedEndTime = $('#confirmedEndTime').val();
                
                if (!confirmedDate) {
                    Swal.fire('Error', 'Please select a start date', 'error');
                    return;
                }
                
                if (!confirmedEndDate) {
                    Swal.fire('Error', 'Please select an end date', 'error');
                    return;
                }
                
                if (confirmedEndDate < confirmedDate) {
                    Swal.fire('Error', 'End date cannot be before start date', 'error');
                    return;
                }
                
                if (!confirmedStartTime) {
                    Swal.fire('Error', 'Please select a start time', 'error');
                    return;
                }
                
                if (!confirmedEndTime) {
                    Swal.fire('Error', 'Please set the end time for the job', 'error');
                    return;
                }
                
                // For same-day bookings, ensure end time is after start time
                if (confirmedDate === confirmedEndDate && confirmedEndTime <= confirmedStartTime) {
                    Swal.fire('Error', 'End time must be after start time', 'error');
                    return;
                }
                
                var data = {
                    BookingId: $('#acceptBookingId').val(),
                    NegotiatedPrice: price,
                    ProviderNotes: $('#providerNotes').val(),
                    ConfirmedDate: confirmedDate,
                    ConfirmedEndDate: confirmedEndDate,
                    ConfirmedStartTime: confirmedStartTime + ':00',
                    ConfirmedEndTime: confirmedEndTime + ':00',
                    ConfirmOutsideWorkingHours: confirmOutsideWorkingHours
                };

                // Disable submit button and show loading
                var submitBtn = $('#acceptSubmitBtn');
                submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-1"></i> Processing...');

                $.ajax({
                    url: '@Url.Action("Accept", "Booking")',
                    type: 'POST',
                    data: data,
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                    success: function(response) {
                        // Check if server is asking for confirmation (working hours warning)
                        if (response.requiresConfirmation) {
                            submitBtn.prop('disabled', false).html('<i class="fas fa-check mr-1"></i> Accept & Send to Customer');
                            
                            Swal.fire({
                                title: 'Working Hours Warning',
                                html: response.warningMessage,
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#28a745',
                                cancelButtonColor: '#6c757d',
                                confirmButtonText: '<i class="fas fa-check mr-1"></i> Yes, Accept Anyway',
                                cancelButtonText: 'Edit Schedule'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    // Resubmit with confirmation flag
                                    submitAcceptForm(true);
                                }
                            });
                            return;
                        }
                        
                        $('#acceptModal').modal('hide');
                        submitBtn.prop('disabled', false).html('<i class="fas fa-check mr-1"></i> Accept & Send to Customer');
                        if (response.success) {
                            Swal.fire('Accepted!', response.message, 'success').then(() => {
                                refreshCurrentTab();
                            });
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function(xhr) {
                        $('#acceptModal').modal('hide');
                        submitBtn.prop('disabled', false).html('<i class="fas fa-check mr-1"></i> Accept & Send to Customer');
                        Swal.fire('Error', xhr.responseJSON?.message || 'An error occurred', 'error');
                    }
                });
            }

            // Decline form submit
            $('#declineForm').on('submit', function(e) {
                e.preventDefault();
                
                var data = {
                    BookingId: $('#declineBookingId').val(),
                    Reason: $('#declineReason').val()
                };

                $.ajax({
                    url: '@Url.Action("ProviderCancel", "Booking")',
                    type: 'POST',
                    data: data,
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                    success: function(response) {
                        $('#declineModal').modal('hide');
                        if (response.success) {
                            Swal.fire('Declined', response.message, 'success').then(() => {
                                refreshCurrentTab();
                            });
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function(xhr) {
                        $('#declineModal').modal('hide');
                        Swal.fire('Error', xhr.responseJSON?.message || 'An error occurred', 'error');
                    }
                });
            });
            
            // Reset modal state when hidden
            $('#acceptModal').on('hidden.bs.modal', function() {
                $('#timeValidationMsg').hide();
                $('#acceptSubmitBtn').prop('disabled', false).html('<i class="fas fa-check mr-1"></i> Accept & Send to Customer');
                // Clear all form fields
                $('#confirmedDate').val('');
                $('#confirmedEndDate').val('');
                $('#confirmedStartTime').val('');
                $('#confirmedEndTime').val('');
            });
            
            // Propose Time validation
            $('#proposeDate, #proposeEndDate, #proposeStartTime, #proposeEndTime').on('change', function() {
                var startDate = $('#proposeDate').val();
                var endDate = $('#proposeEndDate').val();
                var startTime = $('#proposeStartTime').val();
                var endTime = $('#proposeEndTime').val();
                
                if (startDate && endDate && startTime && endTime) {
                    if (endDate < startDate) {
                        $('#proposeTimeValidationMsg')
                            .removeClass('alert-success').addClass('alert alert-danger')
                            .html('<i class="fas fa-exclamation-circle mr-1"></i> End date cannot be before start date')
                            .show();
                        $('#proposeSubmitBtn').prop('disabled', true);
                    } else if (endDate === startDate && endTime <= startTime) {
                        $('#proposeTimeValidationMsg')
                            .removeClass('alert-success').addClass('alert alert-danger')
                            .html('<i class="fas fa-exclamation-circle mr-1"></i> End time must be after start time')
                            .show();
                        $('#proposeSubmitBtn').prop('disabled', true);
                    } else {
                        var msg = startDate === endDate 
                            ? '<i class="fas fa-check-circle mr-1"></i> Schedule looks good!'
                            : '<i class="fas fa-check-circle mr-1"></i> Multi-day schedule set!';
                        $('#proposeTimeValidationMsg')
                            .removeClass('alert-danger').addClass('alert alert-success')
                            .html(msg).show();
                        $('#proposeSubmitBtn').prop('disabled', false);
                    }
                } else {
                    $('#proposeTimeValidationMsg').hide();
                }
            });
            
            // Sync propose end date with start date
            $('#proposeDate').on('change', function() {
                var startDate = $(this).val();
                var endDate = $('#proposeEndDate').val();
                if (!endDate || endDate < startDate) {
                    $('#proposeEndDate').val(startDate);
                }
            });
            
            // Propose Time form submit
            $('#proposeTimeForm').on('submit', function(e) {
                e.preventDefault();
                submitProposeForm();
            });
            
            function submitProposeForm() {
                var price = parseFloat($('#proposePrice').val());
                if (!price || price <= 0) {
                    Swal.fire('Error', 'Please enter a valid price', 'error');
                    return;
                }
                
                var startDate = $('#proposeDate').val();
                var endDate = $('#proposeEndDate').val();
                var startTime = $('#proposeStartTime').val();
                var endTime = $('#proposeEndTime').val();
                
                if (!startDate || !endDate || !startTime || !endTime) {
                    Swal.fire('Error', 'Please fill in all schedule fields', 'error');
                    return;
                }
                
                if (endDate < startDate || (startDate === endDate && endTime <= startTime)) {
                    Swal.fire('Error', 'Please fix the schedule errors', 'error');
                    return;
                }
                
                var data = {
                    BookingId: $('#proposeBookingId').val(),
                    NegotiatedPrice: price,
                    ProviderNotes: $('#proposeNotes').val(),
                    ConfirmedDate: startDate,
                    ConfirmedEndDate: endDate,
                    ConfirmedStartTime: startTime + ':00',
                    ConfirmedEndTime: endTime + ':00'
                };
                
                var submitBtn = $('#proposeSubmitBtn');
                submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-1"></i> Sending...');
                
                $.ajax({
                    url: '@Url.Action("ProviderProposeTime", "Booking")',
                    type: 'POST',
                    data: data,
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                    success: function(response) {
                        $('#proposeTimeModal').modal('hide');
                        submitBtn.prop('disabled', false).html('<i class="fas fa-paper-plane mr-1"></i> Send Proposal to Customer');
                        if (response.success) {
                            Swal.fire('Proposal Sent!', response.message, 'success').then(() => {
                                refreshCurrentTab();
                            });
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function(xhr) {
                        $('#proposeTimeModal').modal('hide');
                        submitBtn.prop('disabled', false).html('<i class="fas fa-paper-plane mr-1"></i> Send Proposal to Customer');
                        Swal.fire('Error', xhr.responseJSON?.message || 'An error occurred', 'error');
                    }
                });
            }
            
            // Reset propose modal on close
            $('#proposeTimeModal').on('hidden.bs.modal', function() {
                $('#proposeTimeValidationMsg').hide();
                $('#proposeSubmitBtn').prop('disabled', false).html('<i class="fas fa-paper-plane mr-1"></i> Send Proposal to Customer');
            });
            
            // Load initial tab (All)
            loadTabContent('all', '');
        });
    </script>
    @Html.AntiForgeryToken()
}
