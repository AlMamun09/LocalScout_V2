@model LocalScout.Application.DTOs.AuditDTOs.AuditLogPagedResultDto

@{
    ViewData["Title"] = "Audit Log";
    Layout = "~/Views/Shared/Layouts/_DashboardLayout.cshtml";
    
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    var actions = ViewBag.Actions as List<string> ?? new List<string>();
    var filter = Model?.AppliedFilters;
}

<style>
    .audit-table th {
        white-space: nowrap;
        font-size: 0.85rem;
    }
    .audit-table td {
        font-size: 0.85rem;
        vertical-align: middle;
    }
    .audit-details {
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        cursor: pointer;
    }
    .badge-category {
        font-size: 0.75rem;
    }
    .audit-details:hover {
        text-decoration: underline;
    }
</style>

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <i class="fas fa-clipboard-list mr-2"></i>Audit Log
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Audit Log</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        
        <!-- Filters Card -->
        <div class="card card-outline card-primary">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-filter mr-2"></i>Filters</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form id="audit-filter-form">
                    <div class="row">
                        <div class="col-md-2 mb-2">
                            <label class="small font-weight-bold">Search</label>
                            <input type="text" name="search" id="search-input" class="form-control form-control-sm" 
                                   placeholder="Search user, action, details..."
                                   value="@filter?.SearchQuery" />
                        </div>
                        <div class="col-md-2 mb-2">
                            <label class="small font-weight-bold">Category</label>
                            <select name="category" id="category-select" class="form-control form-control-sm">
                                <option value="">All Categories</option>
                                @foreach (var cat in categories)
                                {
                                    <option value="@cat" selected="@(filter?.Category == cat)">@cat</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2 mb-2">
                            <label class="small font-weight-bold">Action</label>
                            <select name="actionFilter" id="action-select" class="form-control form-control-sm">
                                <option value="">All Actions</option>
                                @foreach (var act in actions)
                                {
                                    <option value="@act" selected="@(filter?.Action == act)">@act</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2 mb-2">
                            <label class="small font-weight-bold">Start Date</label>
                            <input type="date" name="startDate" id="start-date" class="form-control form-control-sm" 
                                   value="@filter?.StartDate?.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-2 mb-2">
                            <label class="small font-weight-bold">End Date</label>
                            <input type="date" name="endDate" id="end-date" class="form-control form-control-sm"
                                   value="@filter?.EndDate?.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-1 mb-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary btn-sm btn-block">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        <div class="col-md-1 mb-2 d-flex align-items-end">
                            <button type="button" id="clear-filters" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times mr-1"></i>Clear
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Results Card -->
        <div class="card" id="audit-log-card">
            <div class="card-body table-responsive p-2">
                <table id="auditLogsTable" class="table table-bordered table-hover audit-table w-100">
                    <thead class="thead-light">
                        <tr>
                            <th>Timestamp</th>
                            <th>User</th>
                            <th>Category</th>
                            <th>Action</th>
                            <th>Details</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<!-- Log Details Modal -->
<div class="modal fade" id="logDetailsModal" tabindex="-1" role="dialog" aria-labelledby="logDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title text-white" id="logDetailsModalLabel">
                    <i class="fas fa-info-circle mr-2"></i>Audit Log Details
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="logDetailsContent">
                <!-- Content will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var searchTimer = null;

            const encode = function (val) {
                return $('<div/>').text(val ?? '').html();
            };

            var table = $('#auditLogsTable').DataTable({
                processing: true,
                serverSide: true,
                paging: true,
                pageLength: 25,
                lengthChange: false,
                searching: false,
                order: [],
                responsive: true,
                autoWidth: false,
                ajax: {
                    url: '@Url.Action("GetAuditLogsData", "Admin")',
                    type: 'GET',
                    data: function (d) {
                        d.searchTerm = $('#search-input').val();
                        d.category = $('#category-select').val();
                        d.actionFilter = $('#action-select').val();
                        d.startDate = $('#start-date').val();
                        d.endDate = $('#end-date').val();
                    }
                },
                columns: [
                    {
                        data: null,
                        render: function (data) {
                            return `<small>${encode(data.timestampDate)}<br/><span class="text-muted">${encode(data.timestampTime)}</span></small>`;
                        }
                    },
                    {
                        data: null,
                        render: function (data) {
                            if (!data.userName || data.userName === 'System') {
                                return '<span class="text-muted">System</span>';
                            }
                            var email = data.userEmail ? `<br/><small class="text-muted">${encode(data.userEmail)}</small>` : '';
                            return `<span class="font-weight-bold">${encode(data.userName)}</span>${email}`;
                        }
                    },
                    {
                        data: 'category',
                        render: function (data) {
                            return `<span class="badge badge-category badge-secondary">${encode(data)}</span>`;
                        }
                    },
                    {
                        data: 'action',
                        render: function (data) {
                            return `<strong>${encode(data)}</strong>`;
                        }
                    },
                    {
                        data: 'details',
                        render: function (data) {
                            if (!data) return '-';
                            var shortText = data.length > 50 ? data.substring(0, 50) + '...' : data;
                            return `<span class="audit-details" title="Click to view full details">${encode(shortText)}</span>`;
                        }
                    },
                    {
                        data: 'isSuccess',
                        render: function (data) {
                            return data
                                ? '<span class="badge badge-success"><i class="fas fa-check"></i></span>'
                                : '<span class="badge badge-danger"><i class="fas fa-times"></i></span>';
                        },
                        className: 'text-center'
                    },
                    {
                        data: null,
                        orderable: false,
                        render: function () {
                            return '<button type="button" class="btn btn-xs btn-info view-log-details" title="View Details"><i class="fas fa-eye"></i></button>';
                        }
                    }
                ]
            });

            function reloadTable() {
                table.ajax.reload(null, true);
            }

            // Form submit (filter button click)
            $('#audit-filter-form').on('submit', function (e) {
                e.preventDefault();
                reloadTable();
            });

            // Clear filters
            $('#clear-filters').on('click', function () {
                $('#search-input').val('');
                $('#category-select').val('');
                $('#action-select').val('');
                $('#start-date').val('');
                $('#end-date').val('');
                reloadTable();
            });

            // Auto-filter on select change
            $('#category-select, #action-select').on('change', function () {
                reloadTable();
            });

            // Debounced search on input
            $('#search-input').on('input', function () {
                clearTimeout(searchTimer);
                searchTimer = setTimeout(function () {
                    reloadTable();
                }, 400);
            });

            // Date change
            $('#start-date, #end-date').on('change', function () {
                reloadTable();
            });

            // View details click (delegated for dynamic content)
            $('#auditLogsTable').on('click', '.view-log-details', function () {
                var rowData = table.row($(this).closest('tr')).data();
                if (!rowData) return;

                var statusBadge = rowData.isSuccess
                    ? '<span class="badge badge-success"><i class="fas fa-check mr-1"></i>Success</span>'
                    : '<span class="badge badge-danger"><i class="fas fa-times mr-1"></i>Failed</span>';

                var detailsSafe = encode(rowData.details || 'No additional details');
                var content = `
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-box bg-light mb-3">
                                <span class="info-box-icon bg-primary"><i class="fas fa-clock"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Timestamp</span>
                                    <span class="info-box-number">${encode(rowData.timestampDate)} ${encode(rowData.timestampTime)}</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box bg-light mb-3">
                                <span class="info-box-icon bg-info"><i class="fas fa-user"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">User</span>
                                    <span class="info-box-number">${encode(rowData.userName || 'System')}</span>
                                    <small class="text-muted">${encode(rowData.userEmail || '-')}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 150px;">Status</th>
                            <td>${statusBadge}</td>
                        </tr>
                        <tr>
                            <th>Category</th>
                            <td><span class="badge badge-secondary">${encode(rowData.category)}</span></td>
                        </tr>
                        <tr>
                            <th>Action</th>
                            <td><strong>${encode(rowData.action)}</strong></td>
                        </tr>
                        <tr>
                            <th>Entity Type</th>
                            <td>${encode(rowData.entityType || '-')}</td>
                        </tr>
                        <tr>
                            <th>Entity ID</th>
                            <td><code>${encode(rowData.entityId || '-')}</code></td>
                        </tr>
                        <tr>
                            <th>IP Address</th>
                            <td>${encode(rowData.ipAddress || '-')}</td>
                        </tr>
                        <tr>
                            <th>Details</th>
                            <td><pre style="white-space: pre-wrap; word-wrap: break-word; max-height: 200px; overflow-y: auto;">${detailsSafe}</pre></td>
                        </tr>
                    </table>
                `;

                $('#logDetailsContent').html(content);
                $('#logDetailsModal').modal('show');
            });
        });
    </script>
}
