@model LocalScout.Application.DTOs.ServiceProviderDto

<div class="card card-primary card-outline">
  <div class="card-body box-profile">
    <div class="text-center">
      <img class="profile-user-img img-fluid img-circle"
        src="@(Model.ProfilePictureUrl ?? "/adminlte/dist/img/user2-160x160.jpg")" alt="Provider profile picture"
        style="width: 100px; height: 100px; object-fit: cover;">
    </div>

    <h3 class="profile-username text-center">@Model.FullName</h3>
    <p class="text-muted text-center">
      <span class="badge badge-info">@Model.Role</span>
      @if (Model.IsVerified)
      {
        <span class="badge badge-success ml-1">
          <i class="fas fa-check-circle"></i> Verified
        </span>
      }
      else
      {
        <span class="badge badge-secondary ml-1">
          <i class="fas fa-clock"></i> Pending Verification
        </span>
      }
    </p>

    <ul class="list-group list-group-unbordered mb-3">
      <li class="list-group-item">
        <b><i class="fas fa-building mr-2 text-primary"></i>Business Name</b>
        <a class="float-right">@Model.BusinessName</a>
      </li>
      <li class="list-group-item">
        <b><i class="fas fa-envelope mr-2 text-primary"></i>Email</b>
        <a class="float-right">@Model.Email</a>
      </li>
      <li class="list-group-item">
        <b><i class="fas fa-phone mr-2 text-primary"></i>Phone</b>
        <a class="float-right">@Model.PhoneNumber</a>
      </li>
      <li class="list-group-item">
        <b><i class="fas fa-venus-mars mr-2 text-primary"></i>Gender</b>
        <a class="float-right">@Model.Gender</a>
      </li>
      <li class="list-group-item">
        <b><i class="fas fa-calendar-alt mr-2 text-primary"></i>Joined</b>
        <a class="float-right">@Model.CreatedAt.ToString("MMM dd, yyyy")</a>
      </li>
      <li class="list-group-item">
        <b><i class="fas fa-map-marker-alt mr-2 text-primary"></i>Address</b><br>
        <span class="text-muted">@Model.Address</span>
      </li>
    </ul>

    @if (!string.IsNullOrEmpty(Model.Description))
    {
      <div class="card card-outline card-info">
        <div class="card-header">
          <h3 class="card-title"><i class="fas fa-info-circle mr-2"></i>Business Description</h3>
        </div>
        <div class="card-body">
          <p class="text-muted">@Model.Description</p>
        </div>
      </div>
    }

    <!-- Statistics -->
    <div class="row mt-3">
      <div class="col-md-4">
        <div class="info-box bg-gradient-primary">
          <span class="info-box-icon"><i class="fas fa-briefcase"></i></span>
          <div class="info-box-content">
            <span class="info-box-text">Services</span>
            <span class="info-box-number">@Model.TotalServices</span>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="info-box bg-gradient-success">
          <span class="info-box-icon"><i class="fas fa-calendar-check"></i></span>
          <div class="info-box-content">
            <span class="info-box-text">Bookings</span>
            <span class="info-box-number">@Model.TotalBookings</span>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="info-box bg-gradient-warning">
          <span class="info-box-icon"><i class="fas fa-star"></i></span>
          <div class="info-box-content">
            <span class="info-box-text">Rating</span>
            <span class="info-box-number">@Model.AverageRating.ToString("F1")</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Status Info -->
    <div class="row mt-3">
      <div class="col-md-6">
        <div class="alert @(Model.IsActive ? "alert-success" : "alert-warning")">
          <i class="icon fas @(Model.IsActive ? "fa-check-circle" : "fa-exclamation-triangle")"></i>
          <strong>Account Status:</strong> @(Model.IsActive ? "Active" : "Blocked")
          @if (Model.UpdatedAt.HasValue)
          {
            <br>

            <small>Last updated: @Model.UpdatedAt.Value.ToString("MMM dd, yyyy hh:mm tt")</small>
          }
        </div>
      </div>
      <div class="col-md-6">
        <div class="alert @(Model.IsVerified ? "alert-info" : "alert-secondary")">
          <i class="icon fas @(Model.IsVerified ? "fa-check-circle" : "fa-clock")"></i>
          <strong>Verification Status:</strong> @(Model.IsVerified ? "Verified" : "Pending Verification")
          @if (Model.VerifiedAt.HasValue && Model.IsVerified)
          {
            <br>

            <small>Verified on: @Model.VerifiedAt.Value.ToString("MMM dd, yyyy hh:mm tt")</small>
          }
        </div>
      </div>
    </div>

    @if (Model.EmailConfirmed)
    {
      <div class="alert alert-info">
        <i class="icon fas fa-envelope-open-text"></i>
        Email verified on registration
      </div>
    }
  </div>
</div>