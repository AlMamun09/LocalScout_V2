@model LocalScout.Application.DTOs.UserDto

<div class="card card-primary card-outline">
    <div class="card-body box-profile">
        <div class="text-center">
            <img class="profile-user-img img-fluid img-circle"
                src="@(Model.ProfilePictureUrl ?? "/adminlte/dist/img/user2-160x160.jpg")" alt="User profile picture"
                style="width: 100px; height: 100px; object-fit: cover;">
        </div>

        <h3 class="profile-username text-center">@Model.FullName</h3>
        <p class="text-muted text-center">@Model.Role</p>

        <ul class="list-group list-group-unbordered mb-3">
            <li class="list-group-item">
                <b>Email</b> <a class="float-right">@Model.Email</a>
            </li>
            <li class="list-group-item">
                <b>Phone</b> <a class="float-right">@Model.PhoneNumber</a>
            </li>
            <li class="list-group-item">
                <b>Gender</b> <a class="float-right">@Model.Gender</a>
            </li>
            <li class="list-group-item">
                <b>Joined</b> <a class="float-right">@Model.CreatedAt.ToString("MMM dd, yyyy")</a>
            </li>
            <li class="list-group-item">
                <b>Address</b> <br>
                <span class="text-muted">@Model.Address</span>
            </li>
        </ul>

        @if (Model.Role == "ServiceProvider")
        {
            <div class="alert alert-info">
                <i class="icon fas fa-info"></i> This user is a Service Provider.
            </div>
        }
    </div>
</div>