@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/Layouts/_DashboardLayout.cshtml";
}

<!-- No custom CSS needed anymore! -->

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Admin Dashboard</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        <!-- User Statistics (Using Bootstrap Cards) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="card bg-info text-white h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="font-weight-bold mb-0 dashboard-stat-number" id="totalUsers">...</h3>
                            <p class="mb-0">Total Users</p>
                        </div>
                        <i class="fas fa-users fa-3x" style="opacity: 0.4;"></i>
                    </div>
                    <a asp-action="ActiveUsers" class="card-footer text-white text-center small p-1" style="background-color: rgba(0,0,0,0.1); text-decoration: none;">
                        View All <i class="fas fa-arrow-circle-right ml-1"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="card bg-success text-white h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="font-weight-bold mb-0 dashboard-stat-number" id="activeUsers">...</h3>
                            <p class="mb-0">Active Users</p>
                        </div>
                        <i class="fas fa-user-check fa-3x" style="opacity: 0.4;"></i>
                    </div>
                    <a asp-action="ActiveUsers" class="card-footer text-white text-center small p-1" style="background-color: rgba(0,0,0,0.1); text-decoration: none;">
                        Manage <i class="fas fa-arrow-circle-right ml-1"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="card bg-warning h-100">
                    <div class="card-body d-flex justify-content-between align-items-center text-white">
                        <div>
                            <h3 class="font-weight-bold mb-0 dashboard-stat-number" id="blockedUsers">...</h3>
                            <p class="mb-0">Blocked Users</p>
                        </div>
                        <i class="fas fa-user-slash fa-3x" style="opacity: 0.4;"></i>
                    </div>
                    <a asp-action="BlockedUsers" class="card-footer text-white text-center small p-1" style="background-color: rgba(0,0,0,0.1); text-decoration: none;">
                        View Details <i class="fas fa-arrow-circle-right ml-1"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="card bg-danger text-white h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="font-weight-bold mb-0 dashboard-stat-number" id="newUsersToday">...</h3>
                            <p class="mb-0">New Users Today</p>
                        </div>
                        <i class="fas fa-user-plus fa-3x" style="opacity: 0.4;"></i>
                    </div>
                    <a asp-action="ActiveUsers" class="card-footer text-white text-center small p-1" style="background-color: rgba(0,0,0,0.1); text-decoration: none;">
                        View All <i class="fas fa-arrow-circle-right ml-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Provider Statistics (Using Bootstrap Cards) -->
        <div class="row mt-3">
            <div class="col-lg-3 col-6">
                <div class="card bg-primary text-white h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="font-weight-bold mb-0 dashboard-stat-number" id="totalProviders">...</h3>
                            <p class="mb-0">Total Providers</p>
                        </div>
                        <i class="fas fa-user-tie fa-3x" style="opacity: 0.4;"></i>
                    </div>
                    <a asp-action="ActiveProviders" class="card-footer text-white text-center small p-1" style="background-color: rgba(0,0,0,0.1); text-decoration: none;">
                        View All <i class="fas fa-arrow-circle-right ml-1"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="card bg-teal text-white h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="font-weight-bold mb-0 dashboard-stat-number" id="activeProviders">...</h3>
                            <p class="mb-0">Active Providers</p>
                        </div>
                        <i class="fas fa-check-circle fa-3x" style="opacity: 0.4;"></i>
                    </div>
                    <a asp-action="ActiveProviders" class="card-footer text-white text-center small p-1" style="background-color: rgba(0,0,0,0.1); text-decoration: none;">
                        Manage <i class="fas fa-arrow-circle-right ml-1"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="card bg-secondary text-white h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="font-weight-bold mb-0 dashboard-stat-number" id="blockedProviders">...</h3>
                            <p class="mb-0">Blocked Providers</p>
                        </div>
                        <i class="fas fa-ban fa-3x" style="opacity: 0.4;"></i>
                    </div>
                    <a asp-action="BlockedProviders" class="card-footer text-white text-center small p-1" style="background-color: rgba(0,0,0,0.1); text-decoration: none;">
                        View Details <i class="fas fa-arrow-circle-right ml-1"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="card text-white h-100" style="background-color: #fd7e14;">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="font-weight-bold mb-0 dashboard-stat-number" id="pendingVerifications">...</h3>
                            <p class="mb-0">Pending Verifications</p>
                        </div>
                        <i class="fas fa-clock fa-3x" style="opacity: 0.4;"></i>
                    </div>
                    <a asp-action="VerificationRequests" class="card-footer text-white text-center small p-1" style="background-color: rgba(0,0,0,0.1); text-decoration: none;">
                        Review <i class="fas fa-arrow-circle-right ml-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mt-4 mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-bolt mr-1"></i>
                            Quick Actions
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-2">
                                <a asp-action="ActiveUsers" class="btn btn-outline-success btn-block">
                                    <i class="fas fa-users mr-2"></i> Manage Users
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a asp-action="ActiveProviders" class="btn btn-outline-info btn-block">
                                    <i class="fas fa-user-tie mr-2"></i> Manage Providers
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a asp-action="VerificationRequests" class="btn btn-outline-warning btn-block text-dark">
                                    <i class="fas fa-check-circle mr-2"></i> Verifications
                                    <span class="badge badge-danger ml-2" id="verificationBadge" style="display: none;">
                                        <i class="fas fa-spinner fa-spin"></i>
                                    </span>
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a link="#" class="btn btn-outline-primary btn-block">
                                    <i class="fas fa-chart-pie mr-2"></i> View Reports
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity Tables -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header border-transparent">
                        <h3 class="card-title">Recent Users</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table m-0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody id="recentUsers">
                                    <tr>
                                        <td colspan="4" class="text-center">
                                            <div class="spinner-border spinner-border-sm text-primary"></div>
                                            Loading...
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer clearfix">
                        <a asp-action="ActiveUsers" class="btn btn-sm btn-primary float-right">View All Users</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header border-transparent">
                        <h3 class="card-title">Recent Service Providers</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table m-0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Business</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody id="recentProviders">
                                    <tr>
                                        <td colspan="4" class="text-center">
                                            <div class="spinner-border spinner-border-sm text-primary"></div>
                                            Loading...
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer clearfix">
                        <a asp-action="ActiveProviders" class="btn btn-sm btn-primary float-right">View All Providers</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            loadDashboardStats();
        });

        function loadDashboardStats() {
            $.ajax({
                url: '@Url.Action("GetDashboardStats", "Admin")',
                type: 'GET',
                success: function (data) {
                    // Update user stats
                    $('#totalUsers').text(data.totalUsers || 0);
                    $('#activeUsers').text(data.activeUsers || 0);
                    $('#blockedUsers').text(data.blockedUsers || 0);
                    $('#newUsersToday').text(data.newUsersToday || 0);

                    // Update provider stats
                    $('#totalProviders').text(data.totalProviders || 0);
                    $('#activeProviders').text(data.activeProviders || 0);
                    $('#blockedProviders').text(data.blockedProviders || 0);
                    $('#pendingVerifications').text(data.pendingVerifications || 0);
                    
                    // Update verification badge with visibility toggle
                    var pendingCount = data.pendingVerifications || 0;
                    var $badge = $('#verificationBadge');
                    
                    if (pendingCount > 0) {
                        $badge.text(pendingCount).show();
                    } else {
                        $badge.hide();
                    }

                     // Load lists
                     loadRecentUsers(data.recentUsers);
                     loadRecentProviders(data.recentProviders);
                },
                error: function () {
                    $('.card h3').not('.card-title').text('0');
                    $('#recentUsers').html('<tr><td colspan="4" class="text-center text-danger">Failed to load data</td></tr>');
                    $('#recentProviders').html('<tr><td colspan="4" class="text-center text-danger">Failed to load data</td></tr>');
                }
            });
        }

        function loadRecentUsers(users) {
            if (!users || users.length === 0) {
                $('#recentUsers').html('<tr><td colspan="4" class="text-center text-muted">No recent users</td></tr>');
                return;
            }
            var html = '';
            users.forEach(function (user) {
                var statusBadge = user.isActive
                    ? '<span class="badge badge-success">Active</span>'
                    : '<span class="badge badge-warning">Blocked</span>';
                html += `<tr>
                            <td>${user.fullName}</td>
                            <td>${user.email}</td>
                            <td>${statusBadge}</td>
                            <td><span class="badge badge-light">${formatDate(user.createdAt)}</span></td>
                         </tr>`;
            });
            $('#recentUsers').html(html);
        }

        function loadRecentProviders(providers) {
            if (!providers || providers.length === 0) {
                $('#recentProviders').html('<tr><td colspan="4" class="text-center text-muted">No recent providers</td></tr>');
                return;
            }
            var html = '';
            providers.forEach(function (provider) {
                var statusBadge = provider.isActive
                    ? '<span class="badge badge-success">Active</span>'
                    : '<span class="badge badge-warning">Blocked</span>';
                html += `<tr>
                            <td>${provider.fullName}</td>
                            <td>${provider.businessName || 'N/A'}</td>
                            <td>${statusBadge}</td>
                            <td><span class="badge badge-light">${formatDate(provider.createdAt)}</span></td>
                         </tr>`;
            });
            $('#recentProviders').html(html);
        }

        function formatDate(dateString) {
            var date = new Date(dateString);
            var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
            return months[date.getMonth()] + ' ' + date.getDate() + ', ' + date.getFullYear();
        }
    </script>
}
