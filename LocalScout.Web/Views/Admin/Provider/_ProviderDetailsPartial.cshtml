@model LocalScout.Application.DTOs.ServiceProviderDto

<div class="card card-widget widget-user shadow-none border-0 mb-0">
    <!-- 1. Header with Banner -->
    <div class="widget-user-header text-white"
         style="background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%); height: 120px;">
        <h3 class="widget-user-username text-right font-weight-bold">@Model.FullName</h3>
        <h5 class="widget-user-desc text-right opacity-75">@Model.BusinessName</h5>
    </div>

    <!-- 2. Profile Image (Floating) -->
    <div class="widget-user-image">
        <img class="img-circle elevation-2 border-white" 
             src="@(Model.ProfilePictureUrl ?? "/adminlte/dist/img/user2-160x160.jpg")" 
             alt="User Avatar"
             style="width: 90px; height: 90px; object-fit: cover; border: 3px solid #fff;">
    </div>

    <div class="card-body pt-5 px-4 pb-3">
        <!-- 3. Key Details -->
        <div class="text-center mb-4">
            <span class="badge @(Model.IsActive ? "badge-success" : "badge-danger") px-3 py-1 mx-1 rounded-pill">
                @(Model.IsActive ? "Active Account" : "Blocked Account")
            </span>
            @if (Model.IsVerified)
            {
                <span class="badge badge-primary px-3 py-1 mx-1 rounded-pill">
                    <i class="fas fa-check-circle mr-1"></i>Verified Provider
                </span>
            }
            else
            {
                <span class="badge badge-warning px-3 py-1 mx-1 rounded-pill">
                    <i class="fas fa-clock mr-1"></i>Verification Pending
                </span>
            }
        </div>

        <div class="row text-center mb-4 text-muted small">
            <div class="col-4 border-right">
                <i class="fas fa-envelope text-primary d-block mb-1"></i> @Model.Email
            </div>
            <div class="col-4 border-right">
                <i class="fas fa-phone text-primary d-block mb-1"></i> @Model.PhoneNumber
            </div>
            <div class="col-4">
                <i class="fas fa-map-marker-alt text-primary d-block mb-1"></i> @Model.Address
            </div>
        </div>

        @if (!Model.IsActive && !string.IsNullOrEmpty(Model.BlockReason))
        {
            <div class="alert alert-danger mb-4 rounded-lg shadow-sm">
                <div class="d-flex align-items-center">
                    <div class="mr-3"><i class="fas fa-ban fa-2x"></i></div>
                    <div>
                        <h6 class="font-weight-bold mb-1">Account Blocked</h6>
                        <small>@Model.BlockReason</small>
                    </div>
                </div>
            </div>
        }

        <!-- 4. Statistics Grid -->
        <h6 class="text-secondary text-uppercase font-weight-bold text-xs mb-3 border-bottom pb-2">Performance Metrics</h6>
        <div class="row">
            <!-- Services -->
            <div class="col-sm-6 col-md-3 mb-3">
                <div class="info-box bg-light shadow-sm mb-0 p-2 min-vh-0">
                    <span class="info-box-icon bg-info elevation-1 rounded-circle" style="width: 40px; height: 40px; font-size: 1.2rem;"><i class="fas fa-concierge-bell"></i></span>
                    <div class="info-box-content p-0 ml-2">
                        <span class="info-box-text small text-muted">Services</span>
                        <span class="info-box-number">
                            @(ViewBag.TotalServices ?? 0) 
                            <small class="text-success ml-1">(@(ViewBag.ActiveServices ?? 0) Active)</small>
                        </span>
                    </div>
                </div>
            </div>
            <!-- Rating -->
            <div class="col-sm-6 col-md-3 mb-3">
                <div class="info-box bg-light shadow-sm mb-0 p-2 min-vh-0">
                    <span class="info-box-icon bg-warning elevation-1 text-white rounded-circle" style="width: 40px; height: 40px; font-size: 1.2rem;"><i class="fas fa-star"></i></span>
                    <div class="info-box-content p-0 ml-2">
                        <span class="info-box-text small text-muted">Rating</span>
                        <span class="info-box-number">
                            @(ViewBag.AverageRating ?? 0)
                            <small class="text-muted text-xs">/ @(ViewBag.TotalReviews ?? 0) Rev</small>
                        </span>
                    </div>
                </div>
            </div>
            <!-- Bookings -->
            <div class="col-sm-6 col-md-3 mb-3">
                <div class="info-box bg-light shadow-sm mb-0 p-2 min-vh-0">
                    <span class="info-box-icon bg-primary elevation-1 rounded-circle" style="width: 40px; height: 40px; font-size: 1.2rem;"><i class="fas fa-calendar-check"></i></span>
                    <div class="info-box-content p-0 ml-2">
                        <span class="info-box-text small text-muted">Bookings</span>
                        <span class="info-box-number">
                            @(ViewBag.TotalBookingsReceived ?? 0)
                            <small class="text-info ml-1" title="In Progress">(@(ViewBag.InProgressBookings ?? 0) Active)</small>
                        </span>
                    </div>
                </div>
            </div>
            <!-- Earnings -->
            <div class="col-sm-6 col-md-3 mb-3">
                <div class="info-box bg-light shadow-sm mb-0 p-2 min-vh-0">
                    <span class="info-box-icon bg-success elevation-1 rounded-circle" style="width: 40px; height: 40px; font-size: 1.2rem;"><i class="fas fa-coins"></i></span>
                    <div class="info-box-content p-0 ml-2">
                        <span class="info-box-text small text-muted">Earnings</span>
                        <span class="info-box-number text-success">à§³@(ViewBag.TotalEarnings?.ToString("N0") ?? "0")</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- 5. Verification Document -->
        @if (ViewBag.VerificationRequest != null)
        {
            var request = (LocalScout.Domain.Entities.VerificationRequest)ViewBag.VerificationRequest;
            var docPath = $"/uploads/verification/{request.DocumentPath}";
            
            <h6 class="text-secondary text-uppercase font-weight-bold text-xs mt-3 mb-3 border-bottom pb-2">Verification Document</h6>
            <div class="row">
                <div class="col-12">
                    <div class="card bg-light border-0 shadow-sm mb-0">
                        <div class="card-body p-3">
                            <div class="d-flex align-items-center justify-content-between mb-2">
                                <div>
                                    <i class="fas fa-file-contract text-secondary mr-2"></i>
                                    <strong class="text-dark">@request.DocumentType</strong>
                                </div>
                                <span class="badge @(request.Status == LocalScout.Domain.Enums.VerificationStatus.Pending ? "badge-warning" : (request.Status == LocalScout.Domain.Enums.VerificationStatus.Approved ? "badge-success" : "badge-danger"))">
                                    @request.Status
                                </span>
                            </div>

                            @if (request.DocumentPath.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                            {
                                <a href="@docPath" target="_blank" class="btn btn-outline-info btn-block btn-sm">
                                    <i class="fas fa-file-pdf mr-2"></i>View PDF Document
                                </a>
                            }
                            else
                            {
                                <div class="text-center bg-white rounded p-2 border mx-auto" style="max-width: 100%;">
                                    <a href="@docPath" target="_blank" title="View Full Size">
                                        <img src="@docPath" class="img-fluid rounded" style="max-height: 200px; object-fit: contain;"
                                             onerror="this.onerror=null;this.src='/adminlte/dist/img/boxed-bg.jpg';" />
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons (Sticky Bottom feel if needed, but simple block/inline works) -->
            @if (request.Status == LocalScout.Domain.Enums.VerificationStatus.Pending)
            {
                <div class="row mt-4">
                    <div class="col-6">
                        <button type="button" class="btn btn-outline-danger btn-block font-weight-bold" onclick="rejectProvider('@Model.Id')">
                            <i class="fas fa-times mr-2"></i>Reject
                        </button>
                    </div>
                    <div class="col-6">
                        <button type="button" class="btn btn-success btn-block font-weight-bold shadow-sm" onclick="approveProvider('@Model.Id')">
                            <i class="fas fa-check mr-2"></i>Approve
                        </button>
                    </div>
                </div>
            }
        }
        else
        {
             <div class="alert alert-secondary text-center mt-4 mb-0">
                <i class="fas fa-info-circle mr-2"></i>No verification documents submitted.
            </div>
        }
    </div>
</div>
