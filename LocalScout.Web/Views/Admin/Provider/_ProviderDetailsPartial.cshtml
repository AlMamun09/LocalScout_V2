@model LocalScout.Application.DTOs.ServiceProviderDto

<div class="card card-primary card-outline mb-0 border-top-0">
    <div class="card-body box-profile p-3">

        <!-- 1. COMPACT HEADER: Image Left, Info Right -->
        <div class="row mb-3 align-items-center">
            <!-- Left: Image -->
            <div class="col-sm-3 text-center">
                <img class="profile-user-img img-fluid img-circle"
                     src="@(Model.ProfilePictureUrl ?? "/adminlte/dist/img/user2-160x160.jpg")"
                     alt="User profile picture"
                     style="width: 80px; height: 80px; object-fit: cover;">
            </div>

            <!-- Right: Basic Info -->
            <div class="col-sm-9 pl-0">
                <h5 class="profile-username mb-1 text-truncate font-weight-bold">@Model.FullName</h5>
                <p class="text-muted mb-2 small">
                    <i class="fas fa-building text-primary mr-1"></i> @Model.BusinessName
                    <span class="mx-1">|</span>
                    <span class="badge badge-info">@Model.Role</span>
                </p>

                <!-- Grid for Contact Details -->
                <div class="row text-muted small">
                    <div class="col-md-12 mb-1 text-truncate" title="@Model.Email">
                        <i class="fas fa-envelope text-primary mr-1"></i> @Model.Email
                    </div>
                    <div class="col-md-12 mb-1">
                        <i class="fas fa-phone text-primary mr-1"></i> @Model.PhoneNumber
                    </div>
                    <div class="col-md-12 text-truncate" title="@Model.Address">
                        <i class="fas fa-map-marker-alt text-primary mr-1"></i> @Model.Address
                    </div>
                    <div class="col-md-12 mt-1">
                        <i class="fas fa-calendar-alt text-primary mr-1"></i> Joined: @Model.CreatedAt.ToString("MMM dd, yyyy")
                    </div>
                </div>
            </div>
        </div>

        <div class="dropdown-divider"></div>

        <!-- 3. COMPACT STATUS BAR -->
        <div class="row mb-3 mx-0 bg-light rounded py-2">
            <div class="col-6 border-right text-center small">
                <strong>Account:</strong>
                <span class="@(Model.IsActive ? "text-success" : "text-danger") font-weight-bold">
                    @(Model.IsActive ? "Active" : "Blocked")
                </span>
            </div>
            <div class="col-6 text-center small">
                <strong>Status:</strong>
                @if (Model.IsVerified)
                {
                    <span class="text-success font-weight-bold"><i class="fas fa-check-circle"></i> Verified</span>
                }
                else
                {
                    <span class="text-secondary font-weight-bold"><i class="fas fa-clock"></i> Pending</span>
                }
            </div>
        </div>

        <!-- 4. VERIFICATION DOCUMENT & ACTIONS -->
        @if (ViewBag.VerificationRequest != null)
        {
            var request = (LocalScout.Domain.Entities.VerificationRequest)ViewBag.VerificationRequest;
            var docPath = $"/uploads/verification/{request.DocumentPath}";

            <div class="card card-secondary card-outline mb-2">
                <div class="card-header py-1 px-2 bg-white border-bottom-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="small font-weight-bold text-muted">
                            <i class="fas fa-file-contract mr-1"></i> @request.DocumentType
                        </span>
                        <span class="badge @(request.Status == LocalScout.Domain.Enums.VerificationStatus.Pending ? "badge-warning" : (request.Status == LocalScout.Domain.Enums.VerificationStatus.Approved ? "badge-success" : "badge-danger"))" style="font-size: 0.75rem;">
                            @request.Status
                        </span>
                    </div>
                </div>
                <div class="card-body p-2 text-center bg-light border-top">
                    @if (request.DocumentPath.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                    {
                        <a href="@docPath" target="_blank" class="btn btn-sm btn-outline-info btn-block">
                            <i class="fas fa-file-pdf mr-1"></i> Open PDF Document
                        </a>
                    }
                    else
                    {
                        <a href="@docPath" target="_blank" title="Click to view full size">
                            <img src="@docPath" class="img-fluid rounded border shadow-sm"
                                 style="max-height: 150px; width: auto;"
                                 alt="Verification Doc"
                                 onerror="this.onerror=null;this.src='/adminlte/dist/img/boxed-bg.jpg';" />
                        </a>
                    }
                </div>
            </div>

            <!-- ACTION BUTTONS (Only if Pending) -->
            @if (request.Status == LocalScout.Domain.Enums.VerificationStatus.Pending)
            {
                <div class="text-right mt-3 border-top pt-3">
                    <button type="button" class="btn btn-danger btn-sm font-weight-bold shadow-sm mr-2"
                            onclick="rejectProvider('@Model.Id')">
                        <i class="fas fa-times mr-1"></i> Reject
                    </button>
                    <button type="button" class="btn btn-success btn-sm font-weight-bold shadow-sm"
                            onclick="approveProvider('@Model.Id')">
                        <i class="fas fa-check mr-1"></i> Approve
                    </button>
                </div>
            }
        }
        else
        {
            <div class="alert alert-light border text-center small mb-0 p-2 text-muted">
                No documents submitted.
            </div>
        }
    </div>
</div>