@section Scripts {
    <script>
        $(document).ready(function() {
            loadNearbyServices();
        });

        function loadNearbyServices() {
            const loadingEl = $('#servicesLoading');
            const gridEl = $('#servicesGrid');
            const emptyEl = $('#servicesEmpty');
            const viewAllEl = $('#viewAllSection');

            loadingEl.show();
            gridEl.hide();
            emptyEl.hide();
            viewAllEl.hide();

            $.ajax({
                url: '@Url.Action("GetNearbyServices", "Home")',
                type: 'GET',
                data: { count: 20 },
                success: function(response) {
                    loadingEl.hide();

                    if (response.success && response.data && response.data.length > 0) {
                        renderServiceCards(response.data);
                        gridEl.show();
                        viewAllEl.show();
                    } else {
                        emptyEl.show();
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Error loading services:', error);
                    loadingEl.hide();
                    emptyEl.show();
                }
            });
        }

        function renderServiceCards(services) {
            const grid = $('#servicesGrid');
            grid.empty();

            services.forEach(function(service) {
                const card = createServiceCard(service);
                grid.append(card);
            });
        }

        function createServiceCard(service) {
            const joinedDate = new Date(service.providerJoinedDate).toLocaleDateString('en-US', { 
                month: 'short', 
                day: 'numeric', 
                year: 'numeric' 
            });

            const rating = service.rating ? service.rating.toFixed(1) : '4.6';
            const priceDisplay = service.pricingUnit === 'Hourly' ? `$${service.price}/h` : `$${service.price}`;
            const pricingLabel = service.pricingUnit || 'Price';

            // Get short address (up to 2nd comma)
            let shortAddress = service.providerLocation;
            if (shortAddress) {
                let commaCount = 0;
                let endIndex = -1;
                
                for (let i = 0; i < shortAddress.length; i++) {
                    if (shortAddress[i] === ',') {
                        commaCount++;
                        if (commaCount === 2) {
                            endIndex = i;
                            break;
                        }
                    }
                }
                
                if (endIndex > 0) {
                    shortAddress = shortAddress.substring(0, endIndex).trim();
                }
                
                // Limit to 30 characters max
                if (shortAddress.length > 30) {
                    shortAddress = shortAddress.substring(0, 30) + '...';
                }
            }

            return `
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 border-0 shadow-sm service-card" style="border-radius: 16px; overflow: hidden; transition: all 0.3s ease;">
                        <!-- Service Image -->
                        <div class="position-relative" style="height: 200px; overflow: hidden;">
                            <img src="${service.firstImagePath || '/images/placeholder-service.jpg'}" 
                                 alt="${service.serviceName}" 
                                 class="w-100 h-100" 
                                 style="object-fit: cover; transition: transform 0.3s ease;"
                                 onerror="this.src='/images/placeholder-service.jpg'">
                            
                            <!-- Bookmark Button -->
                            <button class="btn btn-sm position-absolute bg-white shadow-sm" 
                                    style="top: 10px; right: 10px; border-radius: 50%; width: 32px; height: 32px; padding: 0; border: none; transition: all 0.2s ease;">
                                <i class="far fa-bookmark text-muted" style="font-size: 0.85rem;"></i>
                            </button>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body p-3 bg-white">
                            <!-- Title & Rating Row -->
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="font-weight-bold text-dark mb-0" style="font-size: 0.95rem; line-height: 1.3; flex: 1;">
                                    ${service.serviceName}
                                </h6>
                                <div class="d-flex align-items-center ml-2">
                                    <i class="fas fa-star text-warning" style="font-size: 0.75rem;"></i>
                                    <span class="font-weight-bold text-dark ml-1" style="font-size: 0.8rem;">${rating}</span>
                                    <span class="text-muted" style="font-size: 0.7rem;">/5</span>
                                </div>
                            </div>

                            <!-- Category & Provider Name Row -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge bg-light text-primary" style="font-size: 0.7rem; font-weight: 600; padding: 0.25rem 0.6rem; border-radius: 4px;">
                                    ${service.categoryName}
                                </span>
                                <span class="text-muted" style="font-size: 0.7rem;">
                                    ${service.providerName}
                                </span>
                            </div>

                            <!-- Join Date -->
                            <div class="d-flex align-items-center mb-2">
                                <i class="far fa-calendar text-muted" style="font-size: 0.75rem; width: 16px;"></i>
                                <span class="text-muted ml-2" style="font-size: 0.75rem;">Joined ${joinedDate}</span>
                            </div>

                            <!-- Location -->
                            ${shortAddress ? `
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-map-marker-alt text-muted" style="font-size: 0.75rem; width: 16px;"></i>
                                    <span class="text-muted ml-2" style="font-size: 0.75rem;">${shortAddress}</span>
                                </div>
                            ` : ''}

                            <!-- Working Days & Hours -->
                            ${service.workingDays && service.workingHours ? `
                                <div class="d-flex align-items-center mb-3">
                                    <i class="far fa-clock text-muted" style="font-size: 0.75rem; width: 16px;"></i>
                                    <span class="text-muted ml-2" style="font-size: 0.75rem;">${service.workingDays} ${service.workingHours}</span>
                                </div>
                            ` : ''}

                            <!-- Price & Book Button Row -->
                            <div class="d-flex justify-content-between align-items-center mt-auto pt-2">
                                <div>
                                    <small class="text-muted d-block" style="font-size: 0.65rem;">${pricingLabel}</small>
                                    <strong class="text-dark" style="font-size: 1.1rem; font-weight: 700;">${priceDisplay}</strong>
                                </div>
                                <button class="btn btn-primary btn-sm px-3 shadow-sm text-white" style="background-color: #005C89; border-color: #005C89; border-radius: 8px; font-weight: 600; font-size: 0.8rem;">
                                    Book Now
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        function debounce(func, wait) {
            let timeout;
            return function () {
                const context = this, args = arguments;
                clearTimeout(timeout);
                timeout = setTimeout(function () {
                    func.apply(context, args);
                }, wait);
            };
        }
    </script>

    <style>
        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12) !important;
        }

        .service-card:hover img {
            transform: scale(1.05);
        }

        .service-card .btn-primary:hover {
            background-color: #137DD6 !important;
            border-color: #137DD6 !important;
            transform: scale(1.02);
        }

        .service-card .bg-white.shadow-sm:hover i {
            color: #e53e3e !important;
        }
    </style>
}
