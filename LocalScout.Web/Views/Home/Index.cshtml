@{
    ViewData["Title"] = "Find Local Service Providers";
    ViewData["HideNavbarSearch"] = true;
}

<div class="position-relative d-flex align-items-center justify-content-center w-100 overflow-hidden"
     style="min-height: 75vh; background: radial-gradient(circle at 50% 100%, #1a202c 10%, #020617 90%);">

    <div class="container position-relative z-1 text-center py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">

                <h1 class="display-4 text-white mb-3"
                    style="font-weight: 700; letter-spacing: -0.5px;">
                    Find Trusted Local Experts in Your Neighbourhood
                </h1>


                <p class="text-white-50 mb-5 mx-auto"
                   style="max-width: 700px; font-weight: 300; font-size: 1.1rem;">
                    From home repairs to creative design, hire verified professionals who get the job done right.
                </p>


                <div class="mx-auto mt-4" style="max-width: 720px;">
                    <form asp-controller="Home" asp-action="Search" method="get">

                        <div class="d-flex align-items-center rounded-pill shadow-lg p-1"
                             style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.3); backdrop-filter: blur(5px);">

                            <input type="text" name="query"
                                   class="form-control border-0 shadow-none bg-transparent px-4 text-white"
                                   placeholder="What service do you need?"
                                   style="height: 55px; font-size: 1.1rem;">


                            <button class="btn btn-primary rounded-pill px-4 font-weight-bold m-1" type="submit"
                                    style="height: 48px; min-width: 120px;">
                                Search
                            </button>

                        </div>
                    </form>
                </div>
                <style>
                    .form-control::placeholder {
                        color: rgba(255,255,255, 0.7) !important;
                    }
                </style>
            </div>
        </div>
    </div>
</div>

<section class="bg-white">
    <div class="container py-4">
        <div class="row">

            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="card-body">
                        <div class="text-primary mb-3">
                            <i class="fas fa-search fa-3x"></i>
                        </div>
                        <h5 class="card-title font-weight-bold">Find Local Pros</h5>
                        <p class="card-text text-muted">
                            Browse trusted service providers in your area with verified reviews.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="card-body">
                        <div class="text-primary mb-3">
                            <i class="fas fa-calendar-check fa-3x"></i>
                        </div>
                        <h5 class="card-title font-weight-bold">Book Instantly</h5>
                        <p class="card-text text-muted">
                            Schedule appointments with professionals quickly and easily.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="card-body">
                        <div class="text-primary mb-3">
                            <i class="fas fa-shield-alt fa-3x"></i>
                        </div>
                        <h5 class="card-title font-weight-bold">Safe &amp; Secure</h5>
                        <p class="card-text text-muted">
                            All service providers are verified and rated by real customers.
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>