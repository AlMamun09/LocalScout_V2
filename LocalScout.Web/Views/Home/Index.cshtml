@using LocalScout.Domain.Entities
@model IEnumerable<ServiceCategory>

@{
    ViewData["Title"] = "Find Local Service Providers";
}

<div class="position-relative d-flex align-items-center justify-content-center w-100 overflow-hidden"
     style="min-height: 75vh; background: radial-gradient(circle at 50% 100%, #1a202c 10%, #020617 90%);">

    <div class="container position-relative z-1 text-center py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">

                <h1 class="display-4 mb-2 pb-2"
                    style="font-weight: 700; letter-spacing: -0.5px; background: linear-gradient(to right, #1d4ed8, #06b6d4); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                    Find Trusted Local Experts in Your Neighbourhood
                </h1>

                <p class="text-white-50 mt-1 mb-4 mx-auto"
                   style="max-width: 700px; font-weight: 300; font-size: 1.1rem;">
                    From home repairs to creative design, hire verified professionals who get the job done right <br />
                    Explore our top service categories and hire verified professionals.
                </p>

                <div id="categoryHeroCarousel" class="carousel slide mt-4" data-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            // If Model is null, init empty list to avoid crash
                            var categoryList = Model != null ? Model.ToList() : new List<ServiceCategory>();
                            var itemsPerSlide = 4;
                            var chunkedCategories = categoryList
                            .Select((x, i) => new { Index = i, Value = x })
                            .GroupBy(x => x.Index / itemsPerSlide)
                            .Select(x => x.Select(v => v.Value).ToList())
                            .ToList();
                        }

                        @if (chunkedCategories.Any())
                        {
                            for (int i = 0; i < chunkedCategories.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="row justify-content-center">
                                        @foreach (var item in chunkedCategories[i])
                                        {
                                            <div class="col-6 col-md-3 mb-3">
                                                <a asp-controller="Home" asp-action="Search" asp-route-categoryId="@item.ServiceCategoryId" class="text-decoration-none category-card-link">
                                                    <div class="card bg-transparent border-0 h-100 category-card">
                                                        <div class="card-body text-center p-3 rounded-lg"
                                                             style="background: #005C89; backdrop-filter: blur(5px); border: 1px solid rgba(255,255,255,0.2); transition: all 0.3s;">

                                                            <div class="mb-2 d-flex align-items-center justify-content-center" style="height: 60px;">
                                                                @if (!string.IsNullOrEmpty(item.IconPath))
                                                                {
                                                                    <img src="@item.IconPath" alt="@item.CategoryName" style="max-height: 50px; max-width: 100%; filter: brightness(0) invert(1);" />
                                                                }
                                                                else
                                                                {
                                                                    <i class="fas fa-tools fa-2x text-white"></i>
                                                                }
                                                            </div>

                                                            <h6 class="text-white mb-0 font-weight-bold">@item.CategoryName</h6>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-white-50">No active categories found.</div>
                        }
                    </div>

                    @if (chunkedCategories.Count > 1)
                    {
                        <a class="carousel-control-prev" href="#categoryHeroCarousel" role="button" data-slide="prev" style="width: 5%; left: -6%;">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#categoryHeroCarousel" role="button" data-slide="next" style="width: 5%; right: -6%;">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    }
                </div>

                <style>
                    .category-card:hover .card-body {
                        background: #137DD6 !important;
                        border-color: rgba(255, 255, 255, 0.8) !important;
                    }

                    .category-card-link.category-card-active .card-body {
                        background: #137DD6 !important;
                        border-color: rgba(255, 255, 255, 0.9) !important;
                        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.25);
                    }

                    .search-bar .form-control {
                        border: none;
                        box-shadow: none;
                    }

                    .search-bar .form-control:focus {
                        box-shadow: none;
                    }
                </style>

            </div>
        </div>
    </div>
</div>

<!-- Nearby Services Section -->
<section class="position-relative overflow-hidden" style="background: linear-gradient(180deg, #f0f4f8 0%, #e8f0f7 100%); padding: 2rem 0;">
    <!-- Decorative Background Elements -->
    <div class="position-absolute" style="top: -100px; right: -100px; width: 300px; height: 300px; background: radial-gradient(circle, rgba(59, 130, 246, 0.12) 0%, transparent 70%); border-radius: 50%; pointer-events: none;"></div>
    <div class="position-absolute" style="bottom: -150px; left: -150px; width: 400px; height: 400px; background: radial-gradient(circle, rgba(6, 182, 212, 0.10) 0%, transparent 70%); border-radius: 50%; pointer-events: none;"></div>

    <div class="container position-relative">
        <!-- Section Header -->
        <div class="row mb-5">
            <div class="col-12 text-center">
                <!-- Badge -->
                <div class="mb-3">
                    <span class="badge px-4 py-2 shadow-sm" 
                          style="background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); color: white; font-size: 0.75rem; font-weight: 700; letter-spacing: 1px; text-transform: uppercase; border-radius: 50px;">
                        <i class="fas fa-star mr-1"></i>Featured Services
                    </span>
                </div>

                <!-- Title -->
                <h2 class="font-weight-bold mb-3" style="font-size: 2.75rem; color: #1a202c; letter-spacing: -1px; line-height: 1.2;">
                    Discover Nearby <span style="background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Services</span>
                </h2>

                <!-- Decorative Line -->
                <div class="d-flex justify-content-center align-items-center">
                    <div style="height: 4px; width: 80px; background: linear-gradient(90deg, transparent 0%, #3b82f6 50%, transparent 100%); border-radius: 2px;"></div>
                </div>
            </div>
        </div>

        <!-- Loading State -->
        <div id="servicesLoading" class="text-center py-2">
            <div class="position-relative d-inline-block">
                <div class="spinner-border text-primary mb-3" role="status" style="width: 3.5rem; height: 3.5rem; border-width: 3px;">
                    <span class="sr-only">Loading...</span>
                </div>
                <div class="position-absolute" style="top: 50%; left: 50%; transform: translate(-50%, -50%);">
                    <i class="fas fa-search text-primary" style="font-size: 1.2rem; opacity: 0.4;"></i>
                </div>
            </div>
            <p class="text-muted font-weight-medium mt-3 mb-0" style="font-size: 1.05rem;">Finding best services near you...</p>
        </div>

        <!-- Services Grid -->
        <div id="servicesGrid" class="row" style="display: none;">
            <!-- Service cards will be dynamically loaded here -->
        </div>

        <!-- Empty State -->
        <div id="servicesEmpty" class="text-center py-5" style="display: none;">
            <div class="mb-4 position-relative d-inline-block">
                <div class="position-absolute" style="top: 50%; left: 50%; transform: translate(-50%, -50%); width: 120px; height: 120px; background: radial-gradient(circle, rgba(107, 114, 128, 0.1) 0%, transparent 70%); border-radius: 50%;"></div>
                <i class="fas fa-inbox position-relative" style="font-size: 4.5rem; color: #cbd5e1;"></i>
            </div>
            <h5 class="font-weight-bold mb-2" style="color: #64748b; font-size: 1.35rem;">No Services Available Yet</h5>
            <p class="text-muted mb-4" id="servicesEmptyMessage" style="font-size: 1rem; max-width: 400px; margin: 0 auto;">
                We're working on bringing amazing service providers to your area. Check back soon!
            </p>
            <a asp-controller="Home" asp-action="Search" class="btn btn-outline-primary btn-sm px-4 py-2" style="border-radius: 50px; font-weight: 600;">
                <i class="fas fa-search mr-2"></i>Browse All Services
            </a>
        </div>

        <!-- View All Button (shown when services exist) -->
        <div id="viewAllSection" class="text-center pt-3" style="display: none;">
            <a asp-controller="Home" asp-action="Search" 
               class="btn btn-lg px-5 py-3 shadow-sm" 
               style="background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); border: none; color: white; font-weight: 700; border-radius: 50px; font-size: 1rem; letter-spacing: 0.3px; transition: all 0.3s; text-decoration: none; display: inline-flex; align-items: center; gap: 10px;"
               onmouseover="this.style.transform='translateY(-3px)'; this.style.boxShadow='0 12px 24px rgba(59, 130, 246, 0.35)';"
               onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 12px rgba(0, 0, 0, 0.1)';">
                <span>Explore All Services</span>
                <i class="fas fa-arrow-right" style="font-size: 0.9rem;"></i>
            </a>
            <p class="text-muted mt-3 mb-0" style="font-size: 0.9rem;">
                <i class="fas fa-shield-alt mr-1" style="color: #10b981;"></i>
                All providers are verified and trusted
            </p>
        </div>
    </div>
</section>

<!-- Trust Indicators Section -->
