@section Scripts {
    <script>
        $(document).ready(function() {
            loadNearbyServices();
        });

        // Track state
        let allCardsHtml = '';
        let totalCardCount = 0;
        let isExpanded = false;
        const INITIAL_ROWS = 2;
        
        function getCardsPerRow() {
            const width = $(window).width();
            if (width >= 992) return 4;
            if (width >= 768) return 3;
            if (width >= 576) return 2;
            return 1;
        }

        function loadNearbyServices() {
            const loadingEl = $('#servicesLoading');
            const gridEl = $('#servicesGrid');
            const emptyEl = $('#servicesEmpty');
            const viewAllEl = $('#viewAllSection');

            loadingEl.show();
            gridEl.hide();
            emptyEl.hide();
            viewAllEl.hide();

            // Use endpoint that returns rendered HTML from _ServiceCard partial
            $.ajax({
                url: '@Url.Action("GetNearbyServicesHtml", "Home")',
                type: 'GET',
                data: { count: 50 },
                success: function(html) {
                    loadingEl.hide();

                    if (html && html.trim().length > 0) {
                        allCardsHtml = html;
                        totalCardCount = $(html).filter('.col-12').length;
                        
                        if (totalCardCount > 0) {
                            renderServiceCards(false);
                            gridEl.show();
                            
                            const cardsPerRow = getCardsPerRow();
                            const initialCount = INITIAL_ROWS * cardsPerRow;
                            if (totalCardCount > initialCount) {
                                viewAllEl.show();
                                updateButtonState();
                            }
                        } else {
                            emptyEl.show();
                        }
                    } else {
                        emptyEl.show();
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Error loading services:', error);
                    loadingEl.hide();
                    emptyEl.show();
                }
            });
        }

        function renderServiceCards(showAll) {
            const grid = $('#servicesGrid');
            grid.empty();

            const cardsPerRow = getCardsPerRow();
            const initialCount = INITIAL_ROWS * cardsPerRow;
            const $allCards = $(allCardsHtml).filter('.col-12');
            
            if (showAll) {
                $allCards.each(function(index) {
                    const $card = $(this).clone();
                    if (index >= initialCount) {
                        $card.addClass('service-card-animated');
                        $card.css({ 'opacity': '0', 'transform': 'translateY(20px)' });
                    }
                    grid.append($card);
                });
                
                setTimeout(function() {
                    $('.service-card-animated').each(function(i) {
                        const $el = $(this);
                        setTimeout(function() {
                            $el.css({
                                'opacity': '1',
                                'transform': 'translateY(0)',
                                'transition': 'opacity 0.4s ease, transform 0.4s ease'
                            });
                        }, i * 50);
                    });
                }, 50);
            } else {
                $allCards.slice(0, initialCount).each(function() {
                    grid.append($(this).clone());
                });
            }
        }

        function updateButtonState() {
            const btnText = $('#exploreAllBtnText');
            const btnIcon = $('#exploreAllBtnIcon');
            const cardsPerRow = getCardsPerRow();
            const initialCount = INITIAL_ROWS * cardsPerRow;
            const hiddenCount = totalCardCount - initialCount;
            
            if (isExpanded) {
                btnText.text('Show Less');
                btnIcon.css('transform', 'rotate(180deg)');
            } else {
                btnText.text('Explore All Services (' + hiddenCount + ' more)');
                btnIcon.css('transform', 'rotate(0deg)');
            }
        }

        $(document).on('click', '#exploreAllBtn', function() {
            isExpanded = !isExpanded;
            renderServiceCards(isExpanded);
            updateButtonState();
            
            if (isExpanded) {
                setTimeout(function() {
                    $('html, body').animate({ scrollTop: $('#viewAllSection').offset().top - 100 }, 500);
                }, 300);
            } else {
                $('html, body').animate({ scrollTop: $('#servicesGrid').offset().top - 100 }, 500);
            }
        });

        $(window).on('resize', debounce(function() {
            if (totalCardCount > 0) {
                renderServiceCards(isExpanded);
                const cardsPerRow = getCardsPerRow();
                const initialCount = INITIAL_ROWS * cardsPerRow;
                if (totalCardCount > initialCount) {
                    $('#viewAllSection').show();
                    updateButtonState();
                } else {
                    $('#viewAllSection').hide();
                }
            }
        }, 250));

        function debounce(func, wait) {
            let timeout;
            return function () {
                const context = this, args = arguments;
                clearTimeout(timeout);
                timeout = setTimeout(function () { func.apply(context, args); }, wait);
            };
        }
    </script>

    <style>
        .service-card-animated { opacity: 0; transform: translateY(20px); }
    </style>
}
