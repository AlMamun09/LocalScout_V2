@using LocalScout.Domain.Entities
@model IEnumerable<ServiceCategory>

@{
    ViewData["Title"] = "Find Local Service Providers";
}

<div class="position-relative d-flex align-items-center justify-content-center w-100 overflow-hidden"
     style="min-height: 75vh; background: radial-gradient(circle at 50% 100%, #1a202c 10%, #020617 90%);">

    <div class="container position-relative z-1 text-center py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">

                <h1 class="display-4 mb-2 pb-2"
                    style="font-weight: 700; letter-spacing: -0.5px; background: linear-gradient(to right, #1d4ed8, #06b6d4); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                    Find Trusted Local Experts in Your Neighbourhood
                </h1>

                <p class="text-white-50 mt-1 mb-4 mx-auto"
                   style="max-width: 700px; font-weight: 300; font-size: 1.1rem;">
                    From home repairs to creative design, hire verified professionals who get the job done right <br />
                    Explore our top service categories and hire verified professionals.
                </p>

                <div id="categoryHeroCarousel" class="carousel slide mt-4" data-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            // If Model is null, init empty list to avoid crash
                            var categoryList = Model != null ? Model.ToList() : new List<ServiceCategory>();
                            var itemsPerSlide = 4;
                            var chunkedCategories = categoryList
                            .Select((x, i) => new { Index = i, Value = x })
                            .GroupBy(x => x.Index / itemsPerSlide)
                            .Select(x => x.Select(v => v.Value).ToList())
                            .ToList();
                        }

                        @if (chunkedCategories.Any())
                        {
                            for (int i = 0; i < chunkedCategories.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="row justify-content-center">
                                        @foreach (var item in chunkedCategories[i])
                                        {
                                            <div class="col-6 col-md-3 mb-3">
                                                <a asp-controller="Home" asp-action="Search" asp-route-query="@item.CategoryName" class="text-decoration-none category-card-link">
                                                    <div class="card bg-transparent border-0 h-100 category-card">
                                                        <div class="card-body text-center p-3 rounded-lg"
                                                             style="background: #005C89; backdrop-filter: blur(5px); border: 1px solid rgba(255,255,255,0.2); transition: all 0.3s;">

                                                            <div class="mb-2 d-flex align-items-center justify-content-center" style="height: 60px;">
                                                                @if (!string.IsNullOrEmpty(item.IconPath))
                                                                {
                                                                    <img src="@item.IconPath" alt="@item.CategoryName" style="max-height: 50px; max-width: 100%; filter: brightness(0) invert(1);" />
                                                                }
                                                                else
                                                                {
                                                                    <i class="fas fa-tools fa-2x text-white"></i>
                                                                }
                                                            </div>

                                                            <h6 class="text-white mb-0 font-weight-bold">@item.CategoryName</h6>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-white-50">No active categories found.</div>
                        }
                    </div>

                    @if (chunkedCategories.Count > 1)
                    {
                        <a class="carousel-control-prev" href="#categoryHeroCarousel" role="button" data-slide="prev" style="width: 5%; left: -6%;">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#categoryHeroCarousel" role="button" data-slide="next" style="width: 5%; right: -6%;">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    }
                </div>

                <style>
                    .category-card:hover .card-body {
                        background: #137DD6 !important;
                        border-color: rgba(255, 255, 255, 0.8) !important;
                    }
                </style>

            </div>
        </div>
    </div>
</div>

<!-- Nearby Services Section -->
<section class="py-5" style="background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);">
    <div class="container">
        <!-- Section Header -->
        <div class="row mb-5">
            <div class="col-12 text-center">
                @* <div class="mb-3">
                    <span class="badge bg-primary text-white px-3 py-2 rounded-pill shadow-sm" style="font-size: 0.75rem; font-weight: 600; letter-spacing: 0.5px; text-transform: uppercase;">
                        <i class="fas fa-star mr-1"></i>Featured Services
                    </span>
                </div> *@
                <h2 class="font-weight-bold mb-3" style="font-size: 2.5rem; color: #1a202c; letter-spacing: -0.5px;">
                    Nearby Services
                </h2>
                <p class="text-muted mx-auto" style="max-width: 600px; font-size: 1.1rem; line-height: 1.6;">
                    Discover trusted professionals near you
                </p>
                <div class="d-flex justify-content-center align-items-center mt-3">
                    <div style="height: 3px; width: 60px; background: linear-gradient(90deg, #667eea 0%, #764ba2 100%); border-radius: 2px;"></div>
                </div>
            </div>
        </div>

        <!-- Loading State -->
        <div id="servicesLoading" class="text-center py-5">
            <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                <span class="sr-only">Loading...</span>
            </div>
            <p class="text-muted font-weight-medium">Loading services...</p>
        </div>

        <!-- Services Grid -->
        <div id="servicesGrid" class="row" style="display: none;">
            <!-- Service cards will be dynamically loaded here -->
        </div>

        <!-- Empty State -->
        <div id="servicesEmpty" class="text-center py-5" style="display: none;">
            <div class="mb-4">
                <i class="fas fa-inbox fa-4x text-muted" style="opacity: 0.3;"></i>
            </div>
            <h5 class="text-muted font-weight-bold mb-2">No Services Available</h5>
            <p class="text-muted">Check back later for new services in your area.</p>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadNearbyServices();
        });

        function loadNearbyServices() {
            const loadingEl = $('#servicesLoading');
            const gridEl = $('#servicesGrid');
            const emptyEl = $('#servicesEmpty');

            loadingEl.show();
            gridEl.hide();
            emptyEl.hide();

            $.ajax({
                url: '@Url.Action("GetNearbyServices", "Home")',
                type: 'GET',
                data: { count: 20 },
                success: function(response) {
                    loadingEl.hide();

                    if (response.success && response.data && response.data.length > 0) {
                        renderServiceCards(response.data);
                        gridEl.show();
                    } else {
                        emptyEl.show();
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Error loading services:', error);
                    loadingEl.hide();
                    emptyEl.show();
                }
            });
        }

        function renderServiceCards(services) {
            const grid = $('#servicesGrid');
            grid.empty();

            services.forEach(function(service) {
                const card = createServiceCard(service);
                grid.append(card);
            });
        }

        function createServiceCard(service) {
            const joinedDate = new Date(service.providerJoinedDate).toLocaleDateString('en-US', { 
                month: 'short', 
                day: 'numeric', 
                year: 'numeric' 
            });

            const rating = service.rating ? service.rating.toFixed(1) : '4.6';
            const priceDisplay = service.pricingUnit === 'Hourly' ? `$${service.price}/h` : `$${service.price}`;
            const pricingLabel = service.pricingUnit || 'Price';

            // Get short address (up to 2nd comma)
            let shortAddress = service.providerLocation;
            if (shortAddress) {
                let commaCount = 0;
                let endIndex = -1;
                
                for (let i = 0; i < shortAddress.length; i++) {
                    if (shortAddress[i] === ',') {
                        commaCount++;
                        if (commaCount === 2) {
                            endIndex = i;
                            break;
                        }
                    }
                }
                
                if (endIndex > 0) {
                    shortAddress = shortAddress.substring(0, endIndex).trim();
                }
                
                // Limit to 30 characters max
                if (shortAddress.length > 30) {
                    shortAddress = shortAddress.substring(0, 30) + '...';
                }
            }

            return `
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 border-0 shadow-sm service-card" style="border-radius: 16px; overflow: hidden; transition: all 0.3s ease;">
                        <!-- Service Image -->
                        <div class="position-relative" style="height: 200px; overflow: hidden;">
                            <img src="${service.firstImagePath || '/images/placeholder-service.jpg'}" 
                                 alt="${service.serviceName}" 
                                 class="w-100 h-100" 
                                 style="object-fit: cover; transition: transform 0.3s ease;"
                                 onerror="this.src='/images/placeholder-service.jpg'">
                            
                            <!-- Bookmark Button -->
                            <button class="btn btn-sm position-absolute bg-white shadow-sm" 
                                    style="top: 10px; right: 10px; border-radius: 50%; width: 32px; height: 32px; padding: 0; border: none; transition: all 0.2s ease;">
                                <i class="far fa-bookmark text-muted" style="font-size: 0.85rem;"></i>
                            </button>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body p-3 bg-white">
                            <!-- Title & Rating Row -->
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="font-weight-bold text-dark mb-0" style="font-size: 0.95rem; line-height: 1.3; flex: 1;">
                                    ${service.serviceName}
                                </h6>
                                <div class="d-flex align-items-center ml-2">
                                    <i class="fas fa-star text-warning" style="font-size: 0.75rem;"></i>
                                    <span class="font-weight-bold text-dark ml-1" style="font-size: 0.8rem;">${rating}</span>
                                    <span class="text-muted" style="font-size: 0.7rem;">/5</span>
                                </div>
                            </div>

                            <!-- Category & Provider Name Row -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge bg-light text-primary" style="font-size: 0.7rem; font-weight: 600; padding: 0.25rem 0.6rem; border-radius: 4px;">
                                    ${service.categoryName}
                                </span>
                                <span class="text-muted" style="font-size: 0.7rem;">
                                    ${service.providerName}
                                </span>
                            </div>

                            <!-- Join Date -->
                            <div class="d-flex align-items-center mb-2">
                                <i class="far fa-calendar text-muted" style="font-size: 0.75rem; width: 16px;"></i>
                                <span class="text-muted ml-2" style="font-size: 0.75rem;">Joined ${joinedDate}</span>
                            </div>

                            <!-- Location -->
                            ${shortAddress ? `
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-map-marker-alt text-muted" style="font-size: 0.75rem; width: 16px;"></i>
                                    <span class="text-muted ml-2" style="font-size: 0.75rem;">${shortAddress}</span>
                                </div>
                            ` : ''}

                            <!-- Working Days & Hours -->
                            ${service.workingDays && service.workingHours ? `
                                <div class="d-flex align-items-center mb-3">
                                    <i class="far fa-clock text-muted" style="font-size: 0.75rem; width: 16px;"></i>
                                    <span class="text-muted ml-2" style="font-size: 0.75rem;">${service.workingDays} ${service.workingHours}</span>
                                </div>
                            ` : ''}

                            <!-- Price & Book Button Row -->
                            <div class="d-flex justify-content-between align-items-center mt-auto pt-2">
                                <div>
                                    <small class="text-muted d-block" style="font-size: 0.65rem;">${pricingLabel}</small>
                                    <strong class="text-dark" style="font-size: 1.1rem; font-weight: 700;">${priceDisplay}</strong>
                                </div>
                                <button class="btn btn-primary btn-sm px-3 shadow-sm text-white" style="background-color: #005C89; border-color: #005C89; border-radius: 8px; font-weight: 600; font-size: 0.8rem;">
                                    Book Now
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }
    </script>

    <style>
        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12) !important;
        }

        .service-card:hover img {
            transform: scale(1.05);
        }

        .service-card .btn-primary:hover {
            background-color: #137DD6 !important;
            border-color: #137DD6 !important;
            transform: scale(1.02);
        }

        .service-card .bg-white.shadow-sm:hover i {
            color: #e53e3e !important;
        }
    </style>
}
