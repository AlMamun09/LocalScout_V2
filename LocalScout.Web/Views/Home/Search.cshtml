}

        function showEmptyState(isError = false) {
            const emptyEl = $('#servicesEmpty');
            const messageEl = $('#servicesEmptyMessage');

            if (isError) {
                messageEl.text('We could not load services right now. Please try again later.');
            } else if (searchFilters.query || searchFilters.categoryId) {
                messageEl.text('No services match your current filters.');
            } else {
                messageEl.text('Try adjusting your filters or search term.');
            }

            $('#servicesGrid').hide();
            emptyEl.show();
        }

        function updateSummary(resultCount) {
            const keywordText = searchFilters.query ? `"${searchFilters.query}"` : 'all services';
            const categoryText = searchFilters.categoryName || 'All categories';

            $('#searchKeywordText').text(keywordText);
            $('#activeCategoryText').text(categoryText);
            $('#resultsCount').text(resultCount || 0);
        }

        function syncCategoryButtons() {
            $('.category-filter-btn').each(function () {
                const btnCategory = $(this).data('category-id') ? $(this).data('category-id').toString() : '';
                const isActive = searchFilters.categoryId && btnCategory === searchFilters.categoryId;
                $(this).toggleClass('active', !!isActive);
            });
        }

        function toggleClearFilter() {
            const clearBtn = $('#clearCategoryFilter');
            if (searchFilters.categoryId) {
                clearBtn.removeClass('d-none');
            } else {
                clearBtn.addClass('d-none');
            }
        }

        function updateUrlState() {
            const params = new URLSearchParams(window.location.search);

            if (searchFilters.query) {
                params.set('query', searchFilters.query);
            } else {
                params.delete('query');
            }

            if (searchFilters.categoryId) {
                params.set('categoryId', searchFilters.categoryId);
            } else {
                params.delete('categoryId');
            }

            const newQuery = params.toString();
            const newUrl = newQuery ? `${window.location.pathname}?${newQuery}` : window.location.pathname;
            window.history.replaceState({}, '', newUrl);
        }
    </script>

