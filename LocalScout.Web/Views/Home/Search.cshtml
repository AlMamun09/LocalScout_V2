@using System.Text.Json
@using System.Linq
@model LocalScout.Application.DTOs.SearchPageDto

@{
    ViewData["Title"] = "Search Results";
    var initialQuery = Model.Query ?? string.Empty;
    var initialCategoryId = Model.SelectedCategoryId?.ToString() ?? string.Empty;
    var initialCategoryName = Model.SelectedCategoryName ?? string.Empty;
}

<!-- Search Header Section -->
<section class="position-relative overflow-hidden" 
         style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); padding: 1rem 0;">
    <!-- Decorative Elements -->
    <div class="position-absolute" style="top: -50px; right: -50px; width: 200px; height: 200px; background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, transparent 70%); border-radius: 50%;"></div>
    <div class="position-absolute" style="bottom: -50px; left: -50px; width: 250px; height: 250px; background: radial-gradient(circle, rgba(6, 182, 212, 0.1) 0%, transparent 70%); border-radius: 50%;"></div>
    
    <div class="container position-relative">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb bg-transparent p-0 mb-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index" class="text-white-50 text-decoration-none" style="font-size: 0.9rem;">
                                <i class="fas fa-home mr-1"></i>Home
                            </a>
                        </li>
                        <li class="breadcrumb-item active text-white" aria-current="page" style="font-size: 0.9rem;">Search Results</li>
                    </ol>
                </nav>
                
                <h1 class="text-white font-weight-bold mb-2" style="font-size: 2.5rem; letter-spacing: -0.5px; line-height: 1.2;">
                    Find Your Perfect Service
                </h1>
                <p class="text-white-50 mb-0" style="font-size: 1.05rem; line-height: 1.6;">
                    Browse through our curated list of trusted professionals
                </p>
            </div>
            
            <div class="col-lg-4 text-lg-right mt-3 mt-lg-0">
                <div class="d-inline-flex align-items-center px-4 py-2 rounded-pill" 
                     style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
                    <i class="fas fa-filter text-white mr-2"></i>
                    <span class="text-white font-weight-medium" style="font-size: 0.9rem;">Smart Filters Active</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Search Section -->
<section class="py-4" style="background: linear-gradient(180deg, #f0f4f8 0%, #e8f0f7 100%); min-height: 60vh;">
    <div class="container">
        <!-- Search Summary Card -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm" style="border-radius: 16px; overflow: hidden;">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <div class="mr-3">
                                        <div class="d-flex align-items-center justify-content-center" 
                                             style="width: 48px; height: 48px; background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); border-radius: 12px;">
                                            <i class="fas fa-search text-white" style="font-size: 1.2rem;"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="font-weight-bold mb-1" style="color: #1a202c; font-size: 1.1rem;">
                                            <span id="resultsCount">0</span> Services Found
                                        </h5>
                                        <p class="text-muted mb-0" style="font-size: 0.95rem;">
                                            Showing results for 
                                            <span class="font-weight-semibold text-primary" id="searchKeywordText"></span>
                                            <span class="mx-2">•</span>
                                            <span class="font-weight-medium" id="activeCategoryText"></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 text-md-right mt-3 mt-md-0">
                                <div class="d-flex flex-wrap justify-content-md-end align-items-center gap-2">
                                    <!-- Use Current Location Button -->
                                    <button class="btn btn-outline-primary" 
                                            type="button" 
                                            id="useLocationBtn"
                                            style="border-radius: 50px; padding: 0.5rem 1.25rem; font-weight: 600; font-size: 0.85rem;">
                                        <i class="fas fa-location-crosshairs mr-1" id="locationBtnIcon"></i>
                                        <span id="locationBtnText">Use Current Location</span>
                                    </button>
                                    
                                    <!-- Clear Location Button (hidden by default) -->
                                    <button class="btn btn-sm btn-outline-secondary d-none" 
                                            type="button" 
                                            id="clearLocationBtn"
                                            style="border-radius: 50px; padding: 0.5rem 1rem; font-weight: 600; font-size: 0.8rem;">
                                        <i class="fas fa-times mr-1"></i>Clear Location
                                    </button>
                                    
                                    <button class="btn btn-sm btn-outline-danger d-none" 
                                            type="button" 
                                            id="clearCategoryFilter"
                                            style="border-radius: 50px; padding: 0.5rem 1.25rem; font-weight: 600; font-size: 0.85rem;">
                                        <i class="fas fa-times mr-1"></i>Clear Filter
                                    </button>
                                </div>
                                
                                <!-- Location Status Indicator -->
                                <div id="locationStatus" class="mt-2" style="display: none;">
                                    <small class="text-success">
                                        <i class="fas fa-check-circle mr-1"></i>
                                        <span id="locationStatusText">Sorting by distance</span>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Main Content Area (RIGHT SIDE) -->
            <div class="col-lg-9 mb-4 mb-lg-0 order-lg-2">
                <!-- Loading State -->
                <div id="servicesLoading" class="text-center py-5">
                    <div class="position-relative d-inline-block mb-3">
                        <div class="spinner-border text-primary" role="status" style="width: 3.5rem; height: 3.5rem; border-width: 3px;">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <div class="position-absolute" style="top: 50%; left: 50%; transform: translate(-50%, -50%);">
                            <i class="fas fa-compass text-primary" style="font-size: 1.3rem; opacity: 0.4; animation: spin 2s linear infinite;"></i>
                        </div>
                    </div>
                    <p class="text-muted font-weight-medium mb-0" style="font-size: 1.05rem;">Searching for the best matches...</p>
                </div>

                <!-- Services Grid -->
                <div id="servicesGrid" class="row" style="display: none;"></div>

                <!-- Empty State -->
                <div id="servicesEmpty" class="text-center py-5" style="display: none;">
                    <div class="card border-0 shadow-sm p-5" style="border-radius: 20px; background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);">
                        <div class="mb-4">
                            <div class="position-relative d-inline-block">
                                <div class="position-absolute" style="top: 50%; left: 50%; transform: translate(-50%, -50%); width: 140px; height: 140px; background: radial-gradient(circle, rgba(107, 114, 128, 0.08) 0%, transparent 70%); border-radius: 50%;"></div>
                                <i class="fas fa-search-minus position-relative" style="font-size: 5rem; color: #cbd5e1;"></i>
                            </div>
                        </div>
                        <h4 class="font-weight-bold mb-2" style="color: #475569; font-size: 1.5rem;">No Services Found</h4>
                        <p class="text-muted mb-4" id="servicesEmptyMessage" style="font-size: 1rem; max-width: 450px; margin: 0 auto; line-height: 1.6;">
                            We couldn't find any services matching your criteria. Try adjusting your filters or search term.
                        </p>
                        <div class="d-flex justify-content-center gap-2">
                            <button class="btn btn-outline-primary px-4 py-2" 
                                    id="clearAllFiltersBtn"
                                    style="border-radius: 50px; font-weight: 600; font-size: 0.9rem;">
                                <i class="fas fa-redo mr-2"></i>Reset Filters
                            </button>
                            <a asp-controller="Home" asp-action="Index" 
                               class="btn btn-primary px-4 py-2" 
                               style="border-radius: 50px; font-weight: 600; font-size: 0.9rem; background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); border: none;">
                                <i class="fas fa-home mr-2"></i>Back to Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar Filters (LEFT SIDE) -->
            <div class="col-lg-3 mb-4 mb-lg-0 order-lg-1">
                <div class="sticky-top" style="top: 120px; z-index: 10;">
                    <div class="card border-0 shadow-sm" style="border-radius: 16px; overflow: hidden;">
                        <!-- Header -->
                        <div class="p-4" style="background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%); border-bottom: 1px solid #e5e7eb;">
                            <div class="d-flex align-items-center justify-content-between mb-2">
                                <h6 class="mb-0 font-weight-bold" style="color: #1a202c; font-size: 1rem;">
                                    <i class="fas fa-sliders-h mr-2" style="color: #3b82f6;"></i>Filter Categories
                                </h6>
                            </div>
                            <p class="text-muted mb-0" style="font-size: 0.8rem;">Refine your search results</p>
                        </div>
                        
                        <!-- Category List -->
                        <div class="card-body p-0" style="max-height: 500px; overflow-y: auto;">
                            <div class="list-group list-group-flush" id="categoryFilters">
                                <button type="button" 
                                        class="list-group-item list-group-item-action border-0 category-filter-btn" 
                                        data-category-id="" 
                                        data-category-name=""
                                        style="padding: 1rem 1.5rem; transition: all 0.2s; border-left: 3px solid transparent !important;">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <span class="font-weight-medium" style="font-size: 0.9rem;">All Categories</span>
                                        <i class="fas fa-chevron-right" style="font-size: 0.75rem; color: #cbd5e1;"></i>
                                    </div>
                                </button>
                                @foreach (var category in Model.Categories.OrderBy(c => c.CategoryName))
                                {
                                    <button type="button" 
                                            class="list-group-item list-group-item-action border-0 category-filter-btn" 
                                            data-category-id="@category.ServiceCategoryId" 
                                            data-category-name="@category.CategoryName"
                                            style="padding: 1rem 1.5rem; transition: all 0.2s; border-left: 3px solid transparent !important;">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <span class="font-weight-medium" style="font-size: 0.9rem;">@category.CategoryName</span>
                                            <i class="fas fa-chevron-right" style="font-size: 0.75rem; color: #cbd5e1;"></i>
                                        </div>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        const searchFilters = {
            query: @Html.Raw(JsonSerializer.Serialize(initialQuery)),
            categoryId: @Html.Raw(JsonSerializer.Serialize(initialCategoryId)),
            categoryName: @Html.Raw(JsonSerializer.Serialize(initialCategoryName)),
            latitude: null,
            longitude: null,
            isUsingLocation: false
        };

        // Location state
        let locationState = {
            isLoading: false,
            hasLocation: false,
            error: null
        };

        $(document).ready(function () {
            updateSummary(0);
            syncCategoryButtons();
            toggleClearFilter();
            fetchSearchResults();

            $('#categoryFilters').on('click', '.category-filter-btn', function () {
                const categoryId = $(this).data('category-id') ? $(this).data('category-id').toString() : '';
                const categoryName = $(this).data('category-name') || '';

                if (searchFilters.categoryId === categoryId) {
                    searchFilters.categoryId = '';
                    searchFilters.categoryName = '';
                } else {
                    searchFilters.categoryId = categoryId;
                    searchFilters.categoryName = categoryName;
                }

                syncCategoryButtons();
                toggleClearFilter();
                updateUrlState();
                fetchSearchResults();
            });

            $('#clearCategoryFilter, #clearAllFiltersBtn').on('click', function () {
                searchFilters.categoryId = '';
                searchFilters.categoryName = '';
                syncCategoryButtons();
                toggleClearFilter();
                updateUrlState();
                fetchSearchResults();
            });

            // Use Current Location button click handler
            $('#useLocationBtn').on('click', function () {
                if (locationState.isLoading) return;
                
                requestUserLocation();
            });

            // Clear Location button click handler
            $('#clearLocationBtn').on('click', function () {
                clearUserLocation();
            });
        });

        // Request user's current location
        function requestUserLocation() {
            // Check if geolocation is supported
            if (!navigator.geolocation) {
                showLocationError('Geolocation is not supported by your browser.');
                return;
            }

            // Update UI to loading state
            setLocationLoading(true);

            // Request location with options
            const options = {
                enableHighAccuracy: true,
                timeout: 10000,
                maximumAge: 60000 // Cache for 1 minute
            };

            navigator.geolocation.getCurrentPosition(
                handleLocationSuccess,
                handleLocationError,
                options
            );
        }

        // Handle successful location retrieval
        function handleLocationSuccess(position) {
            const { latitude, longitude } = position.coords;

            // Update search filters with coordinates
            searchFilters.latitude = latitude;
            searchFilters.longitude = longitude;
            searchFilters.isUsingLocation = true;

            // Update state
            locationState.hasLocation = true;
            locationState.error = null;

            // Update UI
            setLocationLoading(false);
            showLocationActive();

            // Refetch results with location
            fetchSearchResults();
        }

        // Handle location retrieval errors
        function handleLocationError(error) {
            setLocationLoading(false);

            let errorMessage = 'Unable to retrieve your location.';

            switch (error.code) {
                case error.PERMISSION_DENIED:
                    errorMessage = 'Location access denied. Please enable location permissions in your browser settings.';
                    break;
                case error.POSITION_UNAVAILABLE:
                    errorMessage = 'Location information is unavailable. Please try again.';
                    break;
                case error.TIMEOUT:
                    errorMessage = 'Location request timed out. Please try again.';
                    break;
            }

            showLocationError(errorMessage);
        }

        // Set loading state for location button
        function setLocationLoading(isLoading) {
            locationState.isLoading = isLoading;
            const btn = $('#useLocationBtn');
            const icon = $('#locationBtnIcon');
            const text = $('#locationBtnText');

            if (isLoading) {
                btn.prop('disabled', true);
                icon.removeClass('fa-location-crosshairs').addClass('fa-spinner fa-spin');
                text.text('Getting Location...');
            } else {
                btn.prop('disabled', false);
                icon.removeClass('fa-spinner fa-spin').addClass('fa-location-crosshairs');
                
                if (!locationState.hasLocation) {
                    text.text('Use Current Location');
                }
            }
        }

        // Show location active state
        function showLocationActive() {
            const btn = $('#useLocationBtn');
            const icon = $('#locationBtnIcon');
            const text = $('#locationBtnText');
            const clearBtn = $('#clearLocationBtn');
            const statusDiv = $('#locationStatus');

            // Update button appearance
            btn.removeClass('btn-outline-primary btn-outline-danger').addClass('btn-primary');
            icon.removeClass('fa-location-crosshairs fa-exclamation-triangle').addClass('fa-check');
            text.text('Location Active');

            // Show clear location button
            clearBtn.removeClass('d-none');

            // Show status indicator with proper HTML structure
            statusDiv.show();
            statusDiv.html(`
                <small class="text-success">
                    <i class="fas fa-check-circle mr-1"></i>
                    <span>Sorting services by distance (nearest first)</span>
                </small>
            `);
        }

        // Clear user location
        function clearUserLocation() {
            // Reset filters
            searchFilters.latitude = null;
            searchFilters.longitude = null;
            searchFilters.isUsingLocation = false;

            // Reset state
            locationState.hasLocation = false;
            locationState.error = null;

            // Reset UI
            resetLocationButton();

            // Refetch results without location
            fetchSearchResults();
        }

        // Reset location button to default state
        function resetLocationButton() {
            const btn = $('#useLocationBtn');
            const icon = $('#locationBtnIcon');
            const text = $('#locationBtnText');
            const clearBtn = $('#clearLocationBtn');
            const statusDiv = $('#locationStatus');

            // Reset button appearance
            btn.removeClass('btn-primary btn-danger').addClass('btn-outline-primary');
            icon.removeClass('fa-check fa-exclamation-triangle').addClass('fa-location-crosshairs');
            text.text('Use Current Location');
            btn.prop('disabled', false);

            // Hide clear button and status
            clearBtn.addClass('d-none');
            statusDiv.hide();
        }

        // Show location error
        function showLocationError(message) {
            locationState.error = message;

            const btn = $('#useLocationBtn');
            const text = $('#locationBtnText');
            const statusDiv = $('#locationStatus');

            // Briefly show error on button
            text.text('Location Failed');
            btn.addClass('btn-outline-danger').removeClass('btn-outline-primary');

            // Show error in status (replace the entire content to remove green check icon)
            statusDiv.show();
            statusDiv.html(`
                <small class="text-danger">
                    <i class="fas fa-exclamation-circle mr-1"></i>
                    <span>${message}</span>
                </small>
            `);

            // Reset after 4 seconds
            setTimeout(function() {
                if (!locationState.hasLocation) {
                    resetLocationButton();
                    statusDiv.hide();
                }
            }, 4000);
        }

        function fetchSearchResults() {
            const loadingEl = $('#servicesLoading');
            const gridEl = $('#servicesGrid');
            const emptyEl = $('#servicesEmpty');

            loadingEl.show();
            gridEl.hide();
            emptyEl.hide();

            const params = {
                take: 30,
                query: searchFilters.query
            };

            if (searchFilters.categoryId) {
                params.categoryId = searchFilters.categoryId;
            }

            // Add location parameters if available
            if (searchFilters.latitude !== null && searchFilters.longitude !== null) {
                params.latitude = searchFilters.latitude;
                params.longitude = searchFilters.longitude;
            }

            $.ajax({
                url: '@Url.Action("SearchServices", "Home")',
                type: 'GET',
                data: params,
                success: function (response) {
                    loadingEl.hide();

                    if (response.success && response.data && response.data.length > 0) {
                        renderServiceCards(response.data);
                        updateSummary(response.data.length);
                        gridEl.show();
                    } else {
                        updateSummary(0);
                        showEmptyState();
                    }
                },
                error: function () {
                    loadingEl.hide();
                    updateSummary(0);
                    showEmptyState(true);
                }
            });
        }

        function renderServiceCards(services) {
            const grid = $('#servicesGrid');
            grid.empty();

            services.forEach(function (service) {
                const card = createServiceCard(service);
                grid.append(card);
            });
        }

        function createServiceCard(service) {
            const joinedDate = new Date(service.providerJoinedDate).toLocaleDateString('en-US', {
                month: 'short',
                day: 'numeric',
                year: 'numeric'
            });

            // Dynamic rating handling
            const hasRating = service.rating !== null && service.rating !== undefined;
            const rating = hasRating ? service.rating.toFixed(1) : null;
            
            // Format distance
            let distanceDisplay = '';
            if (service.distanceInKm !== null && service.distanceInKm !== undefined) {
                if (service.distanceInKm < 1) {
                    distanceDisplay = `${Math.round(service.distanceInKm * 1000)}m away`;
                } else {
                    distanceDisplay = `${service.distanceInKm.toFixed(1)}km away`;
                }
            }
     
     // Build price display with unit (matching Index page format)
     const pricingUnit = service.pricingUnit === 'Per Hour' ? 'Tk/Hour' : 
                         service.pricingUnit === 'Per Day' ? 'Tk/Day' : 
                         service.pricingUnit === 'Per Project' ? 'Tk/Project' : 'Tk';
     const priceWithUnit = `${service.minPrice.toLocaleString()} ${pricingUnit}`;

    let shortAddress = service.providerLocation;
    if (shortAddress) {
        let commaCount = 0;
        let endIndex = -1;

        for (let i = 0; i < shortAddress.length; i++) {
            if (shortAddress[i] === ',') {
                commaCount++;
                if (commaCount === 2) {
                    endIndex = i;
                    break;
                }
            }
        }

        if (endIndex > 0) {
            shortAddress = shortAddress.substring(0, endIndex).trim();
        }

        if (shortAddress.length > 30) {
            shortAddress = shortAddress.substring(0, 30) + '...';
        }
    }

    const serviceDetailsUrl = `/Service/Details/${service.serviceId}`;

    // Rating HTML (dynamic based on availability)
    let ratingHtml;
    if (hasRating) {
        ratingHtml = `
            <i class="fas fa-star text-warning" style="font-size: 0.75rem;"></i>
            <span class="font-weight-bold text-dark ml-1" style="font-size: 0.8rem;">${rating}</span>
            <span class="text-muted" style="font-size: 0.7rem;">/5</span>
        `;
    } else {
        ratingHtml = `
            <i class="far fa-star text-muted" style="font-size: 0.75rem;"></i>
            <span class="text-muted ml-1" style="font-size: 0.7rem;">No Rating</span>
        `;
    }

    // Show distance badge prominently when location sorting is active
    const isLocationActive = searchFilters.isUsingLocation && distanceDisplay;
    const distanceBadgeHtml = isLocationActive ? 
        `<span class="badge badge-primary ml-2" style="font-size: 0.7rem; font-weight: 600;">${distanceDisplay}</span>` : 
        (distanceDisplay ? `<span class="text-primary ml-2 font-weight-bold" style="font-size: 0.7rem;">${distanceDisplay}</span>` : '');

    return `
        <div class="col-12 col-md-6 col-lg-4 mb-4">
            <a href="${serviceDetailsUrl}" class="text-decoration-none d-block h-100">
            <div class="card h-100 border-0 shadow-sm service-card" style="border-radius: 16px; overflow: hidden; transition: all 0.3s ease; cursor: pointer;">
                <div class="position-relative" style="height: 200px; overflow: hidden;">
                    <img src="${service.firstImagePath || '/images/placeholder-service.jpg'}"
                         alt="${service.serviceName}"
                         class="w-100 h-100"
                         style="object-fit: cover; transition: transform 0.3s ease;"
                         onerror="this.src='/images/placeholder-service.jpg'">
                    ${isLocationActive ? `
                        <div class="position-absolute" style="top: 10px; left: 10px;">
                            <span class="badge shadow-sm" style="background: rgba(59, 130, 246, 0.95); color: white; font-size: 0.7rem; font-weight: 600; padding: 0.4rem 0.6rem; border-radius: 6px;">
                                <i class="fas fa-location-arrow mr-1"></i>${distanceDisplay}
                            </span>
                        </div>
                    ` : ''}
                </div>
                <div class="card-body p-3 bg-white d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h6 class="font-weight-bold text-dark mb-0" style="font-size: 0.95rem; line-height: 1.3; flex: 1;">
                            ${service.serviceName}
                        </h6>
                        <div class="d-flex align-items-center ml-2">
                            ${ratingHtml}
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="badge bg-light text-primary" style="font-size: 0.7rem; font-weight: 600; padding: 0.25rem 0.6rem; border-radius: 4px;">
                            ${service.categoryName}
                        </span>
                        <span class="text-muted" style="font-size: 0.7rem;">
                            ${service.providerName}
                        </span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="far fa-calendar text-muted" style="font-size: 0.75rem; width: 16px;"></i>
                        <span class="text-muted ml-2" style="font-size: 0.75rem;">Joined ${joinedDate}</span>
                    </div>
                    ${shortAddress ? `
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <div class="d-flex align-items-center flex-grow-1" style="min-width: 0;">
                                <i class="fas fa-map-marker-alt text-muted" style="font-size: 0.75rem; width: 16px; flex-shrink: 0;"></i>
                                <span class="text-muted ml-2 text-truncate" style="font-size: 0.75rem;">${shortAddress}</span>
                            </div>
                            ${!isLocationActive && distanceDisplay ? `<span class="text-primary ml-2 font-weight-bold flex-shrink-0" style="font-size: 0.7rem;">${distanceDisplay}</span>` : ''}
                         </div>
                     ` : ''}
                    ${service.workingDays && service.workingHours ? `
                        <div class="d-flex align-items-center mb-3">
                            <i class="far fa-clock text-muted" style="font-size: 0.75rem; width: 16px;"></i>
