@using System.Text.Json
@using System.Linq
@model LocalScout.Application.DTOs.SearchPageDto

@{
    ViewData["Title"] = "Search Results";
    var initialQuery = Model.Query ?? string.Empty;
    var initialCategoryId = Model.SelectedCategoryId?.ToString() ?? string.Empty;
    var initialCategoryName = Model.SelectedCategoryName ?? string.Empty;
}

<!-- Search Header Section -->
<section class="position-relative overflow-hidden" 
         style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); padding: 1rem 0;">
    <!-- Decorative Elements -->
    <div class="position-absolute" style="top: -50px; right: -50px; width: 200px; height: 200px; background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, transparent 70%); border-radius: 50%;"></div>
    <div class="position-absolute" style="bottom: -50px; left: -50px; width: 250px; height: 250px; background: radial-gradient(circle, rgba(6, 182, 212, 0.1) 0%, transparent 70%); border-radius: 50%;"></div>
    
    <div class="container position-relative">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb bg-transparent p-0 mb-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index" class="text-white-50 text-decoration-none" style="font-size: 0.9rem;">
                                <i class="fas fa-home mr-1"></i>Home
                            </a>
                        </li>
                        <li class="breadcrumb-item active text-white" aria-current="page" style="font-size: 0.9rem;">Search Results</li>
                    </ol>
                </nav>
                
                <h1 class="text-white font-weight-bold mb-2" style="font-size: 2.5rem; letter-spacing: -0.5px; line-height: 1.2;">
                    Find Your Perfect Service
                </h1>
                <p class="text-white-50 mb-0" style="font-size: 1.05rem; line-height: 1.6;">
                    Browse through our curated list of trusted professionals
                </p>
            </div>
            
            <div class="col-lg-4 text-lg-right mt-3 mt-lg-0">
                <div class="d-inline-flex align-items-center px-4 py-2 rounded-pill" 
                     style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
                    <i class="fas fa-filter text-white mr-2"></i>
                    <span class="text-white font-weight-medium" style="font-size: 0.9rem;">Smart Filters Active</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Search Section -->
<section class="py-4" style="background: linear-gradient(180deg, #f0f4f8 0%, #e8f0f7 100%); min-height: 60vh;">
    <div class="container">
        <!-- Search Summary Card -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm" style="border-radius: 16px; overflow: hidden;">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <div class="mr-3">
                                        <div class="d-flex align-items-center justify-content-center" 
                                             style="width: 48px; height: 48px; background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); border-radius: 12px;">
                                            <i class="fas fa-search text-white" style="font-size: 1.2rem;"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="font-weight-bold mb-1" style="color: #1a202c; font-size: 1.1rem;">
                                            <span id="resultsCount">0</span> Services Found
                                        </h5>
                                        <p class="text-muted mb-0" style="font-size: 0.95rem;">
                                            Showing results for 
                                            <span class="font-weight-semibold text-primary" id="searchKeywordText"></span>
                                            <span class="mx-2">|</span>
                                            <span class="font-weight-medium" id="activeCategoryText"></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 text-md-right mt-3 mt-md-0">
                                <div class="d-flex flex-wrap justify-content-md-end align-items-center gap-2">
                                    <button class="btn btn-outline-primary" type="button" id="useLocationBtn"
                                            style="border-radius: 50px; padding: 0.5rem 1.25rem; font-weight: 600; font-size: 0.85rem;">
                                        <i class="fas fa-location-crosshairs mr-1" id="locationBtnIcon"></i>
                                        <span id="locationBtnText">Use Current Location</span>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary d-none" type="button" id="clearLocationBtn"
                                            style="border-radius: 50px; padding: 0.5rem 1rem; font-weight: 600; font-size: 0.8rem;">
                                        <i class="fas fa-times mr-1"></i>Clear Location
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger d-none" type="button" id="clearCategoryFilter"
                                            style="border-radius: 50px; padding: 0.5rem 1.25rem; font-weight: 600; font-size: 0.85rem;">
                                        <i class="fas fa-times mr-1"></i>Clear Filter
                                    </button>
                                </div>
                                <div id="locationStatus" class="mt-2" style="display: none;">
                                    <small class="text-success">
                                        <i class="fas fa-check-circle mr-1"></i>
                                        <span id="locationStatusText">Sorting by distance</span>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Main Content Area -->
            <div class="col-lg-9 mb-4 mb-lg-0 order-lg-2">
                <div id="servicesLoading" class="text-center py-5">
                    <div class="position-relative d-inline-block mb-3">
                        <div class="spinner-border text-primary" role="status" style="width: 3.5rem; height: 3.5rem; border-width: 3px;">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                    <p class="text-muted font-weight-medium mb-0" style="font-size: 1.05rem;">Searching for the best matches...</p>
                </div>

                <div id="servicesGrid" class="row" style="display: none;"></div>

                <div id="servicesEmpty" class="text-center py-5" style="display: none;">
                    <div class="card border-0 shadow-sm p-5" style="border-radius: 20px;">
                        <div class="mb-4">
                            <i class="fas fa-search-minus" style="font-size: 5rem; color: #cbd5e1;"></i>
                        </div>
                        <h4 class="font-weight-bold mb-2" style="color: #475569;">No Services Found</h4>
                        <p class="text-muted mb-4" id="servicesEmptyMessage">
                            We couldn't find any services matching your criteria.
                        </p>
                        <div class="d-flex justify-content-center gap-2">
                            <button class="btn btn-outline-primary px-4 py-2" id="clearAllFiltersBtn" style="border-radius: 50px; font-weight: 600;">
                                <i class="fas fa-redo mr-2"></i>Reset Filters
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4 py-2" style="border-radius: 50px; font-weight: 600;">
                                <i class="fas fa-home mr-2"></i>Back to Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar Filters -->
            <div class="col-lg-3 mb-4 mb-lg-0 order-lg-1">
                <div class="sticky-top" style="top: 120px; z-index: 10;">
                    <div class="card border-0 shadow-sm" style="border-radius: 16px; overflow: hidden;">
                        <div class="p-4" style="background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%); border-bottom: 1px solid #e5e7eb;">
                            <h6 class="mb-0 font-weight-bold" style="color: #1a202c; font-size: 1rem;">
                                <i class="fas fa-sliders-h mr-2" style="color: #3b82f6;"></i>Filter Categories
                            </h6>
                            <p class="text-muted mb-0 mt-2" style="font-size: 0.8rem;">Refine your search results</p>
                        </div>
                        <div class="card-body p-0" style="max-height: 500px; overflow-y: auto;">
                            <div class="list-group list-group-flush" id="categoryFilters">
                                <button type="button" class="list-group-item list-group-item-action border-0 category-filter-btn" 
                                        data-category-id="" data-category-name=""
                                        style="padding: 1rem 1.5rem; transition: all 0.2s; border-left: 3px solid transparent !important;">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <span class="font-weight-medium" style="font-size: 0.9rem;">All Categories</span>
                                        <i class="fas fa-chevron-right" style="font-size: 0.75rem; color: #cbd5e1;"></i>
                                    </div>
                                </button>
                                @foreach (var category in Model.Categories.OrderBy(c => c.CategoryName))
                                {
                                    <button type="button" class="list-group-item list-group-item-action border-0 category-filter-btn" 
                                            data-category-id="@category.ServiceCategoryId" data-category-name="@category.CategoryName"
                                            style="padding: 1rem 1.5rem; transition: all 0.2s; border-left: 3px solid transparent !important;">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <span class="font-weight-medium" style="font-size: 0.9rem;">@category.CategoryName</span>
                                            <i class="fas fa-chevron-right" style="font-size: 0.75rem; color: #cbd5e1;"></i>
                                        </div>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        const searchFilters = {
            query: @Html.Raw(JsonSerializer.Serialize(initialQuery)),
            categoryId: @Html.Raw(JsonSerializer.Serialize(initialCategoryId)),
            categoryName: @Html.Raw(JsonSerializer.Serialize(initialCategoryName)),
            latitude: null,
            longitude: null,
            isUsingLocation: false
        };

        let locationState = { isLoading: false, hasLocation: false, error: null };

        $(document).ready(function () {
            updateSummary(0);
            syncCategoryButtons();
            toggleClearFilter();
            fetchSearchResults();

            $('#categoryFilters').on('click', '.category-filter-btn', function () {
                const categoryId = $(this).data('category-id') ? $(this).data('category-id').toString() : '';
                const categoryName = $(this).data('category-name') || '';
                if (searchFilters.categoryId === categoryId) {
                    searchFilters.categoryId = '';
                    searchFilters.categoryName = '';
                } else {
                    searchFilters.categoryId = categoryId;
                    searchFilters.categoryName = categoryName;
                }
                syncCategoryButtons();
                toggleClearFilter();
                updateUrlState();
                fetchSearchResults();
            });

            $('#clearCategoryFilter, #clearAllFiltersBtn').on('click', function () {
                searchFilters.categoryId = '';
                searchFilters.categoryName = '';
                syncCategoryButtons();
                toggleClearFilter();
                updateUrlState();
                fetchSearchResults();
            });

            $('#useLocationBtn').on('click', function () {
                if (locationState.isLoading) return;
                requestUserLocation();
            });

            $('#clearLocationBtn').on('click', function () {
                clearUserLocation();
            });
        });

        function requestUserLocation() {
            if (!navigator.geolocation) {
                showLocationError('Geolocation is not supported by your browser.');
                return;
            }
            setLocationLoading(true);
            navigator.geolocation.getCurrentPosition(handleLocationSuccess, handleLocationError,
                { enableHighAccuracy: true, timeout: 10000, maximumAge: 60000 });
        }

        function handleLocationSuccess(position) {
            searchFilters.latitude = position.coords.latitude;
            searchFilters.longitude = position.coords.longitude;
            searchFilters.isUsingLocation = true;
            locationState.hasLocation = true;
            setLocationLoading(false);
            showLocationActive();
            fetchSearchResults();
        }

        function handleLocationError(error) {
            setLocationLoading(false);
            let msg = 'Unable to retrieve your location.';
            if (error.code === error.PERMISSION_DENIED) msg = 'Location access denied.';
            else if (error.code === error.POSITION_UNAVAILABLE) msg = 'Location unavailable.';
            else if (error.code === error.TIMEOUT) msg = 'Location request timed out.';
            showLocationError(msg);
        }

        function setLocationLoading(isLoading) {
            locationState.isLoading = isLoading;
            const btn = $('#useLocationBtn'), icon = $('#locationBtnIcon'), text = $('#locationBtnText');
            if (isLoading) {
                btn.prop('disabled', true);
                icon.removeClass('fa-location-crosshairs').addClass('fa-spinner fa-spin');
                text.text('Getting Location...');
            } else {
                btn.prop('disabled', false);
                icon.removeClass('fa-spinner fa-spin').addClass('fa-location-crosshairs');
                if (!locationState.hasLocation) text.text('Use Current Location');
            }
        }

        function showLocationActive() {
            $('#useLocationBtn').removeClass('btn-outline-primary btn-outline-danger').addClass('btn-primary');
            $('#locationBtnIcon').removeClass('fa-location-crosshairs').addClass('fa-check');
            $('#locationBtnText').text('Location Active');
            $('#clearLocationBtn').removeClass('d-none');
            $('#locationStatus').show().html('<small class="text-success"><i class="fas fa-check-circle mr-1"></i>Sorting by distance</small>');
        }

        function clearUserLocation() {
            searchFilters.latitude = null;
            searchFilters.longitude = null;
            searchFilters.isUsingLocation = false;
            locationState.hasLocation = false;
            resetLocationButton();
            fetchSearchResults();
        }

        function resetLocationButton() {
            $('#useLocationBtn').removeClass('btn-primary btn-danger').addClass('btn-outline-primary').prop('disabled', false);
            $('#locationBtnIcon').removeClass('fa-check fa-exclamation-triangle').addClass('fa-location-crosshairs');
            $('#locationBtnText').text('Use Current Location');
            $('#clearLocationBtn').addClass('d-none');
            $('#locationStatus').hide();
        }

        function showLocationError(message) {
            $('#locationBtnText').text('Location Failed');
            $('#useLocationBtn').addClass('btn-outline-danger').removeClass('btn-outline-primary');
            $('#locationStatus').show().html('<small class="text-danger"><i class="fas fa-exclamation-circle mr-1"></i>' + message + '</small>');
            setTimeout(function() { if (!locationState.hasLocation) { resetLocationButton(); $('#locationStatus').hide(); } }, 4000);
        }

        function fetchSearchResults() {
            const loadingEl = $('#servicesLoading'), gridEl = $('#servicesGrid'), emptyEl = $('#servicesEmpty');
            loadingEl.show(); gridEl.hide(); emptyEl.hide();

            const params = { take: 50, query: searchFilters.query };
            if (searchFilters.categoryId) params.categoryId = searchFilters.categoryId;
            if (searchFilters.latitude !== null) params.latitude = searchFilters.latitude;
            if (searchFilters.longitude !== null) params.longitude = searchFilters.longitude;

            $.ajax({
                url: '@Url.Action("SearchServicesHtml", "Home")',
                type: 'GET',
                data: params,
                success: function (html) {
                    loadingEl.hide();
                    if (html && html.trim().length > 0) {
                        const cardCount = $(html).filter('.col-12').length;
                        if (cardCount > 0) {
                            gridEl.html(html);
                            updateSummary(cardCount);
                            gridEl.show();
                        } else {
                            updateSummary(0);
                            showEmptyState();
                        }
                    } else {
                        updateSummary(0);
                        showEmptyState();
                    }
                },
                error: function () {
                    loadingEl.hide();
                    updateSummary(0);
                    showEmptyState(true);
                }
            });
        }

        function showEmptyState(isError = false) {
            const msg = isError ? 'We could not load services right now.' : 
                        (searchFilters.query || searchFilters.categoryId) ? 'No services match your filters.' : 'Try adjusting your filters.';
            $('#servicesEmptyMessage').text(msg);
            $('#servicesGrid').hide();
            $('#servicesEmpty').show();
        }

        function updateSummary(resultCount) {
            $('#searchKeywordText').text(searchFilters.query ? '"' + searchFilters.query + '"' : 'all services');
            $('#activeCategoryText').text(searchFilters.categoryName || 'All categories');
            $('#resultsCount').text(resultCount || 0);
        }

        function syncCategoryButtons() {
            $('.category-filter-btn').each(function () {
                const btnCategory = $(this).data('category-id') ? $(this).data('category-id').toString() : '';
                $(this).toggleClass('active', searchFilters.categoryId && btnCategory === searchFilters.categoryId);
            });
        }

        function toggleClearFilter() {
            $('#clearCategoryFilter').toggleClass('d-none', !searchFilters.categoryId);
        }

        function updateUrlState() {
            const params = new URLSearchParams(window.location.search);
            searchFilters.query ? params.set('query', searchFilters.query) : params.delete('query');
            searchFilters.categoryId ? params.set('categoryId', searchFilters.categoryId) : params.delete('categoryId');
            const newUrl = params.toString() ? window.location.pathname + '?' + params.toString() : window.location.pathname;
            window.history.replaceState({}, '', newUrl);
        }
    </script>

    <style>
        .category-filter-btn { background: white; border-left: 3px solid transparent !important; }
        .category-filter-btn:hover { background: #f8f9fa !important; border-left-color: #cbd5e1 !important; }
        .category-filter-btn.active { background: linear-gradient(90deg, rgba(59, 130, 246, 0.08) 0%, rgba(59, 130, 246, 0.02) 100%) !important; border-left-color: #3b82f6 !important; }
        .category-filter-btn.active span { color: #1d4ed8; font-weight: 600; }
        .breadcrumb-item + .breadcrumb-item::before { color: rgba(255, 255, 255, 0.5); }
        #useLocationBtn { transition: all 0.3s ease; }
        #useLocationBtn.btn-primary { background: linear-gradient(135deg, #10b981 0%, #059669 100%) !important; border-color: transparent !important; }
        .gap-2 { gap: 0.5rem; }
    </style>
}
