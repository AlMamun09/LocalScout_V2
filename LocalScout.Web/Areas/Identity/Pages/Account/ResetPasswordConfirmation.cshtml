@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = "_AuthLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <style>
        .success-icon {
            font-size: 4rem;
            color: #28a745;
            margin-bottom: 20px;
            animation: successPulse 1s ease infinite;
        }

        @@keyframes successPulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }
        }

        .success-message {
            text-align: center;
            padding: 20px 0;
        }

        .success-message h3 {
            color: #28a745;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .success-message p {
            color: #6c757d;
            font-size: 0.9rem;
            line-height: 1.6;
            margin-bottom: 20px;
        }
    </style>
}

@section LeftPanelLink {
    <p style="margin: 0;">
        Need help?
        <a asp-page="./ForgotPassword">Reset password again</a>
    </p>
}

<div class="fade-in">
    <div class="success-message">
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h3>Password Reset Successfully!</h3>
        <p>
            Your password has been changed successfully.<br />
            You can now log in with your new password.
        </p>
        <div class="form-group mt-4">
            <a asp-page="./Login" class="btn btn-submit" style="width: 100%;">
                <i class="fas fa-sign-in-alt"></i>
                Log In Now
            </a>
        </div>
    </div>
</div>