@page
@model LoginModel
@{
  ViewData["Title"] = "Log in";
  Layout = "_AuthLayout.cshtml";
}
@section Styles {
  <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}
@section LeftPanelLink {
  <p style="margin: 0;">
    Don't have an account?
    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register here</a>
  </p>
}
<div class="fade-in">
  <h3 class="auth-heading">Log In to Your Account</h3>
  <form id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-group">
      <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
        placeholder="Your Email" />
      <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
      <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"
        placeholder="Password" type="password" />
      <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
      <div class="checkbox">
        <label asp-for="Input.RememberMe" class="form-label">
          <input class="form-check-input" asp-for="Input.RememberMe" />
          @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
      </div>
    </div>
    <div class="form-group">
      <button id="login-submit" type="submit" class="btn btn-next" style="width: 100%;">Log in</button>
    </div>
    <div class="form-group text-center mt-2">
      <p style="margin-bottom: 0; font-size: 0.8rem;">
        <a id="forgot-password" asp-page="./ForgotPassword"
          style="color: #007bff; text-decoration: none; font-weight: 500;">Forgot your password?</a>
      </p>
    </div>
  </form>
</div>
@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}