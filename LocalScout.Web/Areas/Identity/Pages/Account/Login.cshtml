@page
@model LoginModel
@{
  ViewData["Title"] = "Log in";
  Layout = "_AuthLayout.cshtml";
}

@section LeftPanelLink {
  <p class="m-0">
    Don't have an account?
    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
      class="text-white no-underline font-semibold pb-0.5 hover:opacity-80 transition-opacity">Register here</a>
  </p>
}

<div class="flex flex-col justify-center h-full">
  <div class="overflow-y-auto overflow-x-hidden scrollbar-none" style="max-height: calc(100vh - 160px);">
    <h3 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-blue-700 mb-4">Log In to
      Your Account</h3>

    <form id="account" method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

      <div class="form-group mb-3.5">
        <input asp-for="Input.Email"
          class="form-control w-full rounded-lg px-3 py-2 border-2 border-gray-200 transition-all focus:border-blue-500 focus:shadow-[0_0_0_0.15rem_rgba(0,123,255,0.15)] focus:outline-none text-sm"
          autocomplete="username" aria-required="true" placeholder="Your Email" />
        <span asp-validation-for="Input.Email" class="text-danger text-[0.65rem] mt-0.5 block"></span>
      </div>

      <div class="form-group mb-3.5">
        <input asp-for="Input.Password"
          class="form-control w-full rounded-lg px-3 py-2 border-2 border-gray-200 transition-all focus:border-blue-500 focus:shadow-[0_0_0_0.15rem_rgba(0,123,255,0.15)] focus:outline-none text-sm"
          autocomplete="current-password" aria-required="true" placeholder="Password" type="password" />
        <span asp-validation-for="Input.Password" class="text-danger text-[0.65rem] mt-0.5 block"></span>
      </div>

      <div class="form-group mb-3.5">
        <div class="checkbox">
          <label asp-for="Input.RememberMe"
            class="flex items-center gap-1.5 font-medium text-gray-700 cursor-pointer text-sm">
            <input class="form-check-input w-4 h-4 cursor-pointer border-2 border-gray-300 rounded"
              asp-for="Input.RememberMe" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
          </label>
        </div>
      </div>

      <div class="form-group mb-3.5">
        <button id="login-submit" type="submit"
          class="w-full rounded-lg px-4 py-2 font-semibold border-0 transition-all flex items-center justify-center gap-1.5 cursor-pointer text-sm bg-gradient-to-br from-blue-500 to-blue-700 text-white hover:from-blue-700 hover:to-blue-900 hover:-translate-y-0.5 hover:shadow-lg">
          Log in
        </button>
      </div>

      <div class="form-group text-center mt-2">
        <p class="mb-0 text-sm">
          <a id="forgot-password" asp-page="./ForgotPassword"
            class="text-blue-500 no-underline font-medium hover:opacity-80 transition-opacity">Forgot your password?</a>
        </p>
      </div>
    </form>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />

  <style>
    .form-check-input:checked {
      background-color: #007bff;
      border-color: #007bff;
    }

    /* Scrollbar hide */
    .scrollbar-none::-webkit-scrollbar {
      width: 0px;
      background: transparent;
    }

    .scrollbar-none {
      scrollbar-width: none;
      -ms-overflow-style: none;
    }
  </style>
}