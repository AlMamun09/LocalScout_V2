<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - LocalScout</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background-color: #f8f9fa;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
      padding: 8px;
      overflow: hidden;
    }

    .auth-container {
      display: flex;
      background-color: #fff;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      max-width: 1080px;
      width: 100%;
      height: 96vh;
      max-height: 96vh;
    }

    .auth-left {
      background: linear-gradient(135deg, #0062cc, #007bff);
      color: #fff;
      padding: 35px 25px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      text-align: center;
      width: 36%;
      position: relative;
    }

    /* Back to Home button inside auth-left */
    .back-to-home-left {
      position: absolute;
      top: 20px;
      left: 20px;
    }

    .back-to-home-left a {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      color: rgba(255, 255, 255, 0.9);
      text-decoration: none;
      font-size: 0.85rem;
      font-weight: 600;
      padding: 8px 12px;
      border-radius: 8px;
      transition: all 0.3s ease;
      background-color: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .back-to-home-left a:hover {
      color: #fff;
      background-color: rgba(255, 255, 255, 0.2);
      border-color: rgba(255, 255, 255, 0.3);
      transform: translateX(-2px);
    }

    .back-to-home-left a i {
      font-size: 0.9rem;
    }

    .auth-left-content {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      flex: 1;
    }

    .auth-left img {
      max-width: 120px;
      margin-bottom: 12px;
    }

    .auth-left h3 {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 10px;
    }

    .auth-left p {
      font-size: 0.95rem;
      line-height: 1.5;
      margin-bottom: 20px;
    }

    .auth-left-link {
      margin-top: 15px;
      padding-top: 15px;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
      font-size: 0.9rem;
    }

    .auth-left-link a {
      color: #fff;
      text-decoration: none;
      font-weight: 600;
      border-bottom: none;
      padding-bottom: 2px;
      transition: all 0.3s;
    }

    .auth-left-link a:hover {
      opacity: 0.8;
    }

    .auth-right {
      padding: 25px 35px;
      width: 64%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      overflow-y: hidden;
      overflow-x: hidden;
      max-height: 96vh;
    }

    /* Responsive */
    @@media (max-width: 768px) {
      .back-to-home-left {
        top: 15px;
        left: 15px;
      }

      .back-to-home-left a {
        padding: 6px 10px;
        font-size: 0.8rem;
      }

      .back-to-home-left a i {
        font-size: 0.85rem;
      }

      .auth-container {
        flex-direction: column;
        max-height: none;
        height: auto;
      }

      .auth-left {
        width: 100%;
        padding: 25px 15px;
        padding-top: 50px;
      }

      .auth-right {
        width: 100%;
        padding: 20px 15px;
        max-height: none;
      }

      body {
        padding: 5px;
        overflow: auto;
      }
    }

    @@media (max-width: 576px) {
      .back-to-home-left {
        top: 10px;
        left: 10px;
      }

      .back-to-home-left a {
        padding: 5px 8px;
        font-size: 0.75rem;
        gap: 4px;
      }
    }
  </style>
  @await RenderSectionAsync("Styles", required: false)
</head>

<body>
  <div class="auth-container">
    <!-- Left Column -->
    <div class="auth-left">
      <!-- Back to Home button -->
      <div class="back-to-home-left">
        <a href="/">
          <i class="fas fa-home"></i>
          <span>Back to Home</span>
        </a>
      </div>

      <!-- Main content centered -->
      <div class="auth-left-content">
        <img src="~/images/LocalScoutLogo.png" alt="LocalScout Logo" />
        <h3>Welcome to LocalScout</h3>
        <p>Find trusted local professionals right in your neighborhood.</p>

        @if (IsSectionDefined("LeftPanelLink"))
        {
          <div class="auth-left-link">
            @RenderSection("LeftPanelLink", required: false)
          </div>
        }
      </div>
    </div>

    <!-- Right Column (Renders the specific page) -->
    <div class="auth-right">
      @RenderBody()
    </div>
  </div>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>