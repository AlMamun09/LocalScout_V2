@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirm Your Email";
    Layout = "_AuthLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <style>
        .info-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            animation: infoPulse 2s ease infinite;
        }

            .info-icon.user {
                color: #007bff;
            }

            .info-icon.provider {
                color: #28a745;
            }

        @@keyframes infoPulse {
            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        .info-message {
            text-align: center;
            padding: 20px 0;
        }

            .info-message h3 {
                font-weight: 700;
                margin-bottom: 15px;
            }

                .info-message h3.user {
                    color: #007bff;
                }

                .info-message h3.provider {
                    color: #28a745;
                }

            .info-message p {
                color: #6c757d;
                font-size: 0.9rem;
                line-height: 1.6;
                margin-bottom: 20px;
            }

        .email-display {
            background-color: #f8f9fa;
            border: 2px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            margin: 20px 0;
            font-weight: 600;
            color: #495057;
        }

            .email-display.provider {
                background-color: #d4edda;
                border-color: #c3e6cb;
                color: #155724;
            }

        .welcome-badge {
            display: inline-block;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 8px 20px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 15px;
        }

            .welcome-badge.provider {
                background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);
            }

        .next-steps {
            background-color: #e7f3ff;
            border-left: 4px solid #007bff;
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
            text-align: left;
        }

            .next-steps.provider {
                background-color: #d4edda;
                border-left-color: #28a745;
            }

            .next-steps h4 {
                color: #007bff;
                font-size: 1rem;
                margin-bottom: 10px;
                font-weight: 600;
            }

            .next-steps.provider h4 {
                color: #28a745;
            }

            .next-steps ul {
                margin: 0;
                padding-left: 20px;
                color: #495057;
                font-size: 0.85rem;
            }

                .next-steps ul li {
                    margin-bottom: 8px;
                }
    </style>
}

@section LeftPanelLink {
    <p style="margin: 0;">
        Already confirmed?
        <a asp-page="./Login">Log in here</a>
    </p>
}

<div class="fade-in">
    <div class="info-message">
        @if (Model.IsProvider)
        {
            <div class="welcome-badge provider">
                <i class="fas fa-briefcase"></i> Service Provider Registration
            </div>
            <div class="info-icon provider">
                <i class="fas fa-store"></i>
            </div>
            <h3 class="provider">Welcome, Service Provider!</h3>
            <p>
                Thank you for registering as a service provider with LocalScout.<br />
                We've sent a confirmation email to:
            </p>
            <div class="email-display provider">
                <i class="fas fa-envelope"></i> @Model.Email
            </div>
            <p>
                Please check your inbox and click the confirmation link to verify your account.<br />
                Once confirmed, you can start creating your service listings and connecting with customers.
            </p>
        }
        else
        {
            <div class="welcome-badge">
                <i class="fas fa-user"></i> User Registration
            </div>
            <div class="info-icon user">
                <i class="fas fa-envelope"></i>
            </div>
            <h3 class="user">Check Your Email!</h3>
            <p>
                Thank you for registering with LocalScout.<br />
                We've sent a confirmation email to:
            </p>
            <div class="email-display">
                <i class="fas fa-envelope"></i> @Model.Email
            </div>
            <p>
                Please check your inbox and click the confirmation link to verify your account.<br />
                Once confirmed, you can start exploring and booking local services.
            </p>

        }

        <p style="font-size: 0.85rem; color: #888; margin-top: 20px;">
            <i class="fas fa-info-circle"></i>
            Didn't receive the email? Check your spam folder or contact support.
        </p>

        <div class="form-group mt-4">
            <a asp-page="./Login" class="btn btn-next" style="width: 100%;">
                <i class="fas fa-sign-in-alt"></i>
                Go to Login
            </a>
        </div>
    </div>
</div>