@page
@model ForgotPasswordModel
@{
  ViewData["Title"] = "Forgot Password";
  Layout = "_AuthLayout.cshtml";
}

@section LeftPanelLink {
  <p class="m-0">
    Remember your password?
    <a asp-page="./Login" class="text-white no-underline font-semibold pb-0.5 hover:opacity-80 transition-opacity">Log in
      here</a>
  </p>
}

<div class="overflow-y-auto overflow-x-hidden scrollbar-none" style="max-height: calc(100vh - 160px);">
  <h3 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-blue-700 mb-1">Forgot
    Your Password?</h3>
  <p class="text-gray-600 text-xs mb-4">Enter your email and we'll send you a reset link</p>

  <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

    <div class="form-group mb-3.5">
      <label asp-for="Input.Email" class="font-semibold text-gray-700 mb-1 text-xs block">Email Address</label>
      <div class="relative">
        <i class="fas fa-envelope absolute left-3 top-1/2 -translate-y-1/2 text-gray-600 text-sm"></i>
        <input asp-for="Input.Email"
          class="form-control w-full rounded-lg px-3 py-2 border-2 border-gray-200 transition-all focus:border-blue-500 focus:shadow-[0_0_0_0.15rem_rgba(0,123,255,0.15)] focus:outline-none text-sm pl-9"
          autocomplete="username" placeholder="your.email@example.com" />
      </div>
      <span asp-validation-for="Input.Email" class="text-danger text-[0.65rem] mt-0.5 block"></span>
    </div>

    <div class="form-group mb-3.5">
      <button type="submit"
        class="w-full rounded-lg px-4 py-2 font-semibold border-0 transition-all flex items-center justify-center gap-1.5 cursor-pointer text-sm bg-gradient-to-br from-blue-500 to-blue-700 text-white hover:from-blue-700 hover:to-blue-900 hover:-translate-y-0.5 hover:shadow-lg">
        <i class="fas fa-paper-plane"></i>
        Send Reset Link
      </button>
    </div>

    <div class="form-group text-center mt-2">
      <p class="mb-0 text-sm">
        <a asp-page="./Register"
          class="text-blue-500 no-underline font-medium hover:opacity-80 transition-opacity">Don't have an account?
          Register</a>
      </p>
    </div>
  </form>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />

  <style>
    /* Scrollbar hide */
    .scrollbar-none::-webkit-scrollbar {
      width: 0px;
      background: transparent;
    }

    .scrollbar-none {
      scrollbar-width: none;
      -ms-overflow-style: none;
    }
  </style>
}